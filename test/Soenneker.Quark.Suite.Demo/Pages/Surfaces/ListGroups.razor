@page "/surfaces/listgroups"

<PageTitle>List Group - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
        <section class="space-y-4">
            <Div Class="grid gap-6 lg:grid-cols-2">
                <DemoSection Title="Basic" Description="Simple list with optional disabled items."
                            Code="@(@"<ListGroup>
    <ListGroupItem>First item</ListGroupItem>
    <ListGroupItem>Second item</ListGroupItem>
    <ListGroupItem Disabled=""true"">Disabled item</ListGroupItem>
</ListGroup>")">
                <ListGroup>
                    <ListGroupItem>First item</ListGroupItem>
                    <ListGroupItem>Second item</ListGroupItem>
                    <ListGroupItem>Third item</ListGroupItem>
                    <ListGroupItem Disabled="true">Disabled item</ListGroupItem>
                </ListGroup>
            </DemoSection>

                <DemoSection Title="Flush" Description="Flush removes borders and rounded corners so items sit flush.">
                    <ListGroup Flush="true">
                    <ListGroupItem>Flush item 1</ListGroupItem>
                    <ListGroupItem>Flush item 2</ListGroupItem>
                    <ListGroupItem>Flush item 3</ListGroupItem>
                    </ListGroup>
                </DemoSection>
            </Div>
        </section>

        <section class="space-y-4">
            <Div Class="grid gap-6 lg:grid-cols-2">
                <DemoSection Title="Single selection" Description="@($"Selected: {_selectedItem}")">
                <ListGroup Mode="ListGroupMode.Selectable" @bind-SelectedItem="_selectedItem">
                    <ListGroupItem ItemName="option1">Option 1</ListGroupItem>
                    <ListGroupItem ItemName="option2">Option 2</ListGroupItem>
                    <ListGroupItem ItemName="option3">Option 3</ListGroupItem>
                    <ListGroupItem ItemName="option4" Disabled="true">Disabled</ListGroupItem>
                </ListGroup>
                </DemoSection>

                <DemoSection Title="Multiple selection" Description="@($"Selected count: {_selectedItems?.Count ?? 0}")">
                <ListGroup Mode="ListGroupMode.Selectable" SelectionMode="ListGroupSelectionMode.Multiple" @bind-SelectedItems="_selectedItems">
                    <ListGroupItem ItemName="multi1">Multi 1</ListGroupItem>
                    <ListGroupItem ItemName="multi2">Multi 2</ListGroupItem>
                    <ListGroupItem ItemName="multi3">Multi 3</ListGroupItem>
                    <ListGroupItem ItemName="multi4">Multi 4</ListGroupItem>
                    </ListGroup>
                </DemoSection>
            </Div>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Color variants" Description="Apply list-group-item-* classes for semantic colors.">
            <ListGroup>
                <ListGroupItem Class="list-group-item-primary">Primary</ListGroupItem>
                <ListGroupItem Class="list-group-item-success">Success</ListGroupItem>
                <ListGroupItem Class="list-group-item-danger">Danger</ListGroupItem>
                <ListGroupItem Class="list-group-item-warning">Warning</ListGroupItem>
                <ListGroupItem Class="list-group-item-info">Info</ListGroupItem>
            </ListGroup>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Scrollable" Description="Set Scrollable=true to constrain height and allow scrolling long lists.">
            <ListGroup Scrollable="true">
                @for (var i = 1; i <= 15; i++)
                {
                    <ListGroupItem>Scrollable Item @i</ListGroupItem>
                }
            </ListGroup>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Custom content" Description="Put any content inside ListGroupItem: headings, paragraphs, badges.">
            <ListGroup>
                <ListGroupItem>
                    <Div Class="flex w-full justify-between">
                        <H6 Margin="Margin.Is1.FromEnd">List group item heading</H6>
                        <Small TextColor="TextColor.Muted">3 days ago</Small>
                    </Div>
                    <Paragraph Margin="Margin.Is1.FromEnd">Some placeholder content.</Paragraph>
                    <Small>And some small print.</Small>
                </ListGroupItem>
                <ListGroupItem>
                    <Div Class="flex w-full justify-between">
                        <H6 Margin="Margin.Is1.FromEnd">Another item</H6>
                        <Small TextColor="TextColor.Muted">1 week ago</Small>
                    </Div>
                    <Paragraph Margin="Margin.Is1.FromEnd">More content with details.</Paragraph>
                </ListGroupItem>
            </ListGroup>
            </DemoSection>
        </section>
    </Div>
</Div>

@code {
    private string _selectedItem = "option1";
    private List<string>? _selectedItems = [];
}
