@page "/surfaces/alerts"

<PageTitle>Alert - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div>
        <Div Class="space-y-3">
            <H1 Class="text-4xl font-bold tracking-tight">Alert</H1>
            <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
                Displays a callout for important messages. Use <Code Inline="true" Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono">Variant</Code> or <Code Inline="true" Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono">BackgroundColor</Code> for styling.
            </Paragraph>
        </Div>
    </Div>

    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Variants" Description="Use AlertMessage and AlertDescription for title and body. Variants map to semantic states."
                        Code="@(@"<Alert Variant=""AlertVariant.Success"">
    <AlertMessage>Success</AlertMessage>
    <AlertDescription>Your changes have been saved.</AlertDescription>
</Alert>")">
                <Div Class="space-y-4">
                    <Alert Variant="AlertVariant.Default">
                        <AlertMessage>Default</AlertMessage>
                        <AlertDescription>A neutral alert for general messages.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Success">
                        <AlertMessage>Success</AlertMessage>
                        <AlertDescription>Your changes have been saved successfully.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Info">
                        <AlertMessage>Information</AlertMessage>
                        <AlertDescription>This feature is currently in beta.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Warning">
                        <AlertMessage>Warning</AlertMessage>
                        <AlertDescription>Your account is approaching its storage limit.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Danger">
                        <AlertMessage>Danger</AlertMessage>
                        <AlertDescription>Your session has expired. Please log in again.</AlertDescription>
                    </Alert>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Background colors" Description="Use BackgroundColor for solid color alerts without a title/description structure.">
                <Div Class="space-y-4">
                    <Alert BackgroundColor="BackgroundColor.Primary">Primary alert</Alert>
                    <Alert BackgroundColor="BackgroundColor.Success">Success alert</Alert>
                    <Alert BackgroundColor="BackgroundColor.Danger">Danger alert</Alert>
                    <Alert BackgroundColor="BackgroundColor.Warning">Warning alert</Alert>
                    <Alert BackgroundColor="BackgroundColor.Info">Info alert</Alert>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Accent border" Description="Set AccentBorder=true for a thick left border and tinted background."
                        Code="@(@"<Alert Variant=""AlertVariant.Info"" AccentBorder=""true"">
    <AlertMessage>Tip</AlertMessage>
    <AlertDescription>Customize via CSS variables.</AlertDescription>
</Alert>")">
                <Div Class="space-y-4">
                    <Alert Variant="AlertVariant.Warning" AccentBorder="true">
                        <AlertMessage>Note</AlertMessage>
                        <AlertDescription>Each component has its own namespace.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Info" AccentBorder="true">
                        <AlertMessage>Tip</AlertMessage>
                        <AlertDescription>Customize theme colors via CSS variables.</AlertDescription>
                    </Alert>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Dismissible" Description="Set Dismissible=true and OnDismiss to allow users to close the alert."
                        Code="@(@"<Alert Dismissible=""true"" OnDismiss=""HandleDismiss"">
    Dismissible alert content
</Alert>")">
                <Div Class="space-y-4">
                    <Alert BackgroundColor="BackgroundColor.Primary" Dismissible="true" OnDismiss="HandleDismiss">
                        Click the X to dismiss this alert.
                    </Alert>
                    <Alert Variant="AlertVariant.Success" Dismissible="true" OnDismiss="HandleDismiss">
                        Success alert with dismiss.
                    </Alert>
                </Div>
            </DemoSection>
        </section>
    </Div>
</Div>

@code {
    private async Task HandleDismiss() => await Task.CompletedTask;
}
