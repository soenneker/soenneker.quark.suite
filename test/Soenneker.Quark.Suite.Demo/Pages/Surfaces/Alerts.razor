@page "/surfaces/alerts"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Alerts</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates some of the common usages for the alerts library.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Alerts</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Alert BackgroundColor="@BackgroundColor.Primary">This is a primary alert!</Alert>
                    <Alert BackgroundColor="@BackgroundColor.Secondary">This is a secondary alert!</Alert>
                    <Alert BackgroundColor="@BackgroundColor.Success">This is a success alert!</Alert>
                    <Alert BackgroundColor="@BackgroundColor.Danger">This is a danger alert!</Alert>
                    <Alert BackgroundColor="@BackgroundColor.Warning">This is a warning alert!</Alert>
                    <Alert BackgroundColor="@BackgroundColor.Info">This is an info alert!</Alert>
                    <Alert BackgroundColor="@BackgroundColor.Light">This is a light alert!</Alert>
                    <Alert BackgroundColor="@BackgroundColor.Dark">This is a dark alert!</Alert>
                </Div>

                <CodeEditor ReadOnly="true" 
                            Language="@("html")" 
                            AutoHeight="true" Text="@(@"<Alert BackgroundColor=""@BackgroundColor.Primary"">This is a primary alert!</Alert>
<Alert BackgroundColor=""@BackgroundColor.Secondary"">This is a secondary alert!</Alert>
<Alert BackgroundColor=""@BackgroundColor.Success"">This is a success alert!</Alert>
<Alert BackgroundColor=""@BackgroundColor.Danger"">This is a danger alert!</Alert>
<Alert BackgroundColor=""@BackgroundColor.Warning"">This is a warning alert!</Alert>
<Alert BackgroundColor=""@BackgroundColor.Info"">This is an info alert!</Alert>
<Alert BackgroundColor=""@BackgroundColor.Light"">This is a light alert!</Alert>
<Alert BackgroundColor=""@BackgroundColor.Dark"">This is a dark alert!</Alert>")" />
            </Div>

            <Hr/>

            <Div>
                <H2>Dismissible Alerts</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Alert BackgroundColor="@BackgroundColor.Primary" Dismissible="true" OnDismiss="HandleDismiss">
                        This is a dismissible primary alert!
                    </Alert>
                    <Alert BackgroundColor="@BackgroundColor.Success" Dismissible="true" OnDismiss="HandleDismiss">
                        This is a dismissible success alert!
                    </Alert>
                    <Alert BackgroundColor="@BackgroundColor.Warning" Dismissible="true" OnDismiss="HandleDismiss">
                        This is a dismissible warning alert!
                    </Alert>
                </Div>

                <CodeEditor ReadOnly="true" 
                            Language="@("html")" 
                            AutoHeight="true" Text="@(@"<Alert BackgroundColor=""@BackgroundColor.Primary"" Dismissible=""true"" OnDismiss=""HandleDismiss"">
    This is a dismissible primary alert!
</Alert>
<Alert BackgroundColor=""@BackgroundColor.Success"" Dismissible=""true"" OnDismiss=""HandleDismiss"">
    This is a dismissible success alert!
</Alert>")" />
            </Div>

            <Hr/>

            <Div>
                <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is2.FromEnd">Use <code>Variant</code> for semantic styles (Default, Success, Info, Warning, Danger). Optional <code>AccentBorder</code> and <code>Icon</code> slot. Use <code>AlertMessage</code> and <code>AlertDescription</code> for title and body.</Paragraph>
                <Div Margin="Margin.Is3.FromEnd" Class="space-y-4">
                    <Alert Variant="AlertVariant.Default">
                        <AlertMessage>Default</AlertMessage>
                        <AlertDescription>A neutral alert for general informational messages.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Success">
                        <AlertMessage>Success</AlertMessage>
                        <AlertDescription>Your changes have been saved successfully.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Info">
                        <AlertMessage>Information</AlertMessage>
                        <AlertDescription>This feature is currently in beta. Some functionality may change.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Warning">
                        <AlertMessage>Warning</AlertMessage>
                        <AlertDescription>Your account is approaching its storage limit.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Danger">
                        <AlertMessage>Danger</AlertMessage>
                        <AlertDescription>Your session has expired. Please log in again.</AlertDescription>
                    </Alert>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>With Accent Border</H2>
                <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is2.FromEnd">Set <code>AccentBorder="true"</code> for a thick left border and tinted background.</Paragraph>
                <Div Margin="Margin.Is3.FromEnd" Class="space-y-4">
                    <Alert Variant="AlertVariant.Warning" AccentBorder="true">
                        <AlertMessage>Note</AlertMessage>
                        <AlertDescription>Each component has its own namespace. Import only what you use.</AlertDescription>
                    </Alert>
                    <Alert Variant="AlertVariant.Info" AccentBorder="true">
                        <AlertMessage>Tip</AlertMessage>
                        <AlertDescription>You can customize theme colors via CSS variables in your theme file.</AlertDescription>
                    </Alert>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Alert with Custom Content</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Alert BackgroundColor="@BackgroundColor.Info" Dismissible="true" OnDismiss="HandleDismiss">
                        <H4 Class="alert-heading">Well done!</H4>
                        <Paragraph>Aww yeah, you successfully read this important alert message. This example text is going to run a bit longer so that you can see how spacing within an alert works with this kind of content.</Paragraph>
                        <Hr/>
                        <Paragraph Margin="Margin.Is0">Whenever you need to, be sure to use margin utilities to keep things nice and tidy.</Paragraph>
                    </Alert>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {

    protected override void OnInitialized()
    {
    }

    private async Task HandleDismiss()
    {
        await Task.CompletedTask;
    }

}
