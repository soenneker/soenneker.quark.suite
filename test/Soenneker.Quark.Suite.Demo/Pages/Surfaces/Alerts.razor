@page "/surfaces/alerts"

<PageTitle>Alert Component - Quark Suite</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div class="space-y-4">
        <DemoSection Title="Variants" Description="Five semantic variants for different message types." Code="@(@"<Alert Variant=""AlertVariant.Default""><AlertMessage>Default</AlertMessage><AlertDescription>A neutral alert for general informational messages.</AlertDescription></Alert>
<Alert Variant=""AlertVariant.Success""><AlertMessage>Success</AlertMessage><AlertDescription>Your changes have been saved successfully.</AlertDescription></Alert>
<Alert Variant=""AlertVariant.Info""><AlertMessage>Information</AlertMessage><AlertDescription>This feature is currently in beta.</AlertDescription></Alert>
<Alert Variant=""AlertVariant.Warning""><AlertMessage>Warning</AlertMessage><AlertDescription>Your account is approaching its storage limit.</AlertDescription></Alert>
<Alert Variant=""AlertVariant.Danger""><AlertMessage>Danger</AlertMessage><AlertDescription>Your session has expired. Please log in again.</AlertDescription></Alert>")">
            <div class="space-y-4">
                <Alert Variant="AlertVariant.Default"><AlertMessage>Default</AlertMessage><AlertDescription>A neutral alert for general informational messages.</AlertDescription></Alert>
                <Alert Variant="AlertVariant.Success"><AlertMessage>Success</AlertMessage><AlertDescription>Your changes have been saved successfully.</AlertDescription></Alert>
                <Alert Variant="AlertVariant.Info"><AlertMessage>Information</AlertMessage><AlertDescription>This feature is currently in beta.</AlertDescription></Alert>
                <Alert Variant="AlertVariant.Warning"><AlertMessage>Warning</AlertMessage><AlertDescription>Your account is approaching its storage limit.</AlertDescription></Alert>
                <Alert Variant="AlertVariant.Danger"><AlertMessage>Danger</AlertMessage><AlertDescription>Your session has expired. Please log in again.</AlertDescription></Alert>
            </div>
        </DemoSection>
    </div>

    <div class="space-y-4">
        <DemoSection Title="With Accent Border" Description="Use AccentBorder for a thick left border and tinted background." Code="@(@"<Alert Variant=""AlertVariant.Warning"" AccentBorder=""true""><AlertMessage>Note</AlertMessage><AlertDescription>Each component has its own namespace.</AlertDescription></Alert>
<Alert Variant=""AlertVariant.Info"" AccentBorder=""true""><AlertMessage>Tip</AlertMessage><AlertDescription>Customize theme colors via CSS variables.</AlertDescription></Alert>")">
            <div class="space-y-4">
                <Alert Variant="AlertVariant.Warning" AccentBorder="true"><AlertMessage>Note</AlertMessage><AlertDescription>Each component has its own namespace.</AlertDescription></Alert>
                <Alert Variant="AlertVariant.Info" AccentBorder="true"><AlertMessage>Tip</AlertMessage><AlertDescription>Customize theme colors via CSS variables.</AlertDescription></Alert>
                <Alert Variant="AlertVariant.Danger" AccentBorder="true"><AlertMessage>Breaking Change</AlertMessage><AlertDescription>The destructive variant now maps to danger semantics.</AlertDescription></Alert>
            </div>
        </DemoSection>
    </div>

    <div class="space-y-4">
        <DemoSection Title="Without Icons" Description="Set ShowDefaultIcon=false to hide icons for simpler messages." Code="@(@"<Alert ShowDefaultIcon=""false""><AlertMessage>Heads up!</AlertMessage><AlertDescription>You can add components to your app using the CLI.</AlertDescription></Alert>
<Alert Variant=""AlertVariant.Warning"" AccentBorder=""true"" ShowDefaultIcon=""false""><AlertMessage>Reminder</AlertMessage><AlertDescription>Save your work before leaving the page.</AlertDescription></Alert>")">
            <div class="space-y-4">
                <Alert ShowDefaultIcon="false"><AlertMessage>Heads up!</AlertMessage><AlertDescription>You can add components to your app using the CLI.</AlertDescription></Alert>
                <Alert Variant="AlertVariant.Warning" AccentBorder="true" ShowDefaultIcon="false"><AlertMessage>Reminder</AlertMessage><AlertDescription>Save your work before leaving the page.</AlertDescription></Alert>
            </div>
        </DemoSection>
    </div>

    <div class="space-y-4">
        <DemoSection Title="Custom Styling" Description="Use Class to create custom styled alerts." Code="@(@"<Alert Class=""border-purple-500/30 bg-purple-500/10"">
    <AlertMessage>New Feature</AlertMessage>
    <AlertDescription>A custom-styled alert using the Class parameter.</AlertDescription>
</Alert>
<Alert Class=""border-pink-500/30 bg-gradient-to-r from-pink-500/10 to-purple-500/10"">
    <AlertMessage>Brand Alert</AlertMessage>
    <AlertDescription>Alerts can be styled with gradients and custom colors.</AlertDescription>
</Alert>")">
            <div class="space-y-4">
                <Alert Class="border-purple-500/30 bg-purple-500/10">
                    <AlertMessage>New Feature</AlertMessage>
                    <AlertDescription>A custom-styled alert using the Class parameter.</AlertDescription>
                </Alert>
                <Alert Class="border-pink-500/30 bg-gradient-to-r from-pink-500/10 to-purple-500/10">
                    <AlertMessage>Brand Alert</AlertMessage>
                    <AlertDescription>Alerts can be styled with gradients and custom colors.</AlertDescription>
                </Alert>
            </div>
        </DemoSection>
    </div>

    <div class="space-y-4">
        <DemoSection Title="Dismissible" Description="Dismissible alerts with close affordance." Code="@(@"<Alert Variant=""AlertVariant.Default"" Dismissible=""true"" OnDismiss=""HandleDismiss"">
    <AlertMessage>Dismissible Alert</AlertMessage>
    <AlertDescription>Click X to dismiss this alert.</AlertDescription>
</Alert>")">
            <div class="space-y-4">
                <Alert Variant="AlertVariant.Default" Dismissible="true" OnDismiss="HandleDismiss">
                    <AlertMessage>Dismissible Alert</AlertMessage>
                    <AlertDescription>Click X to dismiss this alert.</AlertDescription>
                </Alert>
            </div>
        </DemoSection>
    </div>
</div>

@code {
    private async Task HandleDismiss() => await Task.CompletedTask;
}
