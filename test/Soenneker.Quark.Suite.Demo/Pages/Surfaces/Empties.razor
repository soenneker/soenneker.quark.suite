@page "/surfaces/empties"

<PageTitle>Empty - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Basic Empty State" Description="Simple empty state with title and description."
                        Code="@(@"<Empty>
    <EmptyHeader>
        <EmptyTitle>No results found</EmptyTitle>
        <EmptyDescription>Try adjusting your filters.</EmptyDescription>
    </EmptyHeader>
</Empty>")">
                <Empty Class="border border-border">
                    <EmptyHeader>
                        <EmptyTitle>No results found</EmptyTitle>
                        <EmptyDescription>Try adjusting your filters or search term.</EmptyDescription>
                    </EmptyHeader>
                </Empty>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="With Icon Media" Description="Use icon variant for visual emphasis."
                        Code="@(@"<Empty>
    <EmptyHeader>
        <EmptyMedia Variant=""EmptyMediaVariant.Icon"">ğŸ“</EmptyMedia>
        <EmptyTitle>No files yet</EmptyTitle>
        <EmptyDescription>Create your first file to get started.</EmptyDescription>
    </EmptyHeader>
</Empty>")">
                <Empty Class="border border-border">
                    <EmptyHeader>
                        <EmptyMedia Variant="EmptyMediaVariant.Icon">
                            <Span class="text-xl">ğŸ“</Span>
                        </EmptyMedia>
                        <EmptyTitle>No files yet</EmptyTitle>
                        <EmptyDescription>Create your first file to get started.</EmptyDescription>
                    </EmptyHeader>
                </Empty>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="With Actions" Description="Add CTA controls in EmptyContent."
                        Code="@(@"<Empty>
    <EmptyHeader>
        <EmptyTitle>No projects</EmptyTitle>
        <EmptyDescription>Create a project to organize your work.</EmptyDescription>
    </EmptyHeader>
    <EmptyContent>
        <Button Variant=""ButtonVariant.Default"">Create Project</Button>
    </EmptyContent>
</Empty>")">
                <Empty Class="border border-border">
                    <EmptyHeader>
                        <EmptyTitle>No projects</EmptyTitle>
                        <EmptyDescription>Create a project to organize your work.</EmptyDescription>
                    </EmptyHeader>
                    <EmptyContent>
                        <Button Variant="ButtonVariant.Default">Create Project</Button>
                        <Button Variant="ButtonVariant.Outline">Learn more</Button>
                    </EmptyContent>
                </Empty>
            </DemoSection>
        </section>
    </Div>
</Div>
