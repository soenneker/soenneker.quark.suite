@page "/surfaces/cards"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Cards</H1>
                <Paragraph Class="lead text-muted">This page demonstrates various card components and their configurations.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <ThemeHost></ThemeHost>

                <Row Gap="Gap.Is4">
                    <Column ColumnSize="@ColumnSize.Is4.OnLaptop">
                        <Card>
                            <CardImg Top Source="https://picsum.photos/640/360?random=1" alt="Random"/>
                            <CardBody>
                                <CardTitle>Elegant Card</CardTitle>
                                <CardSubtitle>A minimal subtitle</CardSubtitle>
                                <CardText>
                                    This is a clean and minimal card using Bootstrap 5 with subtle enhancements.
                                </CardText>
                                <a class="btn btn-primary" href="#">Action</a>
                            </CardBody>
                        </Card>
                    </Column>

                    <Column ColumnSize="@ColumnSize.Is4.OnLaptop">
                        <Card>
                            <CardHeader>
                                Featured
                            </CardHeader>
                            <CardBody>
                                <CardTitle>Header + Footer</CardTitle>
                                <CardText>
                                    Add headers and footers to structure content.
                                </CardText>
                            </CardBody>
                            <CardFooter>
                                <Small Class="text-muted">Updated moments ago</Small>
                            </CardFooter>
                        </Card>
                    </Column>

                    <Column ColumnSize="@ColumnSize.Is4.OnLaptop">
                        <Card>
                            <CardBody>
                                <CardTitle>Simple</CardTitle>
                                <CardText>
                                    Use cards for grouping content in a tasteful container.
                                </CardText>
                            </CardBody>
                            <CardImg Bottom Source="https://picsum.photos/640/360?random=2" alt="Random"/>
                        </Card>
                    </Column>
                </Row>
            </Div>
        </Column>
    </Row>
</Container>