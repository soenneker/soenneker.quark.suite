@page "/codes"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Container Class="py-4">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <Image Source="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" />
                <H1 Class="display-4 fw-bold text-primary">Codes</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Code and PreCode components for displaying code snippets.</Paragraph>
            </Div>
        </Column>
    </Row>
    
    <Row Gap="Gap.Is4">
        <Column>
            <Div>

<H2>Inline Code Examples</H2>
<Paragraph>Here are some examples of inline code: <Code Inline="true">var x = 42;</Code> and <Code Inline="true">Console.WriteLine("Hello World");</Code></Paragraph>

<Paragraph>You can also use custom styling: <Code Inline="true" Class="text-danger fw-bold">error message</Code></Paragraph>

<Hr />

<H2>Code Block Examples</H2>

<H3>Basic Code Block</H3>
<PreCode>
@("public class Example\n{\n    public string Name { get; set; }\n    public int Value { get; set; }\n}")
</PreCode>

<H3>Code Block with Language</H3>
<PreCode Language="csharp">
@("public async Task<string> GetDataAsync()\n{\n    using var client = new HttpClient();\n    var response = await client.GetAsync(\"https://api.example.com/data\");\n    return await response.Content.ReadAsStringAsync();\n}")
</PreCode>

<H3>Code Block with Custom Styling</H3>
<PreCode Class="border border-primary" MaxHeight="@("200")">
@("// This is a long code block that will be scrollable\npublic class VeryLongClass\n{\n    public void Method1() { /* implementation */ }\n    public void Method2() { /* implementation */ }\n    public void Method3() { /* implementation */ }\n    public void Method4() { /* implementation */ }\n    public void Method5() { /* implementation */ }\n    public void Method6() { /* implementation */ }\n    public void Method7() { /* implementation */ }\n    public void Method8() { /* implementation */ }\n    public void Method9() { /* implementation */ }\n    public void Method10() { /* implementation */ }\n}")
</PreCode>

<H3>JavaScript Code Block</H3>
<PreCode Language="javascript">
@("function calculateTotal(items) {\n    return items.reduce((sum, item) => {\n        return sum + (item.price * item.quantity);\n    }, 0);\n}\n\nconst result = calculateTotal([\n    { price: 10, quantity: 2 },\n    { price: 5, quantity: 3 }\n]);")
</PreCode>

<H3>HTML Code Block</H3>
<PreCode Language="html">
@("<div class=\"container\">\n    <h1>Welcome</h1>\n    <Paragraph>This is a sample HTML structure.</Paragraph>\n    <button class=\"btn btn-primary\">Click me</button>\n</Div>")
</PreCode>

<Hr />

<H2>Additional Examples</H2>

<H3>CSS Code Block</H3>
<PreCode Language="css">
@(".calculator {\n    max-width: 300px;\n    margin: 0 auto;\n    padding: 20px;\n    border: 1px solid #ccc;\n    border-radius: 8px;\n}\n\n.calculator input {\n    width: 100%;\n    margin: 5px 0;\n    padding: 8px;\n    border: 1px solid #ddd;\n    border-radius: 4px;\n}")
</PreCode>
            </Div>
        </Column>
    </Row>
</Container>

