@page "/forms/fieldsets-demo"

<PageTitle>Fieldsets & Legends - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
            <DemoSection Title="Basic Fieldset" Description="Simple form grouping with fieldset and legend." Code="@(@"<Fieldset Border=""Border.Is1"" Padding=""Padding.Is3"">
    <Legend FontWeight=""FontWeight.Bold"">Personal Information</Legend>
    <Div Margin=""Margin.Is3.FromBottom"">
        <Label>First Name</Label>
        <TextEdit Placeholder=""Enter first name"" />
    </Div>
    <Div Margin=""Margin.Is3.FromBottom"">
        <Label>Last Name</Label>
        <TextEdit Placeholder=""Enter last name"" />
    </Div>
</Fieldset>")">
                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend FontWeight="FontWeight.Bold">Personal Information</Legend>
                        <Div Margin="Margin.Is3.FromBottom">
                            <Label>First Name</Label>
                            <TextEdit Placeholder="Enter first name" />
                        </Div>
                        <Div Margin="Margin.Is3.FromBottom">
                            <Label>Last Name</Label>
                            <TextEdit Placeholder="Enter last name" />
                        </Div>
                    </Fieldset>
            </DemoSection>

    <Row Gap="Gap.Is4">
        <Column>
            <DemoSection Title="Multiple Fieldsets" Description="Form with multiple grouped sections." Code="@(@"<Fieldset Border=""Border.Is1"" Padding=""Padding.Is3"">
    <Legend FontWeight=""FontWeight.Bold""><Icon Name=""user""/> Account Details</Legend>
    <Div Margin=""Margin.Is3.FromBottom""><Label>Username</Label><TextEdit Placeholder=""Enter username""/></Div>
    <Div Margin=""Margin.Is3.FromBottom""><Label>Email</Label><TextEdit Type=""email"" Placeholder=""Enter email""/></Div>
</Fieldset>
<Fieldset Border=""Border.Is1"" Padding=""Padding.Is3"">
    <Legend FontWeight=""FontWeight.Bold""><Icon Name=""location-dot""/> Address Information</Legend>
    ...
</Fieldset>")">
                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                        <Legend FontWeight="FontWeight.Bold">
                            <Icon Name="user" Margin="Margin.Is2.FromEnd"/>
                            Account Details
                        </Legend>
                        <Div Margin="Margin.Is3.FromBottom">
                            <Label>Username</Label>
                            <TextEdit Placeholder="Enter username" />
                        </Div>
                        <Div Margin="Margin.Is3.FromBottom">
                            <Label>Email</Label>
                            <TextEdit Placeholder="Enter email" Type="email" />
                        </Div>
                    </Fieldset>

                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                        <Legend FontWeight="FontWeight.Bold">
                            <Icon Name="location-dot" Margin="Margin.Is2.FromEnd"/>
                            Address Information
                        </Legend>
                        <Div Margin="Margin.Is3.FromBottom">
                            <Label>Street Address</Label>
                            <TextEdit Placeholder="Enter street address" />
                        </Div>
                        <Row>
                            <Column ColumnSize="@ColumnSize.Is6">
                                <Div Margin="Margin.Is3.FromBottom">
                                    <Label>City</Label>
                                    <TextEdit Placeholder="Enter city" />
                                </Div>
                            </Column>
                            <Column ColumnSize="@ColumnSize.Is6">
                                <Div Margin="Margin.Is3.FromBottom">
                                    <Label>Zip Code</Label>
                                    <TextEdit Placeholder="Enter zip" />
                                </Div>
                            </Column>
                        </Row>
                    </Fieldset>

                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend FontWeight="FontWeight.Bold">
                            <Icon Name="credit-card" Margin="Margin.Is2.FromEnd"/>
                            Payment Information
                        </Legend>
                        <Div Margin="Margin.Is3.FromBottom">
                            <Label>Card Number</Label>
                            <TextEdit Placeholder="1234 5678 9012 3456" />
                        </Div>
                        <Row>
                            <Column ColumnSize="@ColumnSize.Is6">
                                <Div Margin="Margin.Is3.FromBottom">
                                    <Label>Expiry Date</Label>
                                    <TextEdit Placeholder="MM/YY" />
                                </Div>
                            </Column>
                            <Column ColumnSize="@ColumnSize.Is6">
                                <Div Margin="Margin.Is3.FromBottom">
                                    <Label>CVV</Label>
                                    <TextEdit Placeholder="123" />
                                </Div>
                            </Column>
                        </Row>
                    </Fieldset>
            </DemoSection>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <DemoSection Title="Disabled Fieldset" Description="Disabling a fieldset disables all form controls within it." Code="@(@"<Fieldset Disabled=""true"" Border=""Border.Is1"" Padding=""Padding.Is3"">
    <Legend FontWeight=""FontWeight.Bold"">Disabled Section</Legend>
    <Div Margin=""Margin.Is3.FromBottom""><Label>First Field</Label><TextEdit Placeholder=""This is disabled""/></Div>
    <Div Margin=""Margin.Is3.FromBottom""><Label>Second Field</Label><TextEdit Placeholder=""This is also disabled""/></Div>
</Fieldset>")">
                    <Fieldset Disabled="true" Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend FontWeight="FontWeight.Bold">Disabled Section</Legend>
                        <Alert BackgroundColor="@BackgroundColor.Warning" Margin="Margin.Is3.FromBottom">
                            <Icon Name="circle-exclamation" Margin="Margin.Is2.FromEnd"/>
                            This section is currently disabled. All inputs are non-interactive.
                        </Alert>
                        <Div Margin="Margin.Is3.FromBottom">
                            <Label>First Field</Label>
                            <TextEdit Placeholder="This is disabled" Value="Disabled input" />
                        </Div>
                        <Div Margin="Margin.Is3.FromBottom">
                            <Label>Second Field</Label>
                            <TextEdit Placeholder="This is also disabled" />
                        </Div>
                        <Div>
                            <Button BackgroundColor="@BackgroundColor.Primary">
                                Disabled Button
                            </Button>
                        </Div>
                    </Fieldset>
            </DemoSection>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <DemoSection Title="Radio Button Group" Description="Fieldsets group related radio buttons for accessibility." Code="@(@"<Fieldset Border=""Border.Is1"" Padding=""Padding.Is3"">
    <Legend FontWeight=""FontWeight.Bold"">Choose Your Plan</Legend>
    <Radio Name=""plan"" Value=""free""><Strong>Free Plan</Strong> - Basic features</Radio>
    <Radio Name=""plan"" Value=""pro""><Strong>Pro Plan</Strong> - Advanced features</Radio>
    <Radio Name=""plan"" Value=""enterprise""><Strong>Enterprise Plan</Strong> - Full features</Radio>
</Fieldset>")">
                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend FontWeight="FontWeight.Bold">Choose Your Plan</Legend>
                        <Div Margin="Margin.Is2.FromBottom">
                            <Radio Name="plan" Value="free">
                                <Strong>Free Plan</Strong> - Basic features for individuals
                            </Radio>
                        </Div>
                        <Div Margin="Margin.Is2.FromBottom">
                            <Radio Name="plan" Value="pro">
                                <Strong>Pro Plan</Strong> - Advanced features for professionals
                            </Radio>
                        </Div>
                        <Div Margin="Margin.Is2.FromBottom">
                            <Radio Name="plan" Value="enterprise">
                                <Strong>Enterprise Plan</Strong> - Full features for organizations
                            </Radio>
                        </Div>
                    </Fieldset>
            </DemoSection>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <DemoSection Title="Checkbox Group" Description="Fieldsets provide proper accessibility for checkbox groups." Code="@(@"<Fieldset Border=""Border.Is1"" Padding=""Padding.Is3"">
    <Legend FontWeight=""FontWeight.Bold"">Select Features</Legend>
    <Check>Email notifications</Check>
    <Check>SMS notifications</Check>
    <Check>Push notifications</Check>
    <Check>Newsletter subscription</Check>
</Fieldset>")">
                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend FontWeight="FontWeight.Bold">Select Features</Legend>
                        <Div Margin="Margin.Is2.FromBottom">
                            <Check>Email notifications</Check>
                        </Div>
                        <Div Margin="Margin.Is2.FromBottom">
                            <Check>SMS notifications</Check>
                        </Div>
                        <Div Margin="Margin.Is2.FromBottom">
                            <Check>Push notifications</Check>
                        </Div>
                        <Div>
                            <Check>Newsletter subscription</Check>
                        </Div>
                    </Fieldset>
            </DemoSection>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <DemoSection Title="Styled Fieldsets" Description="Fieldsets with custom styling and theming." Code="@(@"<Fieldset Border=""Border.Is2"" BorderColor=""@@BorderColor.Primary"" Padding=""Padding.Is3"" BackgroundColor=""BackgroundColor.Primary"" BackgroundOpacity=""BackgroundOpacity.Is10"">
    <Legend FontWeight=""FontWeight.Bold"" TextColor=""TextColor.Primary"">Primary Theme</Legend>
    ...
</Fieldset>
<Fieldset Border=""Border.Is2"" BorderColor=""@@BorderColor.Success"" ...>...</Fieldset>")">
                    <Row Gap="Gap.Is3">
                        <Column ColumnSize="@ColumnSize.Is6.OnLg">
                            <Fieldset Border="Border.Is2" BorderColor="@BorderColor.Primary" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" BackgroundColor="BackgroundColor.Primary" BackgroundOpacity="BackgroundOpacity.Is10">
                                <Legend FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Primary Theme</Legend>
                                <Div Margin="Margin.Is3.FromBottom">
                                    <Label>Field Label</Label>
                                    <TextEdit Placeholder="Enter value" />
                                </Div>
                                <Div>
                                    <Button BackgroundColor="@BackgroundColor.Primary">Submit</Button>
                                </Div>
                            </Fieldset>
                        </Column>
                        <Column ColumnSize="@ColumnSize.Is6.OnLg">
                            <Fieldset Border="Border.Is2" BorderColor="@BorderColor.Success" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" BackgroundColor="BackgroundColor.Success" BackgroundOpacity="BackgroundOpacity.Is10">
                                <Legend FontWeight="FontWeight.Bold" TextColor="TextColor.Success">Success Theme</Legend>
                                <Div Margin="Margin.Is3.FromBottom">
                                    <Label>Field Label</Label>
                                    <TextEdit Placeholder="Enter value" />
                                </Div>
                                <Div>
                                    <Button BackgroundColor="@BackgroundColor.Success">Submit</Button>
                                </Div>
                            </Fieldset>
                        </Column>
                    </Row>
            </DemoSection>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <DemoSection Title="Nested Fieldsets" Description="Fieldsets can be nested for hierarchical form organization." Code="@(@"<Fieldset Border=""Border.Is2"" Padding=""Padding.Is3"">
    <Legend FontWeight=""FontWeight.Bold"">Registration Form</Legend>
    <Fieldset Border=""Border.Is1"" Padding=""Padding.Is3"" Margin=""Margin.Is3.FromBottom"">
        <Legend FontWeight=""FontWeight.Bold"">Basic Information</Legend>
        ...
    </Fieldset>
    <Fieldset Border=""Border.Is1"" Padding=""Padding.Is3"">
        <Legend FontWeight=""FontWeight.Bold"">Preferences</Legend>
        ...
    </Fieldset>
</Fieldset>")">
                    <Fieldset Border="Border.Is2" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend FontWeight="FontWeight.Bold" Class="fs-5">Registration Form</Legend>
                        
                        <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                            <Legend FontWeight="FontWeight.Bold">Basic Information</Legend>
                            <Div Margin="Margin.Is3.FromBottom">
                                <Label>Full Name</Label>
                                <TextEdit Placeholder="Enter full name" />
                            </Div>
                            <Div Margin="Margin.Is3.FromBottom">
                                <Label>Email</Label>
                                <TextEdit Type="email" Placeholder="Enter email" />
                            </Div>
                        </Fieldset>

                        <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                            <Legend FontWeight="FontWeight.Bold">Preferences</Legend>
                            <Div Margin="Margin.Is2.FromBottom">
                                <Check>Receive newsletter</Check>
                            </Div>
                            <Div>
                                <Check>Receive product updates</Check>
                            </Div>
                        </Fieldset>

                        <Div>
                            <Button BackgroundColor="@BackgroundColor.Primary">Complete Registration</Button>
                        </Div>
                    </Fieldset>
            </DemoSection>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <DemoSection Title="Accessibility Benefits" Description="Using Fieldset and Legend for WCAG compliance." Code="@(@"<Fieldset>
    <Legend>Group label for screen readers</Legend>
    <!-- Form controls - legend announced when entering group -->
</Fieldset>")">
                    <Alert BackgroundColor="@BackgroundColor.Success">
                        <Icon Name="circle-check" Margin="Margin.Is2.FromEnd"/>
                        <Strong>Using Fieldset and Legend:</Strong>
                        <ul class="mb-0 mt-2">
                            <li>Groups related form controls logically</li>
                            <li>The legend provides a clear label for the group</li>
                            <li>Screen readers announce the legend When entering the fieldset</li>
                            <li>Required for WCAG compliance with grouped form controls</li>
                            <li>Disabling a fieldset disables all controls within it</li>
                            <li>Especially important for radio button and checkbox groups</li>
                        </ul>
                    </Alert>
            </DemoSection>
        </Column>
    </Row>
    </Div>
</Div>

