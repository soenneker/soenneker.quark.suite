@page "/forms/fieldsets-demo"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Fieldsets & Legends</H1>
                <Paragraph Class="lead text-muted">Fieldset and Legend components for accessible form grouping.</Paragraph>
            </Div>
        </Column>
    </Row>
    
    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface mb-5">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Basic Fieldset</Strong>
                </Div>
                <Div Class="surface-body">
                    <Paragraph>Simple form grouping with fieldset and legend.</Paragraph>
                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend Class="fw-bold">Personal Information</Legend>
                        <Div Class="mb-3">
                            <Label>First Name</Label>
                            <TextEdit Placeholder="Enter first name" />
                        </Div>
                        <Div Class="mb-3">
                            <Label>Last Name</Label>
                            <TextEdit Placeholder="Enter last name" />
                        </Div>
                    </Fieldset>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface mb-5">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Multiple Fieldsets</Strong>
                </Div>
                <Div Class="surface-body">
                    <Paragraph>Form with multiple grouped sections.</Paragraph>
                    
                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                        <Legend Class="fw-bold">
                            <Icon Name="user" Margin="Margin.Is2.FromEnd"/>
                            Account Details
                        </Legend>
                        <Div Class="mb-3">
                            <Label>Username</Label>
                            <TextEdit Placeholder="Enter username" />
                        </Div>
                        <Div Class="mb-3">
                            <Label>Email</Label>
                            <TextEdit Placeholder="Enter email" Type="email" />
                        </Div>
                    </Fieldset>

                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                        <Legend Class="fw-bold">
                            <Icon Name="location-dot" Margin="Margin.Is2.FromEnd"/>
                            Address Information
                        </Legend>
                        <Div Class="mb-3">
                            <Label>Street Address</Label>
                            <TextEdit Placeholder="Enter street address" />
                        </Div>
                        <Row>
                            <Column ColumnSize="@ColumnSize.Is6">
                                <Div Class="mb-3">
                                    <Label>City</Label>
                                    <TextEdit Placeholder="Enter city" />
                                </Div>
                            </Column>
                            <Column ColumnSize="@ColumnSize.Is6">
                                <Div Class="mb-3">
                                    <Label>Zip Code</Label>
                                    <TextEdit Placeholder="Enter zip" />
                                </Div>
                            </Column>
                        </Row>
                    </Fieldset>

                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend Class="fw-bold">
                            <Icon Name="credit-card" Margin="Margin.Is2.FromEnd"/>
                            Payment Information
                        </Legend>
                        <Div Class="mb-3">
                            <Label>Card Number</Label>
                            <TextEdit Placeholder="1234 5678 9012 3456" />
                        </Div>
                        <Row>
                            <Column ColumnSize="@ColumnSize.Is6">
                                <Div Class="mb-3">
                                    <Label>Expiry Date</Label>
                                    <TextEdit Placeholder="MM/YY" />
                                </Div>
                            </Column>
                            <Column ColumnSize="@ColumnSize.Is6">
                                <Div Class="mb-3">
                                    <Label>CVV</Label>
                                    <TextEdit Placeholder="123" />
                                </Div>
                            </Column>
                        </Row>
                    </Fieldset>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface mb-5">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Disabled Fieldset</Strong>
                </Div>
                <Div Class="surface-body">
                    <Paragraph>Disabling a fieldset disables all form controls within it.</Paragraph>
                    <Fieldset Disabled="true" Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend Class="fw-bold">Disabled Section</Legend>
                        <Alert BackgroundColor="@BackgroundColor.Warning" Margin="Margin.Is3.FromBottom">
                            <Icon Name="circle-exclamation" Margin="Margin.Is2.FromEnd"/>
                            This section is currently disabled. All inputs are non-interactive.
                        </Alert>
                        <Div Class="mb-3">
                            <Label>First Field</Label>
                            <TextEdit Placeholder="This is disabled" Value="Disabled input" />
                        </Div>
                        <Div Class="mb-3">
                            <Label>Second Field</Label>
                            <TextEdit Placeholder="This is also disabled" />
                        </Div>
                        <Div>
                            <Button BackgroundColor="@BackgroundColor.Primary">
                                Disabled Button
                            </Button>
                        </Div>
                    </Fieldset>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface mb-5">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Radio Button Group</Strong>
                </Div>
                <Div Class="surface-body">
                    <Paragraph>Fieldsets are commonly used to group related radio buttons.</Paragraph>
                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend Class="fw-bold">Choose Your Plan</Legend>
                        <Div Class="mb-2">
                            <Radio Name="plan" Value="free">
                                <Strong>Free Plan</Strong> - Basic features for individuals
                            </Radio>
                        </Div>
                        <Div Class="mb-2">
                            <Radio Name="plan" Value="pro">
                                <Strong>Pro Plan</Strong> - Advanced features for professionals
                            </Radio>
                        </Div>
                        <Div Class="mb-2">
                            <Radio Name="plan" Value="enterprise">
                                <Strong>Enterprise Plan</Strong> - Full features for organizations
                            </Radio>
                        </Div>
                    </Fieldset>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface mb-5">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Checkbox Group</Strong>
                </Div>
                <Div Class="surface-body">
                    <Paragraph>Fieldsets provide proper accessibility for checkbox groups.</Paragraph>
                    <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend Class="fw-bold">Select Features</Legend>
                        <Div Class="mb-2">
                            <Check>Email notifications</Check>
                        </Div>
                        <Div Class="mb-2">
                            <Check>SMS notifications</Check>
                        </Div>
                        <Div Class="mb-2">
                            <Check>Push notifications</Check>
                        </Div>
                        <Div>
                            <Check>Newsletter subscription</Check>
                        </Div>
                    </Fieldset>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface mb-5">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Styled Fieldsets</Strong>
                </Div>
                <Div Class="surface-body">
                    <Paragraph>Fieldsets with custom styling and theming.</Paragraph>
                    <Row Gap="Gap.Is3">
                        <Column ColumnSize="@ColumnSize.Is6.OnLaptop">
                            <Fieldset Border="Border.Is2" BorderColor="@BorderColor.Primary" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Class="bg-primary bg-opacity-10">
                                <Legend Class="fw-bold text-primary">Primary Theme</Legend>
                                <Div Class="mb-3">
                                    <Label>Field Label</Label>
                                    <TextEdit Placeholder="Enter value" />
                                </Div>
                                <Div>
                                    <Button BackgroundColor="@BackgroundColor.Primary">Submit</Button>
                                </Div>
                            </Fieldset>
                        </Column>
                        <Column ColumnSize="@ColumnSize.Is6.OnLaptop">
                            <Fieldset Border="Border.Is2" BorderColor="@BorderColor.Success" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Class="bg-success bg-opacity-10">
                                <Legend Class="fw-bold text-success">Success Theme</Legend>
                                <Div Class="mb-3">
                                    <Label>Field Label</Label>
                                    <TextEdit Placeholder="Enter value" />
                                </Div>
                                <Div>
                                    <Button BackgroundColor="@BackgroundColor.Success">Submit</Button>
                                </Div>
                            </Fieldset>
                        </Column>
                    </Row>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface mb-5">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Nested Fieldsets</Strong>
                </Div>
                <Div Class="surface-body">
                    <Paragraph>Fieldsets can be nested for hierarchical form organization.</Paragraph>
                    <Fieldset Border="Border.Is2" BorderRadius="BorderRadius.Default" Padding="Padding.Is3">
                        <Legend Class="fw-bold fs-5">Registration Form</Legend>
                        
                        <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                            <Legend Class="fw-bold">Basic Information</Legend>
                            <Div Class="mb-3">
                                <Label>Full Name</Label>
                                <TextEdit Placeholder="Enter full name" />
                            </Div>
                            <Div Class="mb-3">
                                <Label>Email</Label>
                                <TextEdit Type="email" Placeholder="Enter email" />
                            </Div>
                        </Fieldset>

                        <Fieldset Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                            <Legend Class="fw-bold">Preferences</Legend>
                            <Div Class="mb-2">
                                <Check>Receive newsletter</Check>
                            </Div>
                            <Div>
                                <Check>Receive product updates</Check>
                            </Div>
                        </Fieldset>

                        <Div>
                            <Button BackgroundColor="@BackgroundColor.Primary">Complete Registration</Button>
                        </Div>
                    </Fieldset>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface mb-5">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Accessibility Benefits</Strong>
                </Div>
                <Div Class="surface-body">
                    <Alert BackgroundColor="@BackgroundColor.Success">
                        <Icon Name="circle-check" Margin="Margin.Is2.FromEnd"/>
                        <Strong>Using Fieldset and Legend:</Strong>
                        <ul class="mb-0 mt-2">
                            <li>Groups related form controls logically</li>
                            <li>The legend provides a clear label for the group</li>
                            <li>Screen readers announce the legend when entering the fieldset</li>
                            <li>Required for WCAG compliance with grouped form controls</li>
                            <li>Disabling a fieldset disables all controls within it</li>
                            <li>Especially important for radio button and checkbox groups</li>
                        </ul>
                    </Alert>
                </Div>
            </Section>
        </Column>
    </Row>
</Container>

