@page "/forms/fields"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Fields</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates the Field layout components for grouping labels, inputs, and help text.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Row>
                <Column ColumnSize="@ColumnSize.Is6.OnTablet">
                    <H3>Basic Field Layout</H3>

                    <Field>
                        <FieldLabel For="textInput">Text Input</FieldLabel>
                        <input type="text" id="textInput" class="form-control" placeholder="Enter text..."/>
                        <FieldHelp>This is help text for the text input field.</FieldHelp>
                    </Field>

                    <Field>
                        <FieldLabel For="emailInput" RequiredIndicator="true">Email Address</FieldLabel>
                        <input type="email" id="emailInput" class="form-control" placeholder="Enter email..."/>
                        <FieldHelp>We'll never share your email with anyone else.</FieldHelp>
                    </Field>

                    <Field>
                        <FieldLabel For="passwordInput">Password</FieldLabel>
                        <input type="password" id="passwordInput" class="form-control" placeholder="Enter password..."/>
                    </Field>

                    <Field>
                        <FieldLabel For="textareaInput">Comments</FieldLabel>
                        <textarea id="textareaInput" class="form-control" rows="3" placeholder="Enter your comments..."></textarea>
                        <FieldHelp>Please provide any additional feedback.</FieldHelp>
                    </Field>
                </Column>

                <Column ColumnSize="@ColumnSize.Is6.OnTablet">
                    <H3>Horizontal Field Layout</H3>

                    <Field Horizontal="true">
                        <FieldLabel For="hTextInput">Text Input</FieldLabel>
                        <FieldBody>
                            <input type="text" id="hTextInput" class="form-control" placeholder="Enter text..."/>
                            <FieldHelp>This is help text for the horizontal text input.</FieldHelp>
                        </FieldBody>
                    </Field>

                    <Field Horizontal="true">
                        <FieldLabel For="hEmailInput" RequiredIndicator="true">Email Address</FieldLabel>
                        <FieldBody>
                            <input type="email" id="hEmailInput" class="form-control" placeholder="Enter email..."/>
                            <FieldHelp>We'll never share your email with anyone else.</FieldHelp>
                        </FieldBody>
                    </Field>

                    <Field Horizontal="true">
                        <FieldLabel For="hSelectInput">Country</FieldLabel>
                        <FieldBody>
                            <select id="hSelectInput" class="form-select">
                                <option value="">Choose...</option>
                                <option value="us">United States</option>
                                <option value="ca">Canada</option>
                                <option value="uk">United Kingdom</option>
                            </select>
                        </FieldBody>
                    </Field>

                    <Field Horizontal="true">
                        <FieldLabel For="hCheckboxInput">Terms and Conditions</FieldLabel>
                        <FieldBody>
                            <div class="form-check">
                                <input type="checkbox" id="hCheckboxInput" class="form-check-input"/>
                                <label for="hCheckboxInput" class="form-check-label">I agree to the terms and conditions</Label>
                            </Div>
                        </FieldBody>
                    </Field>
                </Column>
            </Row>

            <Row Margin="Margin.Is4.FromTop">
                <Column>
                    <H3>Form Example</H3>

                    <form>
                        <Field>
                            <FieldLabel For="firstName" RequiredIndicator="true">First Name</FieldLabel>
                            <input type="text" id="firstName" class="form-control" placeholder="Enter your first name"/>
                        </Field>

                        <Field>
                            <FieldLabel For="lastName" RequiredIndicator="true">Last Name</FieldLabel>
                            <input type="text" id="lastName" class="form-control" placeholder="Enter your last name"/>
                        </Field>

                        <Field>
                            <FieldLabel For="phoneNumber">Phone Number</FieldLabel>
                            <input type="tel" id="phoneNumber" class="form-control" placeholder="(555) 123-4567"/>
                            <FieldHelp>Optional: We may contact you for order updates.</FieldHelp>
                        </Field>

                        <Field Horizontal="true">
                            <FieldLabel For="newsletter">Newsletter</FieldLabel>
                            <FieldBody>
                                <div class="form-check">
                                    <input type="checkbox" id="newsletter" class="form-check-input"/>
                                    <label for="newsletter" class="form-check-label">Subscribe to our newsletter</Label>
                                </Div>
                                <FieldHelp>Get updates about new products and special offers.</FieldHelp>
                            </FieldBody>
                        </Field>

                        <Div Margin="Margin.Is3.FromTop">
                            <Button Type="ButtonType.Submit" BackgroundColor="BackgroundColor.Primary">Submit</Button>
                            <Button Type="ButtonType.Button" BackgroundColor="BackgroundColor.Secondary" Margin="Margin.Is2.FromStart">Cancel</Button>
                        </Div>
                    </form>
                </Column>
            </Row>
        </Column>
    </Row>
</Container>

@code{

    protected override void OnInitialized()
    {
    }

}
