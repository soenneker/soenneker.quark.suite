@page "/forms/input-groups"

<PageTitle>Input Group - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Prefix addon" Description="Inline start addon and bound input."
                        Code="@(@"<InputGroup>
    <InputGroupAddon Align=""InputGroupAddonAlign.InlineStart"">@</InputGroupAddon>
    <InputGroupInput @bind-Value=""_username"" Placeholder=""username"" />
</InputGroup>")">
                <InputGroup>
                    <InputGroupAddon Align="InputGroupAddonAlign.InlineStart">
                        <InputGroupText></InputGroupText>
                    </InputGroupAddon>
                    <InputGroupInput @bind-Value="_username" Placeholder="username" />
                </InputGroup>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Inline end action" Description="Search input with trailing action button."
                        Code="@(@"<InputGroup>
    <InputGroupInput @bind-Value=""_query"" Placeholder=""Search..."" />
    <InputGroupAddon Align=""InputGroupAddonAlign.InlineEnd"">
        <InputGroupButton Variant=""ButtonVariant.Ghost"" Size=""ButtonSize.IconSm"">⌕</InputGroupButton>
    </InputGroupAddon>
</InputGroup>")">
                <InputGroup>
                    <InputGroupInput @bind-Value="_query" Placeholder="Search..." />
                    <InputGroupAddon Align="InputGroupAddonAlign.InlineEnd">
                        <InputGroupButton Variant="ButtonVariant.Ghost" Size="ButtonSize.IconSm">⌕</InputGroupButton>
                    </InputGroupAddon>
                </InputGroup>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Textarea group" Description="Block-start addon with textarea control."
                        Code="@(@"<InputGroup>
    <InputGroupAddon Align=""InputGroupAddonAlign.BlockStart"">
        <InputGroupText>Message</InputGroupText>
    </InputGroupAddon>
    <InputGroupTextarea @bind-Value=""_message"" Rows=""4"" Placeholder=""Type your message..."" />
</InputGroup>")">
                <InputGroup>
                    <InputGroupAddon Align="InputGroupAddonAlign.BlockStart">
                        <InputGroupText>Message</InputGroupText>
                    </InputGroupAddon>
                    <InputGroupTextarea @bind-Value="_message" Rows="4" Placeholder="Type your message..." />
                </InputGroup>
            </DemoSection>
        </section>
    </Div>
</Div>

@code {
    private string? _username;
    private string? _query;
    private string? _message;
}
