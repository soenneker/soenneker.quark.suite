@page "/forms/toggles"

<PageTitle>Toggle - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Basic Toggle" Description="Pressed state binding with default variant."
                        Code="@(@"<Toggle @bind-Pressed=""_pressed"">Bold</Toggle>")">
                <Div Class="flex items-center gap-4">
                    <Toggle @bind-Pressed="_pressed">Bold</Toggle>
                    <Span Class="text-sm text-muted-foreground">Pressed: @_pressed</Span>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Variants" Description="Default and outline variants."
                        Code="@(@"<Toggle Variant=""ToggleVariant.Default"">Default</Toggle>
<Toggle Variant=""ToggleVariant.Outline"">Outline</Toggle>")">
                <Div Class="flex items-center gap-2">
                    <Toggle>Default</Toggle>
                    <Toggle Variant="ToggleVariant.Outline">Outline</Toggle>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Sizes" Description="Small, default, and large toggle sizes."
                        Code="@(@"<Toggle Size=""ToggleSize.Small"">Sm</Toggle>
<Toggle Size=""ToggleSize.Default"">Default</Toggle>
<Toggle Size=""ToggleSize.Large"">Lg</Toggle>")">
                <Div Class="flex items-center gap-2">
                    <Toggle Size="ToggleSize.Small">Sm</Toggle>
                    <Toggle Size="ToggleSize.Default">Default</Toggle>
                    <Toggle Size="ToggleSize.Large">Lg</Toggle>
                </Div>
            </DemoSection>
        </section>
    </Div>
</Div>

@code {
    private bool _pressed;
}
