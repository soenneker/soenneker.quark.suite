@page "/layout/columns"
@using Microsoft.Extensions.Logging
@inject ILogger<Index> Logger

<PageTitle>Columns - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Basic column" Description="Single column with Quark properties.">
                <Row>
                    <Column Class="bg-primary text-primary-foreground p-4 rounded-lg">
                        <Paragraph Class="text-lg font-semibold">Column with Quark properties</Paragraph>
                        <Paragraph Margin="Margin.Is0">Uses BackgroundColor, TextColor, Padding (or Tailwind classes).</Paragraph>
                    </Column>
                </Row>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Responsive columns" Description="Three equal columns (ColumnSize.Is4.OnMd).">
                <Row>
                    <Column ColumnSize="@ColumnSize.Is4.OnMd" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Small Column</Paragraph>
                        <Paragraph>This column uses ColumnSize.Is4.OnMd for responsive sizing.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4.OnMd" BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Medium Column</Paragraph>
                        <Paragraph>This column also uses ColumnSize.Is4.OnMd for equal width.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4.OnMd" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Large Column</Paragraph>
                        <Paragraph>This column completes the row with ColumnSize.Is4.OnMd.</Paragraph>
                    </Column>
                </Row>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Column sizing" Description="Half (Is6), one-third/two-thirds (Is4/Is8).">
                <Row>
                    <Column ColumnSize="ColumnSize.Is6" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Half Width</Paragraph>
                        <Paragraph>This column takes up half the row width (ColumnSize.Is6).</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is6" BackgroundColor="BackgroundColor.Dark" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Half Width</Paragraph>
                        <Paragraph>This column also takes up half the row width (ColumnSize.Is6).</Paragraph>
                    </Column>
                </Row>

                <Row Margin="Margin.Is3.FromEnd">
                    <Column ColumnSize="ColumnSize.Is4" BackgroundColor="BackgroundColor.Secondary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">One Third</Paragraph>
                        <Paragraph>This column takes up one third of the row (ColumnSize.Is4).</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is8" BackgroundColor="BackgroundColor.Light" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Two Thirds</Paragraph>
                        <Paragraph>This column takes up two thirds of the row (ColumnSize.Is8).</Paragraph>
                    </Column>
                </Row>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Offset and order" Description="ColumnOffset and ColumnOrder examples.">
                <Row>
                    <Column ColumnSize="@ColumnSize.Is6" BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">CSS Value Column Size</Paragraph>
                        <Paragraph>This column uses ColumnSize.Is6 (equivalent to col-6).</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is6" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">CSS Value Column Size</Paragraph>
                        <Paragraph>This column also uses ColumnSize.Is6.</Paragraph>
                    </Column>
                </Row>

                <Row Margin="Margin.Is3.FromEnd">
                    <Column ColumnSize="@ColumnSize.Is4" ColumnOffset="ColumnOffset.O1" BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Column with Offset</Paragraph>
                        <Paragraph>This column uses ColumnSize.Is4 with ColumnOffset.O1.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Regular Column</Paragraph>
                        <Paragraph>This column uses ColumnSize.Is4.</Paragraph>
                    </Column>
                </Row>

                <Row>
                    <Column ColumnSize="@ColumnSize.Is4" ColumnOrder="ColumnOrder.O3" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Order 3</Paragraph>
                        <Paragraph>This column appears third due to ColumnOrder.O3.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4" ColumnOrder="ColumnOrder.O1" BackgroundColor="BackgroundColor.Secondary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Order 1</Paragraph>
                        <Paragraph>This column appears first due to ColumnOrder.O1.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4" ColumnOrder="ColumnOrder.O2" BackgroundColor="BackgroundColor.Dark" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Order 2</Paragraph>
                        <Paragraph>This column appears second due to ColumnOrder.O2.</Paragraph>
                    </Column>
                </Row>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Column features" Description="Id, Class, Style, ColumnSize, ColumnOffset, ColumnOrder, etc.">
                <Div Class="rounded-lg border border-border bg-muted/50 p-4">
                    <Paragraph Class="text-lg font-semibold">Column Features</Paragraph>
                    <Paragraph Margin="Margin.Is0">Column inherits Element properties; ColumnSize (Is1â€“Is12, Auto), ColumnOffset, ColumnOrder.</Paragraph>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Auto-sizing" Description="Columns share space equally When no size is set.">
                <Row>
                    <Column BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Auto Column 1</Paragraph>
                        <Paragraph>This column auto-sizes based on content.</Paragraph>
                    </Column>
                    <Column BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Auto Column 2</Paragraph>
                        <Paragraph>This column also auto-sizes.</Paragraph>
                    </Column>
                    <Column BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <Paragraph Class="font-semibold">Auto Column 3</Paragraph>
                        <Paragraph>All columns share the remaining space equally.</Paragraph>
                    </Column>
                </Row>
            </DemoSection>
        </section>
    </Div>
</Div>

@code{

    protected override void OnInitialized()
    {
        Logger.LogInformation("Column demo page initialized");
    }

}
