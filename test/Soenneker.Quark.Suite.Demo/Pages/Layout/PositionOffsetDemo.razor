@page "/layout/position-offset"

<PageTitle>Position Offset Demo</PageTitle>

<Container Margin="Margin.Is4.FromTop">
    <H1 Margin="Margin.Is4.FromBottom">Quark Position Offset Demo</H1>

    <Div Margin="Margin.Is4.FromBottom">
        <H2>Basic Position Offset Values</H2>
        <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is3.FromBottom">
            Position offset utilities allow you to position elements using top, bottom, start, and end properties with values of 0, 50%, or 100%.
        </Paragraph>

        <Row>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Top Values</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2" Margin="Margin.Is2.FromBottom">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top0" BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Top 0
                    </Div>
                </Div>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2" Margin="Margin.Is2.FromBottom">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top50" BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Top 50%
                    </Div>
                </Div>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top100" BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Top 100%
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Bottom Values</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2" Margin="Margin.Is2.FromBottom">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Bottom0" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Bottom 0
                    </Div>
                </Div>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2" Margin="Margin.Is2.FromBottom">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Bottom50" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Bottom 50%
                    </Div>
                </Div>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Bottom100" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Bottom 100%
                    </Div>
                </Div>
            </Column>
        </Row>

        <CodeEditor ReadOnly="true" 
                    Language="@("html")" 
                    AutoHeight="true" Margin="Margin.Is3.FromTop"
                    Text="@(@"<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Top0"">
        Top 0
    </Div>
</Div>

<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Top50"">
        Top 50%
    </Div>
</Div>

<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Bottom0"">
        Bottom 0
    </Div>
</Div>")" />
    </Div>

    <Div Margin="Margin.Is4.FromBottom">
        <H2>Start and End Values</H2>
        <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is3.FromBottom">
            Start and end values use logical properties that adapt to text direction (LTR/RTL).
        </Paragraph>

        <Row>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Start Values</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2" Margin="Margin.Is2.FromBottom">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Start0" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Start 0
                    </Div>
                </Div>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2" Margin="Margin.Is2.FromBottom">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Start50" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Start 50%
                    </Div>
                </Div>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Start100" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Start 100%
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>End Values</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2" Margin="Margin.Is2.FromBottom">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.End0" BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        End 0
                    </Div>
                </Div>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2" Margin="Margin.Is2.FromBottom">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.End50" BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        End 50%
                    </Div>
                </Div>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.End100" BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        End 100%
                    </Div>
                </Div>
            </Column>
        </Row>
    </Div>

    <Div Margin="Margin.Is4.FromBottom">
        <H2>Combining Multiple Offsets</H2>
        <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is3.FromBottom">
            You can chain multiple offset values together to position elements precisely.
        </Paragraph>

        <Row>
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>Top + Start</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top0.Start0" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Top 0, Start 0
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>Top + End</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top0.End0" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Top 0, End 0
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>Bottom + Start</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Bottom0.Start0" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Bottom 0, Start 0
                    </Div>
                </Div>
            </Column>
        </Row>

        <Row Margin="Margin.Is3.FromTop">
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>Bottom + End</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Bottom0.End0" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Bottom 0, End 0
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>Top 50% + Start 50%</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top50.Start50" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Top 50%, Start 50%
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>All Corners</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top0.Start0.Bottom0.End0" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1" Opacity="Opacity.Is75">
                        All 0 (Full Coverage)
                    </Div>
                </Div>
            </Column>
        </Row>

        <CodeEditor ReadOnly="true" 
                    Language="@("html")" 
                    AutoHeight="true" Margin="Margin.Is3.FromTop"
                    Text="@(@"<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Top0.Start0"">
        Top 0, Start 0
    </Div>
</Div>

<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Top50.Start50"">
        Top 50%, Start 50%
    </Div>
</Div>

<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Bottom0.End0"">
        Bottom 0, End 0
    </Div>
</Div>")" />
    </Div>

    <Div Margin="Margin.Is4.FromBottom">
        <H2>Translate Middle Utilities</H2>
        <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is3.FromBottom">
            Translate middle utilities are perfect for centering absolutely positioned elements.
        </Paragraph>

        <Row>
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>Translate Middle</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top50.Start50.TranslateMiddle" BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Centered
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>Translate Middle X</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top0.Start50.TranslateMiddleX" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Centered X
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is4.OnTablet">
                <H4>Translate Middle Y</H4>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top50.Start0.TranslateMiddleY" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Centered Y
                    </Div>
                </Div>
            </Column>
        </Row>

        <CodeEditor ReadOnly="true" 
                    Language="@("html")" 
                    AutoHeight="true" Margin="Margin.Is3.FromTop"
                    Text="@(@"<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Top50.Start50.TranslateMiddle"">
        Centered
    </Div>
</Div>

<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Top0.Start50.TranslateMiddleX"">
        Centered X
    </Div>
</Div>

<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Top50.Start0.TranslateMiddleY"">
        Centered Y
    </Div>
</Div>")" />
    </Div>

    <Div Margin="Margin.Is4.FromBottom">
        <H2>Responsive Position Offsets</H2>
        <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is3.FromBottom">
            Apply different position offsets based on device screen sizes for responsive positioning.
        </Paragraph>

        <Row>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Responsive Top</H4>
                <Paragraph TextColor="TextColor.Muted" Class="small">Top 0 on phone, Top 50% on tablet</Paragraph>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top0.OnPhone.Top50.OnTablet" BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Responsive
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Responsive Start</H4>
                <Paragraph TextColor="TextColor.Muted" Class="small">Start 0 on phone, Start 50% on laptop</Paragraph>
                <Div Position="Position.Relative" MinHeight="@("150px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Start0.OnPhone.Start50.OnLaptop" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1">
                        Responsive
                    </Div>
                </Div>
            </Column>
        </Row>

        <CodeEditor ReadOnly="true" 
                    Language="@("html")" 
                    AutoHeight="true" Margin="Margin.Is3.FromTop"
                    Text="@(@"<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Top0.OnPhone.Top50.OnTablet"">
        Responsive positioning
    </Div>
</Div>

<Div Position=""Position.Relative"" MinHeight=""150px"">
    <Div Position=""Position.Absolute"" Offset=""PositionOffset.Start0.OnPhone.Start50.OnLaptop"">
        Responsive positioning
    </Div>
</Div>")" />
    </Div>

    <Div Margin="Margin.Is4.FromBottom">
        <H2>Real-World Examples</H2>
        <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is3.FromBottom">
            Common use cases for position offsets in real applications.
        </Paragraph>

        <Row>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Badge Overlay</H4>
                <Div Position="Position.Relative" Display="Display.InlineBlock" Margin="Margin.Is3.FromBottom">
                    <Div BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3" BorderRadius="BorderRadius.Is1">
                        Notification
                    </Div>
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top0.End0" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is1" MinWidth="@("20px")" MinHeight="@("20px")" Display="Display.Flex" Flex="Flex.Column.AlignCenter.JustifyCenter" Style="transform: translate(50%, -50%);">
                        3
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Centered Modal Content</H4>
                <Div Position="Position.Relative" MinHeight="@("200px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Top50.Start50.TranslateMiddle" BackgroundColor="BackgroundColor.White" Border="Border.Is1" BorderRadius="BorderRadius.Is1" Padding="Padding.Is4" BoxShadow="BoxShadow.Base" MinWidth="@("300px")" TextAlignment="TextAlignment.Center">
                        <H4>Modal Title</H4>
                        <Paragraph>This is centered content</Paragraph>
                    </Div>
                </Div>
            </Column>
        </Row>

        <Row Margin="Margin.Is3.FromTop">
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Tooltip Position</H4>
                <Div Position="Position.Relative" Display="Display.InlineBlock" Margin="Margin.Is3.FromBottom">
                    <Button BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White">
                        Hover Me
                    </Button>
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Bottom100.Start50.TranslateMiddleX" BackgroundColor="BackgroundColor.Dark" TextColor="TextColor.White" Padding="Padding.Is2" BorderRadius="BorderRadius.Is1" Margin="Margin.Is2.FromBottom" Display="Display.None" Style="white-space: nowrap;">
                        Tooltip text here
                    </Div>
                </Div>
            </Column>
            <Column ColumnSize="ColumnSize.Is6.OnTablet">
                <H4>Fixed Footer</H4>
                <Div Position="Position.Relative" MinHeight="@("200px")" Border="Border.Is1" BackgroundColor="BackgroundColor.Light" Padding="Padding.Is2">
                    <Div Position="Position.Absolute" PositionOffset="PositionOffset.Bottom0.Start0.End0" BackgroundColor="BackgroundColor.Dark" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        Fixed Footer Content
                    </Div>
                </Div>
            </Column>
        </Row>
    </Div>
</Container>

<style>
    .small {
        font-size: 0.875rem;
    }
</style>

