@page "/layout/layouts"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Layouts</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates the Layout components for page structure and organization.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Layout Structure</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Layout>
                        <LayoutHeader BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3">
                            <H3 TextAlignment="TextAlignment.Center" Margin="Margin.Is0.FromBottom">Header</H3>
                        </LayoutHeader>
                        <LayoutContent Padding="Padding.Is3">
                            <Paragraph>This is the main content area of the layout.</Paragraph>
                        </LayoutContent>
                        <LayoutFooter BackgroundColor="BackgroundColor.Secondary" TextColor="TextColor.White" Padding="Padding.Is3">
                            <Paragraph TextAlignment="TextAlignment.Center" Margin="Margin.Is0.FromBottom">Footer</Paragraph>
                        </LayoutFooter>
                    </Layout>
                </Div>
                <Paragraph TextColor="TextColor.Muted">The Layout component provides a basic page structure with header, content, and footer.</Paragraph>
            </Div>

            <Hr/>

            <Div>
                <H2>Layout with Sider</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Layout Sider>
                        <LayoutSider Width="@("200px")" Class="bg-light">
                            <LayoutSiderContent Padding="Padding.Is3">
                                <H4>Sidebar</H4>
                                <UnorderedList Class="list-unstyled">
                                    <UnorderedListItem><Anchor To="#" TextDecoration="TextDecoration.None">Link 1</Anchor></UnorderedListItem>
                                    <UnorderedListItem><Anchor To="#" TextDecoration="TextDecoration.None">Link 2</Anchor></UnorderedListItem>
                                    <UnorderedListItem><Anchor To="#" TextDecoration="TextDecoration.None">Link 3</Anchor></UnorderedListItem>
                                </UnorderedList>
                            </LayoutSiderContent>
                        </LayoutSider>
                        <Layout>
                            <LayoutHeader BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is3">
                                <H3 Margin="Margin.Is0.FromBottom">Header with Sidebar</H3>
                            </LayoutHeader>
                            <LayoutContent Padding="Padding.Is3">
                                <Paragraph>This layout includes a sidebar for navigation.</Paragraph>
                            </LayoutContent>
                        </Layout>
                    </Layout>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Fixed Header Layout</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Layout>
                        <LayoutHeader Fixed BackgroundColor="BackgroundColor.Dark" TextColor="TextColor.White" Padding="Padding.Is3">
                            <H3 Margin="Margin.Is0.FromBottom">Fixed Header</H3>
                        </LayoutHeader>
                        <LayoutContent Padding="Padding.Is3" Style="margin-top: 80px;">
                            <Paragraph>This header is fixed to the top of the viewport.</Paragraph>
                            <Paragraph>Notice how the content has top margin to account for the fixed header.</Paragraph>
                        </LayoutContent>
                    </Layout>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Layout Container</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <LayoutContainer BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3">
                        <H4>Layout Container</H4>
                        <Paragraph>LayoutContainer provides a wrapper for layout components with consistent styling.</Paragraph>
                    </LayoutContainer>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Complex Layout Example</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Layout>
                        <LayoutHeader BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3">
                            <Row>
                                <Column>
                                    <H3 Margin="Margin.Is0.FromBottom">Application Header</H3>
                                </Column>
                                <Column Size="ColumnSize.Is3">
                                    <Button BackgroundColor="@BackgroundColor.Light" Size="@Size.Small">Login</Button>
                                </Column>
                            </Row>
                        </LayoutHeader>
                        
                        <Layout Sider>
                            <LayoutSider Width="@("250px")" Class="bg-light border-end">
                                <LayoutSiderContent Padding="Padding.Is3">
                                    <H4>Navigation</H4>
                                    <Nav Vertical>
                                        <NavItem>
                                            <NavLink To="#" TextDecoration="TextDecoration.None">Dashboard</NavLink>
                                        </NavItem>
                                        <NavItem>
                                            <NavLink To="#" TextDecoration="TextDecoration.None">Users</NavLink>
                                        </NavItem>
                                        <NavItem>
                                            <NavLink To="#" TextDecoration="TextDecoration.None">Settings</NavLink>
                                        </NavItem>
                                    </Nav>
                                </LayoutSiderContent>
                            </LayoutSider>
                            
                            <Layout>
                                <LayoutContent Padding="Padding.Is4">
                                    <H2>Main Content Area</H2>
                                    <Paragraph>This is a complex layout with header, sidebar, and main content area.</Paragraph>
                                    <Row Gap="Gap.Is3">
                                        <Column Size="ColumnSize.Is6">
                                            <Card>
                                                <CardBody>
                                                    <CardTitle>Card 1</CardTitle>
                                                    <CardText>Content for the first card.</CardText>
                                                </CardBody>
                                            </Card>
                                        </Column>
                                        <Column Size="ColumnSize.Is6">
                                            <Card>
                                                <CardBody>
                                                    <CardTitle>Card 2</CardTitle>
                                                    <CardText>Content for the second card.</CardText>
                                                </CardBody>
                                            </Card>
                                        </Column>
                                    </Row>
                                </LayoutContent>
                                
                                <LayoutFooter BackgroundColor="BackgroundColor.Secondary" TextColor="TextColor.White" Padding="Padding.Is3">
                                    <Row>
                                        <Column>
                                            <Paragraph Margin="Margin.Is0.FromBottom">&copy; 2024 Application Name</Paragraph>
                                        </Column>
                                        <Column Size="ColumnSize.Is6">
                                            <Paragraph Class="mb-0 text-end">Version 1.0.0</Paragraph>
                                        </Column>
                                    </Row>
                                </LayoutFooter>
                            </Layout>
                        </Layout>
                    </Layout>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Overlay Container</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Layout>
                        <LayoutContent Padding="Padding.Is3">
                            <H3>Overlay Container Demo</H3>
                            <Paragraph>Click the button to show an overlay container.</Paragraph>
                            <Button BackgroundColor="@BackgroundColor.Primary" @onclick="ShowOverlay">Show Overlay</Button>
                            
                            @if (showOverlay)
                            {
                                <OverlayContainer>
                                    <Div Class="overlay-content" Style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 20px; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); z-index: 1000;">
                                        <H4>Overlay Content</H4>
                                        <Paragraph>This is content in an overlay container.</Paragraph>
                                        <Button BackgroundColor="@BackgroundColor.Secondary" @onclick="HideOverlay">Close</Button>
                                    </Div>
                                </OverlayContainer>
                            }
                        </LayoutContent>
                    </Layout>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Layout Component Properties</H2>
                <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                    <H3>Layout Features</H3>
                    <Paragraph>Layout components provide structured page organization:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem><Strong>Layout:</Strong> Main layout container with optional sider</UnorderedListItem>
                        <UnorderedListItem><Strong>LayoutHeader:</Strong> Header section with optional fixed positioning</UnorderedListItem>
                        <UnorderedListItem><Strong>LayoutContent:</Strong> Main content area</UnorderedListItem>
                        <UnorderedListItem><Strong>LayoutFooter:</Strong> Footer section</UnorderedListItem>
                        <UnorderedListItem><Strong>LayoutSider:</Strong> Sidebar with configurable width</UnorderedListItem>
                        <UnorderedListItem><Strong>LayoutSiderContent:</Strong> Content area within the sidebar</UnorderedListItem>
                        <UnorderedListItem><Strong>LayoutContainer:</Strong> Wrapper for layout components</UnorderedListItem>
                        <UnorderedListItem><Strong>OverlayContainer:</Strong> Container for overlay content</UnorderedListItem>
                    </UnorderedList>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Responsive Layout Example</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Layout>
                        <LayoutHeader BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3">
                            <H3 Margin="Margin.Is0.FromBottom">Responsive Header</H3>
                        </LayoutHeader>
                        
                        <Layout Sider Breakpoint="@BreakpointType.Desktop">
                            <LayoutSider Class="bg-light">
                                <LayoutSiderContent Padding="Padding.Is3">
                                    <H4>Responsive Sidebar</H4>
                                    <Paragraph TextColor="TextColor.Muted">This sidebar is hidden on mobile devices.</Paragraph>
                                </LayoutSiderContent>
                            </LayoutSider>
                            
                            <Layout>
                                <LayoutContent Padding="Padding.Is3">
                                    <H2>Responsive Content</H2>
                                    <Paragraph>This layout adapts to different screen sizes.</Paragraph>
                                    <Row>
                                        <Column Size="ColumnSize.Is12" SizeMedium="ColumnSize.Is6" SizeLarge="ColumnSize.Is4">
                                            <Div BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">Column 1</Div>
                                        </Column>
                                        <Column Size="ColumnSize.Is12" SizeMedium="ColumnSize.Is6" SizeLarge="ColumnSize.Is4">
                                            <Div BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">Column 2</Div>
                                        </Column>
                                        <Column Size="ColumnSize.Is12" SizeMedium="ColumnSize.Is12" SizeLarge="ColumnSize.Is4">
                                            <Div BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">Column 3</Div>
                                        </Column>
                                    </Row>
                                </LayoutContent>
                            </Layout>
                        </Layout>
                    </Layout>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    private bool showOverlay = false;

    private void ShowOverlay()
    {
        showOverlay = true;
        StateHasChanged();
    }

    private void HideOverlay()
    {
        showOverlay = false;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }
}
