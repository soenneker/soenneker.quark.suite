@page "/utils/br-demo"

<PageTitle>Br (Line Break) - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div>
        <Div Class="space-y-3">
            <H1 Class="text-4xl font-bold tracking-tight">Br (Line Break)</H1>
            <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
                The <Code Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono" Inline="true">Br</Code> component creates HTML &lt;br&gt; elements for line breaks.
            </Paragraph>
        </Div>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">Basic</H2>
        </Div>
        <DemoSection Title="Basic Line Breaks" Code="@(@"<Text>Line one.</Text>
<Br/>
<Text>Line two after a break.</Text>")">
            <Div Class="space-y-0">
                <Text>This is line one.</Text>
                <Br/>
                <Text>This is line two after a line break.</Text>
                <Br/>
                <Text>This is line three.</Text>
            </Div>
        </DemoSection>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">Multiple Line Breaks</H2>
        </Div>
        <DemoSection>
            <Div>
                <Text>Single line break:</Text>
                <Br/>
                <Text>New line</Text>
                <Br/><Br/>
                <Text>Double line break creates more space</Text>
                <Br/><Br/><Br/>
                <Text>Triple line break creates even more space</Text>
            </Div>
        </DemoSection>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">With Colored Text</H2>
        </Div>
        <DemoSection>
            <Div>
                <Text TextColor="TextColor.Primary">Primary text</Text>
                <Br/>
                <Text TextColor="TextColor.Success">Success text</Text>
                <Br/>
                <Text TextColor="TextColor.Warning">Warning text</Text>
                <Br/>
                <Text TextColor="TextColor.Danger">Danger text</Text>
            </Div>
        </DemoSection>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">Custom Styled Break</H2>
        </Div>
        <DemoSection Description="Use Class and Style for custom appearance.">
            <Div>
                <Text>Normal line break:</Text>
                <Br/>
                <Text>New line</Text>
                <Br/>
                <Br Style="height: 20px; display: block; background: linear-gradient(to right, var(--q-primary, #007bff), #6f42c1);"/>
                <Text>Custom styled line break with gradient</Text>
            </Div>
        </DemoSection>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">Br Features</H2>
        </Div>
        <Div Class="rounded-xl border bg-muted/30 p-6">
            <Paragraph Class="mb-3 text-sm text-muted-foreground" Margin="Margin.Is0">The Br component inherits Element base properties:</Paragraph>
            <UnorderedList Class="list-inside list-disc space-y-1 text-sm">
                <UnorderedListItem><Strong>Id, Class, Style</Strong> — HTML attributes</UnorderedListItem>
                <UnorderedListItem><Strong>Title</Strong> — Tooltip text</UnorderedListItem>
                <UnorderedListItem><Strong>Hidden</Strong> — Visibility control</UnorderedListItem>
            </UnorderedList>
        </Div>
    </Div>
</Div>
