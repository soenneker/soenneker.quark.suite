@page "/utils/anchors"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Anchors</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the HTML Anchor component from Quark.Anchors.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Anchor Usage</H2>
                <Paragraph>The Anchor component provides semantic HTML links for navigation and external references.</Paragraph>

                <Div Margin="Margin.Is3.FromEnd">
                    <Anchor To="" Class="text-primary">Basic NavLink</Anchor>
                </Div>

                <H2>Button Components (Better than Anchor with Button Classes)</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Button BackgroundColor="BackgroundColor.Primary" Margin="Margin.Is2.FromEnd">Primary Button</Button>
                    <Button BackgroundColor="BackgroundColor.Secondary" Margin="Margin.Is2.FromEnd">Secondary Button</Button>
                    <Button BackgroundColor="BackgroundColor.Success" Margin="Margin.Is2.FromEnd">Success Button</Button>
                    <Button BackgroundColor="BackgroundColor.Danger">Danger Button</Button>
                </Div>

                <H2>Button Components with Different Sizes</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Button BackgroundColor="BackgroundColor.Primary" Size="Size.Small" Margin="Margin.Is2.FromEnd">Small Button</Button>
                    <Button BackgroundColor="BackgroundColor.Primary" Size="Size.Default" Margin="Margin.Is2.FromEnd">Normal Button</Button>
                    <Button BackgroundColor="BackgroundColor.Primary" Size="Size.Large">Large Button</Button>
                </Div>

                <H2>Button Components with Outline Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Button BackgroundColor="BackgroundColor.Primary" Outline="true" Margin="Margin.Is2.FromEnd">Outline Primary</Button>
                    <Button BackgroundColor="BackgroundColor.Secondary" Outline="true" Margin="Margin.Is2.FromEnd">Outline Secondary</Button>
                    <Button BackgroundColor="BackgroundColor.Success" Outline="true" Margin="Margin.Is2.FromEnd">Outline Success</Button>
                    <Button BackgroundColor="BackgroundColor.Warning" Outline="true" Margin="Margin.Is2.FromEnd">Outline Warning</Button>
                    <Button BackgroundColor="BackgroundColor.Danger" Outline="true">Outline Danger</Button>
                </Div>

                <H2>Navigation Links</H2>
                <Nav Margin="Margin.Is3.FromEnd">
                    <Anchor To="" Class="nav-link">Home</Anchor>
                    <Anchor To="about" Class="nav-link">About</Anchor>
                    <Anchor To="services" Class="nav-link">Services</Anchor>
                    <Anchor To="contact" Class="nav-link">Contact</Anchor>
                </Nav>

                <H2>Button Components with Navigation</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Button BackgroundColor="BackgroundColor.Info" To="" Margin="Margin.Is2.FromEnd">
                        Navigate to Home
                    </Button>
                    <Button BackgroundColor="BackgroundColor.Warning" To="about" Margin="Margin.Is2.FromEnd">
                        Navigate to About
                    </Button>
                    <Button BackgroundColor="BackgroundColor.Dark" To="contact">
                        Navigate to Contact
                    </Button>
                </Div>

                <H2>Anchor with Custom Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Anchor To="" Class="text-decoration-none fw-bold text-success">
                        Custom Styled Link
                    </Anchor>
                </Div>

                <H2>Anchor Properties</H2>
                <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                    <H3>Anchor Features</H3>
                    <Paragraph>The Anchor component inherits all properties from the Element base class:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
                        <UnorderedListItem><Strong>Class:</Strong> CSS classes (Bootstrap utility classes supported)</UnorderedListItem>
                        <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
                        <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
                        <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
                        <UnorderedListItem><Strong>Display:</Strong> CSS display property</UnorderedListItem>
                        <UnorderedListItem><Strong>Margin/Padding:</Strong> Spacing utilities</UnorderedListItem>
                        <UnorderedListItem><Strong>Event Handlers:</Strong> Click, focus, keyboard events</UnorderedListItem>
                    </UnorderedList>
                    <Paragraph>
                        <Strong>Anchor-specific attributes:</Strong>
                    </Paragraph>
                    <UnorderedList>
                        <UnorderedListItem><Strong>To:</Strong> Navigation destination (Blazor routing)</UnorderedListItem>
                        <UnorderedListItem><Strong>Match:</Strong> How the NavLink should match the current URL</UnorderedListItem>
                        <UnorderedListItem><Strong>ActiveClass:</Strong> CSS class when the link is active</UnorderedListItem>
                    </UnorderedList>
                </Div>

                <H2>Navigation Example</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Button To=""
                            Title="Navigate to home page"
                            BackgroundColor="BackgroundColor.Primary">
                        Navigate to Home
                    </Button>
                    <Paragraph Class="form-text">This Button uses Blazor routing for client-side navigation.</Paragraph>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code{

    protected override void OnInitialized()
    {
        Logger.LogInformation("Anchor demo page initialized");
    }

}