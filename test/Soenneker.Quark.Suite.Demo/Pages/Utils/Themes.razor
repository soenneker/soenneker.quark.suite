@page "/utils/themes"

<PageTitle>Themes - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <div class="space-y-4">
        <DemoSection Title="Theme Provider" Description="The theming system is built around ThemeProvider and theme options. Configure in Program.cs or Startup."
            Code="@(@"services.AddQuark(options => { options.Theme = new QuarkTheme { ... }; });")">
            <Div Class="rounded-xl border bg-muted/30 p-6">
            <UnorderedList Class="list-inside list-disc space-y-2 text-sm">
                <UnorderedListItem><Strong>ThemeProvider</Strong> — Main theme provider component</UnorderedListItem>
                <UnorderedListItem><Strong>Theme Options</Strong> — Per-component customization</UnorderedListItem>
                <UnorderedListItem><Strong>Color System</Strong> — Consistent palette</UnorderedListItem>
                <UnorderedListItem><Strong>Size System</Strong> — Standardized sizing</UnorderedListItem>
                <UnorderedListItem><Strong>Component Themes</Strong> — Component-specific styling</UnorderedListItem>
            </UnorderedList>
        </Div>
        <CodeEditor ReadOnly="true" Language="csharp" AutoHeight="true"
                    Text="@(@"// Configure theme in Program.cs or Startup
services.AddQuark(options =>
{
    options.Theme = new QuarkTheme
    {
        PrimaryColor = ""#007bff"",
        SecondaryColor = ""#6c757d"",
        // ... more theme options
    };
});")" />
        </DemoSection>

        <DemoSection Title="Component Theme Options" Description="Each component has theme options for customization." Code="@(@"ButtonOptions, CardOptions, ...")">
            <Div Class="grid gap-6 md:grid-cols-2">
            <Card>
                <CardBody>
                    <Paragraph Class="mb-3 font-semibold">Button Options</Paragraph>
                    <UnorderedList Class="space-y-1 text-sm text-muted-foreground">
                        <UnorderedListItem><Code Class="rounded bg-muted px-1 py-0.5" Inline="true">ButtonOptions</Code> — Main styling</UnorderedListItem>
                        <UnorderedListItem><Code Class="rounded bg-muted px-1 py-0.5" Inline="true">BackgroundColor</Code> — Variants</UnorderedListItem>
                        <UnorderedListItem><Code Class="rounded bg-muted px-1 py-0.5" Inline="true">Size</Code> — Size variants</UnorderedListItem>
                        <UnorderedListItem><Code Class="rounded bg-muted px-1 py-0.5" Inline="true">BorderRadius</Code> — Corner rounding</UnorderedListItem>
                    </UnorderedList>
                </CardBody>
            </Card>
            <Card>
                <CardBody>
                    <Paragraph Class="mb-3 font-semibold">Card Options</Paragraph>
                    <UnorderedList Class="space-y-1 text-sm text-muted-foreground">
                        <UnorderedListItem><Code Class="rounded bg-muted px-1 py-0.5" Inline="true">CardOptions</Code> — Main styling</UnorderedListItem>
                        <UnorderedListItem><Code Class="rounded bg-muted px-1 py-0.5" Inline="true">BorderRadius</Code> — Corner rounding</UnorderedListItem>
                        <UnorderedListItem><Code Class="rounded bg-muted px-1 py-0.5" Inline="true">Shadow</Code> — Shadow effects</UnorderedListItem>
                        <UnorderedListItem><Code Class="rounded bg-muted px-1 py-0.5" Inline="true">Padding</Code> — Internal spacing</UnorderedListItem>
                    </UnorderedList>
                </CardBody>
            </Card>
        </Div>
        </DemoSection>

        <DemoSection Title="Color System" Description="Predefined colors and custom hex values." Code="@(@"<Button BackgroundColor=""BackgroundColor.Primary"">Primary</Button>")">
            <Div Class="grid gap-6 md:grid-cols-2">
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Predefined Colors</Paragraph>
                <Div Class="flex flex-wrap gap-2">
                    <Button BackgroundColor="BackgroundColor.Primary" Size="ButtonSize.Sm">Primary</Button>
                    <Button BackgroundColor="BackgroundColor.Secondary" Size="ButtonSize.Sm">Secondary</Button>
                    <Button BackgroundColor="BackgroundColor.Success" Size="ButtonSize.Sm">Success</Button>
                    <Button BackgroundColor="BackgroundColor.Danger" Size="ButtonSize.Sm">Danger</Button>
                    <Button BackgroundColor="BackgroundColor.Warning" Size="ButtonSize.Sm">Warning</Button>
                    <Button BackgroundColor="BackgroundColor.Info" Size="ButtonSize.Sm">Info</Button>
                    <Button BackgroundColor="BackgroundColor.Light" Size="ButtonSize.Sm">Light</Button>
                    <Button BackgroundColor="BackgroundColor.Dark" Size="ButtonSize.Sm">Dark</Button>
                </Div>
            </Div>
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Custom Colors</Paragraph>
                <Div Class="flex flex-wrap gap-2">
                    <Button BackgroundColor="@("#ff6b6b")" Size="ButtonSize.Sm">Custom Red</Button>
                    <Button BackgroundColor="@("#4ecdc4")" Size="ButtonSize.Sm">Custom Teal</Button>
                    <Button BackgroundColor="@("#45b7d1")" Size="ButtonSize.Sm">Custom Blue</Button>
                    <Button BackgroundColor="@("#96ceb4")" Size="ButtonSize.Sm">Custom Green</Button>
                </Div>
            </Div>
        </Div>
        </DemoSection>

        <DemoSection Title="Size System" Description="Standardized sizing across components." Code="@(@"<Button Size=""ButtonSize.Sm"">Small</Button>")">
            <Div Class="grid gap-6 md:grid-cols-2">
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Button Sizes</Paragraph>
                <Div Class="flex flex-wrap items-center gap-2">
                    <Button Variant="ButtonVariant.Default" Size="ButtonSize.Sm">Small</Button>
                    <Button Variant="ButtonVariant.Default" Size="ButtonSize.Default">Default</Button>
                    <Button Variant="ButtonVariant.Default" Size="ButtonSize.Lg">Large</Button>
                </Div>
            </Div>
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Text Sizes</Paragraph>
                <Div Class="space-y-2">
                    <Text Size="Size.Small">Small text</Text>
                    <Text Size="Size.Default">Default text</Text>
                    <Text Size="Size.Large">Large text</Text>
                    <Text Size="Size.ExtraLarge">Extra Large text</Text>
                </Div>
            </Div>
        </Div>
        </DemoSection>

        <DemoSection Title="Theme Examples" Code="@(@"<Alert BackgroundColor=""BackgroundColor.Primary"">Primary</Alert>")">
            <Div Class="grid gap-6 md:grid-cols-3">
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Alert Themes</Paragraph>
                <Div Class="space-y-2">
                    <Alert BackgroundColor="BackgroundColor.Primary">Primary</Alert>
                    <Alert BackgroundColor="BackgroundColor.Success">Success</Alert>
                    <Alert BackgroundColor="BackgroundColor.Warning">Warning</Alert>
                    <Alert BackgroundColor="BackgroundColor.Danger">Danger</Alert>
                </Div>
            </Div>
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Badge Themes</Paragraph>
                <Div Class="flex flex-wrap gap-2">
                    <Badge Variant="BadgeVariant.Default">Default</Badge>
                    <Badge Variant="BadgeVariant.Secondary">Secondary</Badge>
                    <Badge Variant="BadgeVariant.Outline">Outline</Badge>
                    <Badge Variant="BadgeVariant.Destructive">Destructive</Badge>
                </Div>
            </Div>
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Progress</Paragraph>
                <Div Class="space-y-2">
                    <Progress>
                        <ProgressBar Value="25" BackgroundColor="BackgroundColor.Primary"/>
                    </Progress>
                    <Progress>
                        <ProgressBar Value="50" BackgroundColor="BackgroundColor.Success"/>
                    </Progress>
                    <Progress>
                        <ProgressBar Value="75" BackgroundColor="BackgroundColor.Warning"/>
                    </Progress>
                </Div>
            </Div>
        </Div>
        </DemoSection>

        <DemoSection Title="Form Components" Code="@(@"<TextEdit Placeholder=""Enter text""/>")">
            <Div Class="grid gap-6 md:grid-cols-2">
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Inputs</Paragraph>
                <Div Class="space-y-4">
                    <Div Class="space-y-1"><Label>Text Input</Label><TextEdit Placeholder="Enter text" /></Div>
                    <Div Class="space-y-1"><Label>Memo</Label><MemoEdit Placeholder="Enter text" Rows="3" /></Div>
                    <Div Class="space-y-1"><Label>Date</Label><DateEdit /></Div>
                </Div>
            </Div>
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Controls</Paragraph>
                <Div Class="space-y-4">
                    <Check @bind-Checked="_checkValue">Checkbox</Check>
                    <Radio @bind-Checked="_radioValue" Name="radioGroup">Radio Button</Radio>
                    <Switch @bind-Checked="_switchValue">Switch</Switch>
                </Div>
            </Div>
        </Div>
        </DemoSection>

        <DemoSection Title="Navigation" Code="@(@"<Breadcrumb>...</Breadcrumb>")">
            <Div Class="grid gap-6 md:grid-cols-2">
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Breadcrumbs</Paragraph>
                <Breadcrumb>
                    <BreadcrumbItem><Anchor To="#">Home</Anchor></BreadcrumbItem>
                    <BreadcrumbItem><Anchor To="#">Library</Anchor></BreadcrumbItem>
                    <BreadcrumbItem Active="true">Data</BreadcrumbItem>
                </Breadcrumb>
            </Div>
            <Div Class="space-y-4">
                <Paragraph Class="font-semibold">Pagination</Paragraph>
                <Pagination TotalPages="5" CurrentPage="2" OnPageChanged="HandlePageChanged"/>
            </Div>
        </Div>
        </DemoSection>

        <DemoSection Title="Card Variants" Code="@(@"<Card>...</Card>")">
            <Div Class="grid gap-6 md:grid-cols-3">
            <Card>
                <CardHeader><CardTitle>Basic Card</CardTitle></CardHeader>
                <CardBody><CardText>Default theming.</CardText></CardBody>
            </Card>
            <Card Class="border-primary">
                <CardHeader><CardTitle>Primary Border</CardTitle></CardHeader>
                <CardBody><CardText>Border accent via Class.</CardText></CardBody>
            </Card>
            <Card Class="bg-muted/50">
                <CardHeader><CardTitle>Muted Background</CardTitle></CardHeader>
                <CardBody><CardText>Tailwind bg-muted/50.</CardText></CardBody>
            </Card>
        </Div>
        </DemoSection>

        <DemoSection Title="Setup" Code="@(@"builder.Services.AddQuarkSuite();")">
            <Card>
            <CardBody>
                <CodeEditor ReadOnly="true" AutoHeight="true"
                            Text="@(@"// Program.cs or Startup.cs
builder.Services.AddQuarkSuite();

// Configure theme options
builder.Services.Configure<ButtonOptions>(options =>
{
    options.Color = Color.Primary;
    options.Size = Size.Default;
});

// Use ThemeProvider in layout
<ThemeProvider>
    <!-- Your app content -->
</ThemeProvider>")" />
            </CardBody>
        </Card>
        </DemoSection>
    </div>
</Div>

@code {
    private bool _checkValue;
    private bool _radioValue;
    private bool _switchValue;

    private async Task HandlePageChanged(int page) => await Task.CompletedTask;
}
