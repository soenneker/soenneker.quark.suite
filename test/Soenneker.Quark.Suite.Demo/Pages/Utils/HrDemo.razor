@page "/utils/hr-demo"

<PageTitle>Hr (Horizontal Rule) - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div>
        <Div Class="space-y-3">
            <H1 Class="text-4xl font-bold tracking-tight">Hr (Horizontal Rule)</H1>
            <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
                The <Code Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono" Inline="true">Hr</Code> component creates HTML &lt;hr&gt; elements for content separation.
            </Paragraph>
        </Div>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">Basic</H2>
        </Div>
        <DemoSection Title="Basic Horizontal Rules" Code="@(@"<Text>Content above</Text>
<Hr/>
<Text>Content below</Text>")">
            <Div>
                <Text>Content above the horizontal rule</Text>
                <Hr/>
                <Text>Content below the horizontal rule</Text>
            </Div>
        </DemoSection>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">Styled with Tailwind</H2>
        </Div>
        <DemoSection>
            <Div Class="space-y-4">
                <Div>
                    <Text>Default:</Text>
                    <Hr/>
                </Div>
                <Div>
                    <Text>Primary border:</Text>
                    <Hr Class="border-primary"/>
                </Div>
                <Div>
                    <Text>Custom gradient:</Text>
                    <Hr Style="height: 5px; background: linear-gradient(to right, #007bff, #6f42c1); border: none;"/>
                </Div>
                <Div>
                    <Text>Dashed:</Text>
                    <Hr Style="border: none; border-top: 2px dashed #dc3545;"/>
                </Div>
            </Div>
        </DemoSection>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">In Sections</H2>
        </Div>
        <DemoSection>
            <Div>
                <H3 Class="text-lg font-semibold">Section 1</H3>
                <Text>Content of section 1.</Text>
                <Hr/>
                <H3 Class="text-lg font-semibold">Section 2</H3>
                <Text>Content of section 2.</Text>
                <Hr/>
                <H3 Class="text-lg font-semibold">Section 3</H3>
                <Text>Content of section 3.</Text>
            </Div>
        </DemoSection>
    </Div>

    <Div Class="space-y-4">
        <Div Class="space-y-2">
            <H2 Class="text-2xl font-semibold">Interactive</H2>
        </Div>
        <DemoSection Description="Hr supports click events and other interactions.">
            <Div>
                <Text Class="mb-2 block">Hover and click the rule below:</Text>
                <Hr Class="cursor-pointer transition-all duration-300 hover:opacity-50" @onclick="HandleHrClick" Title="Click me!"/>
                <Text Class="mt-2 text-sm text-muted-foreground">Click count: @_clickCount</Text>
            </Div>
        </DemoSection>
    </Div>
</Div>

@code {
    private int _clickCount;

    private void HandleHrClick(MouseEventArgs args)
    {
        _clickCount++;
        StateHasChanged();
    }
}
