@page "/utils/semantic-html"

<PageTitle>Semantic HTML - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Semantic HTML</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            Article, Main, and Aside components for document structure and SEO.
        </Paragraph>
    </Div>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Article</H2>
        <Paragraph Class="text-muted-foreground" Margin="Margin.Is0">Represents a self-contained composition that is independently distributable.</Paragraph>
        <DemoSection Code="@(@"<Article>
    <H3>Article Title</H3>
    <Paragraph>Content goes here...</Paragraph>
</Article>")">
            <Article Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" BackgroundColor="@BackgroundColor.Light" Class="rounded-lg">
                <H3>Understanding Semantic HTML</H3>
                <Paragraph TextColor="TextColor.Muted">
                    <Small>Published January 15, 2024</Small>
                </Paragraph>
                <Paragraph>
                    Semantic elements provide meaning for search engines and assistive technologies.
                </Paragraph>
                <Paragraph Margin="Margin.Is0.FromBottom">
                    Using &lt;article&gt;, &lt;main&gt;, and &lt;aside&gt; improves accessibility and SEO.
                </Paragraph>
            </Article>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Main</H2>
        <Paragraph Class="text-muted-foreground" Margin="Margin.Is0">The dominant content of the document. One visible Main per page.</Paragraph>
        <DemoSection>
            <Main Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is4" BackgroundColor="BackgroundColor.Primary" BackgroundOpacity="BackgroundOpacity.Is10" Class="rounded-lg">
                <H3>Main Content Area</H3>
                <Paragraph>
                    The &lt;main&gt; element contains primary content. Exclude repeated elements like nav, header, footer.
                </Paragraph>
                <Paragraph Margin="Margin.Is0.FromBottom">
                    Screen readers use main to jump to primary content.
                </Paragraph>
            </Main>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Article + Aside</H2>
        <Paragraph Class="text-muted-foreground" Margin="Margin.Is0">Aside represents tangentially related content (sidebars, pull quotes).</Paragraph>
        <Div Class="grid gap-4 lg:grid-cols-3">
            <Div Class="lg:col-span-2">
                <Article Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Class="h-full rounded-lg">
                    <H4>Main Article Content</H4>
                    <Paragraph>
                        Primary information the user came to read. The article continues with details and explanations.
                    </Paragraph>
                </Article>
            </Div>
            <Aside Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" BackgroundColor="BackgroundColor.Info" BackgroundOpacity="BackgroundOpacity.Is10" Class="rounded-lg">
                <H6>Related Information</H6>
                <Paragraph Margin="Margin.Is2.FromBottom">
                    <Small>
                        <Icon Name="lightbulb" Margin="Margin.Is1.FromEnd"/>
                        <Strong>Did you know?</Strong>
                    </Small>
                </Paragraph>
                <Paragraph Margin="Margin.Is0.FromBottom">
                    <Small>Aside is used for sidebars, pull quotes, or related links.</Small>
                </Paragraph>
            </Aside>
        </Div>
        <CodeEditor ReadOnly="true" Language="html" AutoHeight="true"
                    Text="@(@"<Article>
    <H4>Main content</H4>
    <Paragraph>Primary content.</Paragraph>
</Article>
<Aside>
    <H6>Sidebar</H6>
    <Paragraph>Related content.</Paragraph>
</Aside>")" />
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Multiple Articles</H2>
        <Div Class="grid gap-4 md:grid-cols-2">
            <Article Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Class="h-full rounded-lg">
                <H5>First Article</H5>
                <Paragraph Margin="Margin.Is0.FromBottom">Self-contained content that could be syndicated independently.</Paragraph>
            </Article>
            <Article Border="Border.Is1" BorderRadius="BorderRadius.Default" Padding="Padding.Is3" Class="h-full rounded-lg">
                <H5>Second Article</H5>
                <Paragraph Margin="Margin.Is0.FromBottom">Each article represents a complete, independent piece of content.</Paragraph>
            </Article>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Benefits</H2>
        <Alert BackgroundColor="@BackgroundColor.Success">
            <Icon Name="circle-check" Margin="Margin.Is2.FromEnd"/>
            <Strong>Semantic HTML improves:</Strong>
            <UnorderedList Class="mt-2 list-inside list-disc space-y-1">
                <UnorderedListItem>Search engine understanding of structure</UnorderedListItem>
                <UnorderedListItem>Accessibility for screen readers</UnorderedListItem>
                <UnorderedListItem>Code readability and maintainability</UnorderedListItem>
            </UnorderedList>
        </Alert>
    </Section>
</Div>
