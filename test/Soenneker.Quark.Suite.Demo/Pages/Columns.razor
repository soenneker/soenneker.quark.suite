@page "/columns"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Columns</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Bootstrap Column component from Quark.Columns.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Column Usage</H2>
                <Paragraph>The Column component provides a Bootstrap column that automatically sizes and provides proper spacing.</Paragraph>

                <Row Margin="Margin.Is3.FromEnd">
                    <Column BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3">
                        <H3>Column with Quark Properties</H3>
                        <Paragraph>This column uses Quark properties (BackgroundColor, TextColor, Padding) instead of manual CSS classes.</Paragraph>
                        <Paragraph><Strong>Result:</Strong> Uses proper Quark styling properties</Paragraph>
                    </Column>
                </Row>

                <H2>Responsive Columns</H2>
                <Row Margin="Margin.Is3.FromEnd">
                    <Column ColumnSize="@ColumnSize.Is4.OnTablet" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Small Column</H4>
                        <Paragraph>This column uses ColumnSize.Is4.OnTablet for responsive sizing.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4.OnTablet" BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Medium Column</H4>
                        <Paragraph>This column also uses ColumnSize.Is4.OnTablet for equal width.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4.OnTablet" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Large Column</H4>
                        <Paragraph>This column completes the row with ColumnSize.Is4.OnTablet.</Paragraph>
                    </Column>
                </Row>

                <H2>Column Sizing Examples</H2>
                <Row Margin="Margin.Is3.FromEnd">
                    <Column ColumnSize="@ColumnSize.Is6" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Half Width</H4>
                        <Paragraph>This column takes up half the row width (ColumnSize.Is6).</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is6" BackgroundColor="BackgroundColor.Dark" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Half Width</H4>
                        <Paragraph>This column also takes up half the row width (ColumnSize.Is6).</Paragraph>
                    </Column>
                </Row>

                <Row Margin="Margin.Is3.FromEnd">
                    <Column ColumnSize="@ColumnSize.Is4" BackgroundColor="BackgroundColor.Secondary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>One Third</H4>
                        <Paragraph>This column takes up one third of the row (ColumnSize.Is4).</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is8" BackgroundColor="BackgroundColor.Light" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Two Thirds</H4>
                        <Paragraph>This column takes up two thirds of the row (ColumnSize.Is8).</Paragraph>
                    </Column>
                </Row>

                <H2>Column CSS Values</H2>
                <Paragraph>Now you can use CSS values for column sizing, offsetting, and ordering:</Paragraph>

                <Row Margin="Margin.Is3.FromEnd">
                    <Column ColumnSize="@ColumnSize.Is6" BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>CSS Value Column Size</H4>
                        <Paragraph>This column uses ColumnSize.Is6 (equivalent to col-6).</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is6" BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>CSS Value Column Size</H4>
                        <Paragraph>This column also uses ColumnSize.Is6.</Paragraph>
                    </Column>
                </Row>

                <Row Margin="Margin.Is3.FromEnd">
                    <Column ColumnSize="@ColumnSize.Is4" ColumnOffset="ColumnOffset.O1" BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Column with Offset</H4>
                        <Paragraph>This column uses ColumnSize.Is4 with ColumnOffset.O1.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Regular Column</H4>
                        <Paragraph>This column uses ColumnSize.Is4.</Paragraph>
                    </Column>
                </Row>

                <Row Margin="Margin.Is3.FromEnd">
                    <Column ColumnSize="@ColumnSize.Is4" ColumnOrder="ColumnOrder.O3" BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Order 3</H4>
                        <Paragraph>This column appears third due to ColumnOrder.O3.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4" ColumnOrder="ColumnOrder.O1" BackgroundColor="BackgroundColor.Secondary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Order 1</H4>
                        <Paragraph>This column appears first due to ColumnOrder.O1.</Paragraph>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is4" ColumnOrder="ColumnOrder.O2" BackgroundColor="BackgroundColor.Dark" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Order 2</H4>
                        <Paragraph>This column appears second due to ColumnOrder.O2.</Paragraph>
                    </Column>
                </Row>

                <H2>Column Properties</H2>
                <Row>
                    <Column ColumnSize="@ColumnSize.Is12" BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is3">
                        <H3>Column Features</H3>
                        <Paragraph>The Column component inherits all properties from the Element base class:</Paragraph>
                        <UnorderedList>
                            <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
                            <UnorderedListItem><Strong>Class:</Strong> CSS classes (Bootstrap utility classes supported)</UnorderedListItem>
                            <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
                            <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
                            <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
                            <UnorderedListItem><Strong>Display:</Strong> CSS display property</UnorderedListItem>
                            <UnorderedListItem><Strong>Margin/Padding:</Strong> Spacing utilities</UnorderedListItem>
                            <UnorderedListItem><Strong>Event Handlers:</Strong> Click, focus, keyboard events</UnorderedListItem>
                            <UnorderedListItem><Strong>ColumnSize:</Strong> CSS value for column sizing (Is1-Is12, Auto)</UnorderedListItem>
                            <UnorderedListItem><Strong>ColumnOffset:</Strong> CSS value for column offsetting</UnorderedListItem>
                            <UnorderedListItem><Strong>ColumnOrder:</Strong> CSS value for column ordering</UnorderedListItem>
                        </UnorderedList>
                    </Column>
                </Row>

                <H2>Auto-sizing Columns</H2>
                <Row Margin="Margin.Is3.FromEnd">
                    <Column BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Auto Column 1</H4>
                        <Paragraph>This column auto-sizes based on content.</Paragraph>
                    </Column>
                    <Column BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Auto Column 2</H4>
                        <Paragraph>This column also auto-sizes.</Paragraph>
                    </Column>
                    <Column BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is3" TextAlignment="TextAlignment.Center">
                        <H4>Auto Column 3</H4>
                        <Paragraph>All columns share the remaining space equally.</Paragraph>
                    </Column>
                </Row>
            </Div>
        </Column>
    </Row>
</Container>

@code{

    protected override void OnInitialized()
    {
        Logger.LogInformation("Column demo page initialized");
    }

}