@page "/hr-demo"

<Container Class="py-4">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Hr (Horizontal Rule)</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Hr component for horizontal dividers.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Horizontal Rules</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text>Content above the horizontal rule</Text>
                    <Hr />
                    <Text>Content below the horizontal rule</Text>
                </Div>
                <Paragraph Class="text-muted">The Hr component creates HTML &lt;hr&gt; elements for content separation.</Paragraph>
            </Div>

            <Hr/>

            <Div>
                <H2>Different Hr Styles</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text>Default horizontal rule:</Text>
                    <Hr />
                    <Text>Styled horizontal rule with custom class:</Text>
                    <Hr Class="border-primary" />
                    <Text>Custom styled horizontal rule:</Text>
                    <Hr Style="border: 2px solid #28a745; border-radius: 5px;" />
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Hr with Different Colors</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text Class="text-primary">Primary colored content</Text>
                    <Hr Class="border-primary" />
                    <Text Class="text-success">Success colored content</Text>
                    <Hr Class="border-success" />
                    <Text Class="text-warning">Warning colored content</Text>
                    <Hr Class="border-warning" />
                    <Text Class="text-danger">Danger colored content</Text>
                    <Hr Class="border-danger" />
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Hr with Custom Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text>Thick horizontal rule:</Text>
                    <Hr Style="height: 5px; background: linear-gradient(to right, #007bff, #6f42c1); border: none;" />
                    <Text>Dashed horizontal rule:</Text>
                    <Hr Style="border: none; border-top: 2px dashed #dc3545;" />
                    <Text>Dotted horizontal rule:</Text>
                    <Hr Style="border: none; border-top: 3px dotted #28a745;" />
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Hr in Sections</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <H3>Section 1</H3>
                    <Text>This is the content of section 1.</Text>
                    <Hr />
                    <H3>Section 2</H3>
                    <Text>This is the content of section 2.</Text>
                    <Hr />
                    <H3>Section 3</H3>
                    <Text>This is the content of section 3.</Text>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Hr Component Properties</H2>
                <div class="bg-light p-3 mb-3">
                    <H3>Hr Features</H3>
                    <Paragraph>The Hr component inherits all properties from the Element base class:</Paragraph>
                    <ul>
                        <li><strong>Id:</strong> HTML id attribute</li>
                        <li><strong>Class:</strong> CSS classes (Bootstrap border classes supported)</li>
                        <li><strong>Style:</strong> Inline CSS styles</li>
                        <li><strong>Title:</strong> Tooltip text</li>
                        <li><strong>Hidden:</strong> Visibility control</li>
                    </ul>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Interactive Hr Example</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text>Hover over the horizontal rule below to see the effect:</Text>
                    <Hr Class="interactive-hr" Style="cursor: pointer; transition: all 0.3s ease;" 
                        @onclick="HandleHrClick" 
                        Title="Click me!" />
                    <Text Class="text-muted">Click count: @clickCount</Text>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    private int clickCount = 0;

    private void HandleHrClick(MouseEventArgs args)
    {
        clickCount++;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }
}
