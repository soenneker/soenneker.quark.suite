@page "/"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<!-- Hero -->
<Section Class="hero-section">
  <Container Class="text-center">
    <Div Class="hero-content">
      <H1 Class="hero-title">
        <Image Source="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" Alt="Quark Suite" />
        Quark Suite for Blazor
      </H1>
      <Paragraph Class="hero-subtitle">
        Bootstrap‑native UI components. <Strong>Minimal JS, fast render, full theming.</Strong>
      </Paragraph>

      <Div Class="hero-actions">
        <Button Class="btn-primary" Size="Size.Large" To="https://github.com/soenneker/soenneker.quark.suite" Target="Target.Blank">
          <Icon IconStyle="IconStyle.Brands" Name="github" Margin="Margin.Is2.FromEnd" />
          GitHub
        </Button>
        <Button Class="btn-outline-light" Size="Size.Large" To="/quickstart">
          <Icon Name="rocket" Margin="Margin.Is2.FromEnd" />
          Quickstart
        </Button>
      </Div>
    </Div>
  </Container>
</Section>

<!-- Features -->
<Section Class="features-section">
  <Container>
    <Row Class="text-center" Margin="Margin.Is4.FromEnd">
      <Column>
        <H2 Class="section-title">
          Built for speed, clarity, and control
        </H2>
      </Column>
    </Row>

    <Row>
      <Column ColumnSize="@ColumnSize.Is4.OnTablet">
        <Card Class="feature-card h-100">
          <CardBody Class="text-center">
            <Icon Name="bolt" TextColor="@TextColor.Primary" IconSize="IconSize.Is2x" Margin="Margin.Is3.FromEnd" />
            <H4>Minimal JS</H4>
            <Paragraph>
              Pure Blazor/C# first. Tiny footprint, low allocations, smooth UI.
            </Paragraph>
          </CardBody>
        </Card>
      </Column>

      <Column ColumnSize="@ColumnSize.Is4.OnTablet">
        <Card Class="feature-card h-100">
          <CardBody Class="text-center">
            <Icon Name="palette" TextColor="@TextColor.Primary" IconSize="IconSize.Is2x" Margin="Margin.Is3.FromEnd" />
            <H4>Full theming</H4>
            <Paragraph>
              Control look & feel with Bootstrap CSS variables: colors, spacing, typography.
            </Paragraph>
          </CardBody>
        </Card>
      </Column>

      <Column ColumnSize="@ColumnSize.Is4.OnTablet">
        <Card Class="feature-card h-100">
          <CardBody Class="text-center">
            <Icon IconStyle="IconStyle.Brands" Name="bootstrap" TextColor="@TextColor.Primary" IconSize="IconSize.Is2x" Margin="Margin.Is3.FromEnd" />
            <H4>Bootstrap‑native</H4>
            <Paragraph>
              Aligned with Bootstrap utilities and conventions.
            </Paragraph>
          </CardBody>
        </Card>
      </Column>
    </Row>
  </Container>
</Section>

<!-- Install -->
<Section Class="installation-section">
  <Container>
    <Row Class="text-center" Margin="Margin.Is4.FromEnd">
      <Column>
        <H2 Class="section-title">
          Install in minutes
        </H2>
      </Column>
    </Row>

    <Row>
      <Column ColumnSize="@ColumnSize.Is8.OnLaptop" Class="mx-auto">
        <Card Class="installation-card">
          <CardBody>
            <Div Class="installation-steps">
              <Div Class="step">
                <H5 Class="step-title">1. Add the package</H5>
                <Code Class="installation-code">dotnet add package Soenneker.Quark.Suite</Code>
              </Div>

              <Div Class="step">
                <H5 Class="step-title">2. Register services</H5>
                <Code Class="installation-code">builder.Services.AddQuarkSuiteAsScoped();</Code>
              </Div>

              <Div Class="step">
                <H5 Class="step-title">3. Add imports</H5>
                <Code Class="installation-code">@@using Soenneker.Quark</Code>
              </Div>

              <Div Class="step">
                <H5 Class="step-title">4. Use a component</H5>
                <Code Class="installation-code">&lt;Button BackgroundColor="BackgroundColor.Primary"&gt;Hello Quark!&lt;/Button&gt;</Code>
              </Div>
            </Div>
          </CardBody>
        </Card>
      </Column>
    </Row>
  </Container>
</Section>

<style>
  :root {
    --surface: rgba(255,255,255,0.04);
    --border: rgba(255,255,255,0.08);
  }

  .hero-section {
    background: linear-gradient(145deg, #0b0f14, #111926);
    color: #fff;
    padding: 7rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-title img {
    height: 2.25rem;
    margin-right: 0.75rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 2rem;
  }

  .hero-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .btn-primary {
    background: #0d6efd;
    border: none;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    border-radius: 0.5rem;
    box-shadow: 0 6px 20px rgba(13,110,253,.4);
    transition: transform .2s ease;
  }

  .btn-primary:hover { transform: translateY(-2px); }

  .btn-outline-light {
    border: 1px solid #fff;
    background: transparent;
    color: #fff;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    border-radius: 0.5rem;
  }

  .features-section, .installation-section { padding: 4rem 0; }

  .feature-card, .installation-card {
    border: 1px solid var(--border);
    background: var(--surface);
    border-radius: 0.75rem;
    box-shadow: 0 6px 20px rgba(0,0,0,.1);
    transition: transform .15s ease;
  }

  .feature-card:hover, .installation-card:hover { transform: translateY(-2px); }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .installation-steps { max-width: 720px; margin: 0 auto; }

  .installation-code {
    background-color: #111926;
    color: #e9ecef;
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
    display: block;
    margin-top: 0.5rem;
    font-family: Consolas, monospace;
    font-size: 0.9rem;
  }

 @@media (max-width: 768px) {
    .hero-title { font-size: 2.25rem; flex-direction: column; }
    .hero-title img { margin-right: 0; margin-bottom: 0.75rem; }
    .section-title { font-size: 1.75rem; }
    .hero-section { padding: 5rem 0; }
  }
</style>

@code {
  protected override void OnInitialized()
  {
    Logger.LogInformation("Index page initialized");
  }
}
