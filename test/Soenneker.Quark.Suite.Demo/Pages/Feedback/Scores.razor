@page "/feedback/scores"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Scores</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates the Score component with gradient coloring and partial circle fill.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div Margin="Margin.Is3.FromEnd">
                <H2>Basic Scores</H2>
                <Div Class="d-flex flex-wrap justify-content-center" Style="gap: 1.5rem;">
                    <Score Value="15" Text="Risk"/>
                    <Score Value="35" Text="Stability"/>
                    <Score Value="50" Text="Completion"/>
                    <Score Value="70" Text="Quality"/>
                    <Score Value="88" Text="Health"/>
                    <Score Value="100" Text="Perfect"/>
                </Div>
            </Div>

            <CodeEditor ReadOnly="true"
                        Language="@("html")"
                        AutoHeight="true" Margin="Margin.Is3.FromTop"
                        Text="@(@"<Score Value=""72"" Text=""Quality"" />
<Score Value=""50"" Text=""Completion"" />")" />

            <Hr />

            <Div Margin="Margin.Is3.FromEnd">
                <H2>Size + Thickness</H2>
                <Div Class="d-flex flex-wrap justify-content-center" Style="gap: 2rem;">
                    <Score Value="42" Text="Compact" Size="72" Thickness="6" />
                    <Score Value="64" Text="Default" />
                    <Score Value="82" Text="Large" Size="120" Thickness="12" />
                </Div>
            </Div>
        </Column>
    </Row>
</Container>
