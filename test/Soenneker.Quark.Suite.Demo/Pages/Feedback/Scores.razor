@page "/feedback/scores"

<PageTitle>Scores - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Basic Scores" Description="Score component with gradient coloring and partial circle fill." Code="@(@"<Score Value=""15"" Text=""Risk""/>
<Score Value=""35"" Text=""Stability""/>
<Score Value=""50"" Text=""Completion""/>
<Score Value=""70"" Text=""Quality""/>
<Score Value=""88"" Text=""Health""/>
<Score Value=""100"" Text=""Perfect""/>")">
                <Div Margin="Margin.Is3.FromEnd">
                    <Div Class="d-flex flex-wrap justify-content-center" Style="gap: 1.5rem;">
                        <Score Value="15" Text="Risk"/>
                        <Score Value="35" Text="Stability"/>
                        <Score Value="50" Text="Completion"/>
                        <Score Value="70" Text="Quality"/>
                        <Score Value="88" Text="Health"/>
                        <Score Value="100" Text="Perfect"/>
                    </Div>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Size + Thickness" Description="Custom Size and Thickness for the score circle." Code="@(@"<Score Value=""42"" Text=""Compact"" Size=""72"" Thickness=""6""/>
<Score Value=""64"" Text=""Default""/>
<Score Value=""82"" Text=""Large"" Size=""120"" Thickness=""12""/>")">
                <Div Margin="Margin.Is3.FromEnd">
                    <Div Class="d-flex flex-wrap justify-content-center" Style="gap: 2rem;">
                        <Score Value="42" Text="Compact" Size="72" Thickness="6" />
                        <Score Value="64" Text="Default" />
                        <Score Value="82" Text="Large" Size="120" Thickness="12" />
                    </Div>
                </Div>
            </DemoSection>
        </section>
    </Div>
</Div>
