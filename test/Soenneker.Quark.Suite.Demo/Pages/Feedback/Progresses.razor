@page "/feedback/progresses"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<PageTitle>Progresses - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Basic Progress" Description="Simple progress bar with a value." Code="@(@"<Progress>
    <ProgressBar Value=""25""/>
</Progress>")">
                <Div Margin="Margin.Is3.FromEnd">
                    <Progress class="mb-3">
                        <ProgressBar Value="25"/>
                    </Progress>
                </Div>
            </DemoSection>
        </section>
        <section class="space-y-4">
            <DemoSection Title="Striped + Animated" Description="Striped and animated progress bar." Code="@(@"<Progress>
    <ProgressBar Value=""60"" Striped=""true"" Animated=""true""/>
</Progress>")">
                <Div Margin="Margin.Is3.FromEnd">
                    <Progress class="mb-3">
                        <ProgressBar Value="60" Striped="true" Animated="true"/>
                    </Progress>
                </Div>
            </DemoSection>
        </section>
        <section class="space-y-4">
            <DemoSection Title="Progress Colors" Description="Progress bars with semantic colors." Code="@(@"<Progress><ProgressBar Value=""35"" Color=""Color.Success""/></Progress>
<Progress><ProgressBar Value=""70"" Color=""Color.Warning""/></Progress>
<Progress><ProgressBar Value=""90"" Color=""Color.Danger""/></Progress>")">
                <Div>
                    <Div Margin="Margin.Is3.FromEnd">
                        <Progress class="mb-3">
                            <ProgressBar Value="35" Color="Color.Success"/>
                        </Progress>
                        <Progress class="mb-3">
                            <ProgressBar Value="70" Color="Color.Warning"/>
                        </Progress>
                        <Progress class="mb-3">
                            <ProgressBar Value="90" Color="Color.Danger"/>
                        </Progress>
                    </Div>
                </Div>
            </DemoSection>
        </section>
    </Div>
</Div>

@code{

    protected override void OnInitialized()
    {
    }

}
