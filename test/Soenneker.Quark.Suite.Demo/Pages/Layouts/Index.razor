@page "/layouts"

<Layout HasSider="true">
	<LayoutSider>
		<LayoutSiderContent>
			<h5 class="mb-3">Navigation</h5>
			<ul class="list-unstyled small">
				<li class="mb-2"><a class="link-body-emphasis" href="#">Overview</a></li>
				<li class="mb-2"><a class="link-body-emphasis" href="#">Components</a></li>
				<li class="mb-2"><a class="link-body-emphasis" href="#">Themes</a></li>
			</ul>
		</LayoutSiderContent>
	</LayoutSider>

	<div class="d-flex flex-column flex-grow-1">
		<LayoutHeader>
			<div class="container-fluid">
				<div class="d-flex align-items-center justify-content-between">
					<span class="fw-semibold">Quark Layouts</span>
					<a class="btn btn-sm btn-primary" href="https://github.com/soenneker">GitHub</a>
				</div>
			</div>
		</LayoutHeader>

		<LayoutContent>
			<div class="container py-4">
				<h2 class="mb-3">Minimal, elegant page frame</h2>
				<p class="text-secondary">Header, fixed sidebar, and a content area.</p>
				<div class="row g-3">
					<div class="col-md-6">
						<div class="card shadow-sm">
							<div class="card-body">
								<h5 class="card-title">Responsive</h5>
								<p class="card-text">Built with Bootstrap 5 utility classes.</p>
							</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="card shadow-sm">
							<div class="card-body">
								<h5 class="card-title">Composable</h5>
								<p class="card-text">Use header, sider, content, and footer as needed.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</LayoutContent>

		<LayoutFooter>
			<div class="container-fluid small d-flex justify-content-between">
				<span>Â© @DateTime.Now.Year Soenneker</span>
				<span class="text-secondary">Quark Layouts Demo</span>
			</div>
		</LayoutFooter>
	</div>
</Layout>
