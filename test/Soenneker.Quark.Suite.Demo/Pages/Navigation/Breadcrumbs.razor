@page "/navigation/breadcrumbs"
@using Microsoft.Extensions.Logging
@inject ILogger<Breadcrumbs> Logger

<PageTitle>Breadcrumbs - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Breadcrumbs</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            Navigational hierarchy showing the current location. Use BreadcrumbItem with To for links and Active for the current page.
        </Paragraph>
    </Div>

    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Basic" Description="Simple breadcrumb trail with Home, Library, and current page."
                        Code="@(@"<Breadcrumb>
    <BreadcrumbItem To="""">Home</BreadcrumbItem>
    <BreadcrumbItem To=""library"">Library</BreadcrumbItem>
    <BreadcrumbItem Active=""true"">Data</BreadcrumbItem>
</Breadcrumb>")">
                <Breadcrumb>
                    <BreadcrumbItem To="">Home</BreadcrumbItem>
                    <BreadcrumbItem To="library">Library</BreadcrumbItem>
                    <BreadcrumbItem Active="true">Data</BreadcrumbItem>
                </Breadcrumb>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="More levels" Description="Deep hierarchy for product or documentation paths.">
                <Breadcrumb>
                    <BreadcrumbItem To="">Home</BreadcrumbItem>
                    <BreadcrumbItem To="products">Products</BreadcrumbItem>
                    <BreadcrumbItem To="products/electronics">Electronics</BreadcrumbItem>
                    <BreadcrumbItem To="products/electronics/phones">Phones</BreadcrumbItem>
                    <BreadcrumbItem Active="true">iPhone 15</BreadcrumbItem>
                </Breadcrumb>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="With icons" Description="Add Icon inside BreadcrumbItem for visual context.">
                <Breadcrumb>
                    <BreadcrumbItem To="">
                        <Icon Name="house" /> Home
                    </BreadcrumbItem>
                    <BreadcrumbItem To="dashboard">
                        <Icon Name="gauge" /> Dashboard
                    </BreadcrumbItem>
                    <BreadcrumbItem To="dashboard/settings">
                        <Icon Name="gear" /> Settings
                    </BreadcrumbItem>
                    <BreadcrumbItem Active="true">
                        <Icon Name="user" /> Profile
                    </BreadcrumbItem>
                </Breadcrumb>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Large" Description="Set Large=true for bigger text and spacing.">
                <Breadcrumb Large="true">
                    <BreadcrumbItem To="">Home</BreadcrumbItem>
                    <BreadcrumbItem To="documentation">Documentation</BreadcrumbItem>
                    <BreadcrumbItem To="documentation/components">Components</BreadcrumbItem>
                    <BreadcrumbItem Active="true">Breadcrumbs</BreadcrumbItem>
                </Breadcrumb>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="With aria label" Description="Set AriaLabel on Breadcrumb for accessibility.">
                <Breadcrumb AriaLabel="Product navigation breadcrumb">
                    <BreadcrumbItem To="">Store</BreadcrumbItem>
                    <BreadcrumbItem To="category/electronics">Electronics</BreadcrumbItem>
                    <BreadcrumbItem To="category/electronics/computers">Computers</BreadcrumbItem>
                    <BreadcrumbItem Active="true">Laptops</BreadcrumbItem>
                </Breadcrumb>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Context examples" Description="E-commerce and documentation styles.">
                <Div Class="space-y-4">
                    <Div>
                        <H4 Class="text-sm font-medium text-muted-foreground mb-2">E-commerce</H4>
                        <Breadcrumb>
                            <BreadcrumbItem To="">Store</BreadcrumbItem>
                            <BreadcrumbItem To="category/clothing">Clothing</BreadcrumbItem>
                            <BreadcrumbItem To="category/clothing/mens">Men's</BreadcrumbItem>
                            <BreadcrumbItem Active="true">Blue Cotton Shirt</BreadcrumbItem>
                        </Breadcrumb>
                    </Div>
                    <Div>
                        <H4 Class="text-sm font-medium text-muted-foreground mb-2">Documentation</H4>
                        <Breadcrumb>
                            <BreadcrumbItem To="docs">Documentation</BreadcrumbItem>
                            <BreadcrumbItem To="docs/api">API Reference</BreadcrumbItem>
                            <BreadcrumbItem To="docs/api/authentication">Authentication</BreadcrumbItem>
                            <BreadcrumbItem Active="true">OAuth 2.0</BreadcrumbItem>
                        </Breadcrumb>
                    </Div>
                </Div>
            </DemoSection>
        </section>
    </Div>
</Div>

@code {
    protected override void OnInitialized()
    {
        Logger.LogInformation("Breadcrumbs demo page initialized");
    }
}
