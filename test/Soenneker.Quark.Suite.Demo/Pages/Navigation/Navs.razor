@page "/navigation/navs"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Navs</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Nav component - a simple wrapper for the HTML nav element.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Navigation</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Nav>
                        <UnorderedList Class="nav">
                            <UnorderedListItem Class="nav-item">
                                <a class="nav-link active" href="">Home</a>
                            </UnorderedListItem>
                            <UnorderedListItem Class="nav-item">
                                <a class="nav-link" href="about">About</a>
                            </UnorderedListItem>
                            <UnorderedListItem Class="nav-item">
                                <a class="nav-link" href="contact">Contact</a>
                            </UnorderedListItem>
                        </UnorderedList>
                    </Nav>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Navigation with Custom Content</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Nav>
                        <div class="navbar-nav">
                            <a class="nav-link" href="">Home</a>
                            <a class="nav-link" href="about">About</a>
                            <a class="nav-link" href="contact">Contact</a>
                        </Div>
                    </Nav>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Navigation with Bootstrap Classes</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Nav Class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="">My App</a>
                            <div class="navbar-nav">
                                <a class="nav-link" href="">Home</a>
                                <a class="nav-link" href="about">About</a>
                                <a class="nav-link" href="contact">Contact</a>
                            </Div>
                        </Div>
                    </Nav>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Navigation with Custom Aria Label</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Nav AriaLabel="Main navigation menu" Class="navbar navbar-expand-lg navbar-dark bg-dark">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="">My App</a>
                            <div class="navbar-nav">
                                <a class="nav-link" href="">Home</a>
                                <a class="nav-link" href="about">About</a>
                                <a class="nav-link" href="contact">Contact</a>
                            </Div>
                        </Div>
                    </Nav>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code{

    protected override void OnInitialized()
    {
        Logger.LogInformation("Navs demo page initialized");
    }

}