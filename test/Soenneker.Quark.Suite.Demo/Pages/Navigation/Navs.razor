@page "/navigation/navs"
@using Microsoft.Extensions.Logging
@inject ILogger<Navs> Logger

<PageTitle>Navs - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Navs</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            A simple wrapper for the HTML nav element. Use with list items and nav-link classes for consistent navigation styling.
        </Paragraph>
    </Div>

    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Basic navigation" Description="Nav with UnorderedList and nav-link anchors."
                        Code="@(@"<Nav>
    <UnorderedList Class=""nav"">
        <UnorderedListItem Class=""nav-item"">
            <a class=""nav-link active"" href="""">Home</a>
        </UnorderedListItem>
        <UnorderedListItem Class=""nav-item"">
            <a class=""nav-link"" href=""about"">About</a>
        </UnorderedListItem>
        <UnorderedListItem Class=""nav-item"">
            <a class=""nav-link"" href=""contact"">Contact</a>
        </UnorderedListItem>
    </UnorderedList>
</Nav>")">
                <Nav>
                    <UnorderedList Class="nav">
                        <UnorderedListItem Class="nav-item">
                            <a class="nav-link active" href="">Home</a>
                        </UnorderedListItem>
                        <UnorderedListItem Class="nav-item">
                            <a class="nav-link" href="about">About</a>
                        </UnorderedListItem>
                        <UnorderedListItem Class="nav-item">
                            <a class="nav-link" href="contact">Contact</a>
                        </UnorderedListItem>
                    </UnorderedList>
                </Nav>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Nav with custom content" Description="Use a div with navbar-nav class for flexible content.">
                <Nav>
                    <div class="flex gap-2 flex-wrap">
                        <a class="nav-link" href="">Home</a>
                        <a class="nav-link" href="about">About</a>
                        <a class="nav-link" href="contact">Contact</a>
                    </div>
                </Nav>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Theme-aware nav" Description="Nav with background and border using design tokens.">
                <Nav Class="flex gap-2 flex-wrap rounded-lg border border-border bg-muted/50 p-4">
                    <a class="nav-link font-medium text-foreground hover:text-primary hover:underline" href="">Home</a>
                    <a class="nav-link font-medium text-foreground hover:text-primary hover:underline" href="about">About</a>
                    <a class="nav-link font-medium text-foreground hover:text-primary hover:underline" href="contact">Contact</a>
                </Nav>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="With aria label" Description="Set AriaLabel for accessibility."
                        Code="@(@"<Nav AriaLabel=""Main navigation menu"">
    ...
</Nav>")">
                <Nav AriaLabel="Main navigation menu">
                    <UnorderedList Class="nav">
                        <UnorderedListItem Class="nav-item">
                            <a class="nav-link" href="">Home</a>
                        </UnorderedListItem>
                        <UnorderedListItem Class="nav-item">
                            <a class="nav-link" href="about">About</a>
                        </UnorderedListItem>
                    </UnorderedList>
                </Nav>
            </DemoSection>
        </section>
    </Div>
</Div>

@code {
    protected override void OnInitialized()
    {
        Logger.LogInformation("Navs demo page initialized");
    }
}
