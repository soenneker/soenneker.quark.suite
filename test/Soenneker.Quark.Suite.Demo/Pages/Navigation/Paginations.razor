            </PaginationItem>
            <PaginationItem Active="@(currentPage == 3)">
                <PaginationLink OnClick="@(() => GoToPage(3))">3</PaginationLink>
            </PaginationItem>
            <PaginationItem Disabled="@(currentPage == 3)">
                <PaginationLink OnClick="@(() => GoToPage(currentPage + 1))">Next</PaginationLink>
            </PaginationItem>
        </Pagination>
    </Div>
    <Paragraph TextColor="TextColor.Muted">Basic pagination with 3 pages, currently on page @currentPage.</Paragraph>
</Div>

