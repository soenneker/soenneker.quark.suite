@code {
    private int _currentPage = 1;
    private string _basicDescription => $"Basic pagination with 3 pages. Currently on page {_currentPage}.";

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= 5)
        {
            _currentPage = page;
            StateHasChanged();
        }
    }

    private void GoToRandomPage()
    {
        var random = new Random();
        _currentPage = random.Next(1, 6);
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }

