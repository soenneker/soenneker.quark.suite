<Div>
    <H2>Interactive Pagination</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <Pagination>
            <PaginationItem Disabled="@(currentPage == 1)">
                <PaginationLink OnClick="@(() => GoToPage(currentPage - 1))">Previous</PaginationLink>
            </PaginationItem>
            @for (var i = 1; i <= 5; i++)
            {
                <PaginationItem Active="@(currentPage == i)">
                    <PaginationLink OnClick="@(() => GoToPage(i))">@i</PaginationLink>
                </PaginationItem>
            }
            <PaginationItem Disabled="@(currentPage == 5)">
                <PaginationLink OnClick="@(() => GoToPage(currentPage + 1))">Next</PaginationLink>
            </PaginationItem>
        </Pagination>
    </Div>
    <Div Margin="Margin.Is3.FromEnd">
        <Paragraph TextColor="TextColor.Muted">Current page: <Strong>@currentPage</Strong> of 5</Paragraph>
        <Button BackgroundColor="BackgroundColor.Primary" Size="Size.Small" OnClick="@(() => GoToPage(1))">Go to First</Button>
        <Button BackgroundColor="BackgroundColor.Secondary" Size="Size.Small" OnClick="@(() => GoToPage(5))">Go to Last</Button>
        <Button BackgroundColor="BackgroundColor.Info" Size="Size.Small" OnClick="@GoToRandomPage">Random Page</Button>
    </Div>
