@code {
    private int currentPage = 1;

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= 5)
        {
            currentPage = page;
            StateHasChanged();
        }
    }

    private void GoToRandomPage()
    {
        var random = new Random();
        currentPage = random.Next(1, 6);
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }

}