        <section class="space-y-4">
            <DemoSection Title="Interactive" Description="@($"Click to change page; current page {_currentPage} of 5.")">
        <Pagination>
            <PaginationItem Disabled="@(_currentPage == 1)">
                <PaginationLink OnClick="@(() => GoToPage(_currentPage - 1))">Previous</PaginationLink>
            </PaginationItem>
            @for (var i = 1; i <= 5; i++)
            {
                <PaginationItem Active="@(_currentPage == i)">
                    <PaginationLink OnClick="@(() => GoToPage(i))">@i</PaginationLink>
                </PaginationItem>
            }
            <PaginationItem Disabled="@(_currentPage == 5)">
                <PaginationLink OnClick="@(() => GoToPage(_currentPage + 1))">Next</PaginationLink>
            </PaginationItem>
        </Pagination>
        <Div Class="flex flex-wrap gap-2 items-center mt-4">
            <Paragraph Class="text-muted-foreground" Margin="Margin.Is0">Current page: <Strong>@_currentPage</Strong> of 5</Paragraph>
            <Button Class="bg-primary text-primary-foreground" Size="ButtonSize.Sm" OnClick="@(() => GoToPage(1))">Go to First</Button>
            <Button Class="bg-secondary text-secondary-foreground" Size="ButtonSize.Sm" OnClick="@(() => GoToPage(5))">Go to Last</Button>
            <Button Class="bg-muted text-muted-foreground" Size="ButtonSize.Sm" OnClick="@GoToRandomPage">Random Page</Button>
        </Div>
