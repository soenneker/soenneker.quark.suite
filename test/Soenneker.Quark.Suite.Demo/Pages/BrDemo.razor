@page "/br-demo"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Br (Line Break)</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Br component for line breaks.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Line Breaks</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text>This is line one.</Text>
                    <Br/>
                    <Text>This is line two after a line break.</Text>
                    <Br/>
                    <Text>This is line three after another line break.</Text>
                </Div>
                <Paragraph Class="text-muted">The Br component creates HTML &lt;br&gt; elements for line breaks.</Paragraph>
            </Div>

            <Hr/>

            <Div>
                <H2>Multiple Line Breaks</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text>Single line break:</Text>
                    <Br/>
                    <Text>New line</Text>
                    <Br/>
                    <Br/>
                    <Text>Double line break creates more space</Text>
                    <Br/>
                    <Br/>
                    <Br/>
                    <Text>Triple line break creates even more space</Text>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Line Breaks with Different Content</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text Class="text-primary">Primary text</Text>
                    <Br/>
                    <Text Class="text-success">Success text</Text>
                    <Br/>
                    <Text Class="text-warning">Warning text</Text>
                    <Br/>
                    <Text Class="text-danger">Danger text</Text>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Line Breaks in Lists</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text Class="fw-bold">Shopping List:</Text>
                    <Br/>
                    <Text>• Apples</Text>
                    <Br/>
                    <Text>• Bananas</Text>
                    <Br/>
                    <Text>• Oranges</Text>
                    <Br/>
                    <Text>• Grapes</Text>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Line Breaks with Buttons</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Button BackgroundColor="@BackgroundColor.Primary">First Button</Button>
                    <Br/>
                    <Button BackgroundColor="@BackgroundColor.Secondary">Second Button</Button>
                    <Br/>
                    <Button BackgroundColor="@BackgroundColor.Success">Third Button</Button>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Br Component Properties</H2>
                <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                    <H3>Br Features</H3>
                    <Paragraph>The Br component inherits all properties from the Element base class:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
                        <UnorderedListItem><Strong>Class:</Strong> CSS classes</UnorderedListItem>
                        <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
                        <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
                        <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
                    </UnorderedList>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Custom Styled Line Breaks</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Text>Normal line break:</Text>
                    <Br/>
                    <Text>New line</Text>
                    <Br/>
                    <Br Class="custom-br" Style="height: 20px; display: block; background: linear-gradient(to right, #007bff, #6f42c1);"/>
                    <Text>Custom styled line break with gradient background</Text>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {

    protected override void OnInitialized()
    {
    }

}