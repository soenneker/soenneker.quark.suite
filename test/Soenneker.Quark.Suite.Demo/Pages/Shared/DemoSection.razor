<Div Class="space-y-4">
    @if (Title != null || Description != null)
    {
        <Div Class="space-y-1.5">
            @if (Title != null)
            {
                <H2 Class="text-lg font-semibold tracking-tight">@Title</H2>
            }
            @if (Description != null)
            {
                <Paragraph Class="text-sm text-muted-foreground" Margin="Margin.Is0">@Description</Paragraph>
            }
        </Div>
    }
    <Div Class="rounded-lg border border-border bg-muted/50 p-6">
        @ChildContent
    </Div>
    @if (Code != null)
    {
        <Div Class="rounded-lg border border-border bg-muted overflow-hidden">
            <CodeEditor ReadOnly="true" Language="@(CodeLanguage ?? "html")" AutoHeight="true" Text="@Code" />
        </Div>
    }
</Div>
