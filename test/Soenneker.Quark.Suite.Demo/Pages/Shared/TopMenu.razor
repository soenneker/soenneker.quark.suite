<Bar Mode="BarMode.Horizontal" Breakpoint="BreakpointType.Xl" NavigationBreakpoint="BreakpointType.Md" Class="topbar">
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <Image Source="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" Alt="Quark Suite" Style="height: 1.5rem;" />
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarToggler />
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="">
                    <BarIcon Name="home"/>
                    Home
                </BarLink>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="wrench"/>
                        Components
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="surfaces/buttons">Buttons</BarDropdownItem>
                        <BarDropdownItem To="surfaces/alerts">Alerts</BarDropdownItem>
                        <BarDropdownItem To="typography/badges">Badges</BarDropdownItem>
                        <BarDropdownItem To="surfaces/cards">Cards</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="edit"/>
                        Forms
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="forms/textedits">TextEdits</BarDropdownItem>
                        <BarDropdownItem To="forms/memoedits">MemoEdits</BarDropdownItem>
                        <BarDropdownItem To="forms/dateedits">DateEdits</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarLink To="data/tables/basic">
                    <BarIcon Name="table"/>
                    Tables
                </BarLink>
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarLink To="utils/themes">
                    <BarIcon Name="palette"/>
                    Themes
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="https://github.com/soenneker/soenneker.quark.suite" Target="Target.Blank">
                    <BarIcon Name="github" IconStyle="IconStyle.Brands"/>
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>


