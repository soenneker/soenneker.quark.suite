<Bar Mode="BarMode.VerticalInline"
    CollapseMode="BarCollapseMode.Small"
    Breakpoint="BreakpointType.Desktop"
    NavigationBreakpoint="BreakpointType.Tablet"
    Class="sidebar">
    <Div class="d-flex align-items-center w-100" style="gap: .5rem; padding: 0.5rem 0;">
        <BarToggler>
            <BarIcon Name="bars"/>
        </BarToggler>
        <BarBrand>
            <BarItem>
                <BarLink To="./" Class="navbar-brand">
                    <span style="font-size: 1.1rem; font-weight: 600;">Quark Suite</span>
                </BarLink>
            </BarItem>
        </BarBrand>
    </Div>

    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="">
                    <BarIcon Name="home"/>
                    Home
                </BarLink>
            </BarItem>
            
            @* Typography Components *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="font"/>
                        Typography
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="typography/headings">Headings (H1-H6)</BarDropdownItem>
                        <BarDropdownItem To="typography/texts">Text & Paragraph</BarDropdownItem>
                        <BarDropdownItem To="typography/blockquotes">Blockquotes</BarDropdownItem>
                        <BarDropdownItem To="typography/small-demo">Small</BarDropdownItem>
                        <BarDropdownItem To="typography/strong-demo">Strong</BarDropdownItem>
                        <BarDropdownItem To="typography/span-demo">Span</BarDropdownItem>
                        <BarDropdownItem To="typography/codes">Code & Kbd</BarDropdownItem>
                        <BarDropdownItem To="typography/icons">Icons</BarDropdownItem>
                        <BarDropdownItem To="typography/anchors">Anchors (Links)</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="typography/badges">Badges & Pills</BarDropdownItem>
                        <BarDropdownItem To="typography/labels">Labels</BarDropdownItem>
                        <BarDropdownItem To="typography/typography">Typography Utilities</BarDropdownItem>
                        <BarDropdownItem To="typography/textstyle-demo">Text Styles</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Surface Components *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="square"/>
                        Surfaces
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="surfaces/cards">Cards</BarDropdownItem>
                        <BarDropdownItem To="surfaces/alerts">Alerts</BarDropdownItem>
                        <BarDropdownItem To="surfaces/listgroups">List Groups</BarDropdownItem>
                        <BarDropdownItem To="surfaces/accordions">Accordions</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="surfaces/buttons">Buttons</BarDropdownItem>
                        <BarDropdownItem To="surfaces/button-groups">Button Groups</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Forms & Inputs *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="edit"/>
                        Forms & Inputs
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="forms/input-demo">Input</BarDropdownItem>
                        <BarDropdownItem To="forms/textedits">Text Edits</BarDropdownItem>
                        <BarDropdownItem To="forms/numericedit-demo">Numeric Edit</BarDropdownItem>
                        <BarDropdownItem To="forms/dateedits">Date Edits</BarDropdownItem>
                        <BarDropdownItem To="forms/datepickers">Date Pickers</BarDropdownItem>
                        <BarDropdownItem To="forms/memoedits">Memo Edits</BarDropdownItem>
                        <BarDropdownItem To="forms/code-editor">Code Editor</BarDropdownItem>
                        <BarDropdownItem To="forms/selects">Selects</BarDropdownItem>
                        <BarDropdownItem To="forms/sliders">Sliders</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="forms/checks">Checkboxes</BarDropdownItem>
                        <BarDropdownItem To="forms/radios">Radios</BarDropdownItem>
                        <BarDropdownItem To="forms/switches">Switches</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="forms/fields">Fields</BarDropdownItem>
                        <BarDropdownItem To="forms/fieldsets-demo">Fieldsets</BarDropdownItem>
                        <BarDropdownItem To="forms/validation-demo">Validation</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Layout & Flow *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="th"/>
                        Layout & Flow
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="layout/containers">Containers</BarDropdownItem>
                        <BarDropdownItem To="layout/columns">Rows & Columns</BarDropdownItem>
                        <BarDropdownItem To="layout/layouts">Layouts</BarDropdownItem>
                        <BarDropdownItem To="layout/divs">Divs</BarDropdownItem>
                        <BarDropdownItem To="layout/position-offset">Position Offset</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Overlays *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="window-restore"/>
                        Overlays
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="overlays/modals">Modals</BarDropdownItem>
                        <BarDropdownItem To="overlays/offcanvas">Offcanvas</BarDropdownItem>
                        <BarDropdownItem To="overlays/collapses">Collapses</BarDropdownItem>
                        <BarDropdownItem To="overlays/dropdowns">Dropdowns</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Navigation *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="compass"/>
                        Navigation
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="navigation/bars">Bars</BarDropdownItem>
                        <BarDropdownItem To="navigation/navs">Navs</BarDropdownItem>
                        <BarDropdownItem To="navigation/breadcrumbs">Breadcrumbs</BarDropdownItem>
                        <BarDropdownItem To="navigation/paginations">Paginations</BarDropdownItem>
                        <BarDropdownItem To="navigation/tabs">Tabs</BarDropdownItem>
                        <BarDropdownItem To="navigation/stepsdemo">Steps</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Media & Content *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="image"/>
                        Media & Content
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="media/images">Images</BarDropdownItem>
                        <BarDropdownItem To="media/videos">Videos & Audio</BarDropdownItem>
                        <BarDropdownItem To="media/iframes">IFrames</BarDropdownItem>
                        <BarDropdownItem To="media/figures">Figures</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Data Display *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="table"/>
                        Data Display
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="data/tables/basic">Tables - Basic</BarDropdownItem>
                        <BarDropdownItem To="data/tables/modern-demo">Tables - Modern</BarDropdownItem>
                        <BarDropdownItem To="data/tables/loading-demo">Tables - Loading</BarDropdownItem>
                        <BarDropdownItem To="data/tables/paged-result-demo">Tables - Paged</BarDropdownItem>
                        <BarDropdownItem To="data/tables/bar-layout-demo">Tables - Bar Layout</BarDropdownItem>
                        <BarDropdownItem To="data/tables/topbar">Tables - TopBar</BarDropdownItem>
                        <BarDropdownItem To="data/tables/request-data-options-demo">Tables - Request Options</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="data/orderedlists">Ordered Lists</BarDropdownItem>
                        <BarDropdownItem To="data/unorderedlists">Unordered Lists</BarDropdownItem>
                        <BarDropdownItem To="data/treeview">TreeView</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Feedback *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="exclamation-triangle"/>
                        Feedback
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="surfaces/alerts">Alerts</BarDropdownItem>
                        <BarDropdownItem To="feedback/snackbars">Snackbars</BarDropdownItem>
                        <BarDropdownItem To="feedback/progresses">Progress Bars</BarDropdownItem>
                        <BarDropdownItem To="feedback/scores">Scores</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Utilities & Demos *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="cog"/>
                        Utilities & Demos
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="utils/themes">Themes</BarDropdownItem>
                        <BarDropdownItem To="utils/semantic-html">Semantic HTML</BarDropdownItem>
                        <BarDropdownItem To="utils/br-demo">Br (Line Break)</BarDropdownItem>
                        <BarDropdownItem To="utils/hr-demo">Hr (Horizontal Rule)</BarDropdownItem>
                        <BarDropdownItem To="utils/section-demo">Section</BarDropdownItem>
                        <BarDropdownItem To="utils/details-demo">Details & Summary</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>


@code {
    // Dropdown states are now managed internally by the components
}
