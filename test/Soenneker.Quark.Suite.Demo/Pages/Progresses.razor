@page "/progresses"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Div class="page-header">
    <H1>Progresses</H1>
    <Text>This page demonstrates the Progress component with various configurations.</Text>
</Div>

<Hr />

<div>
    <h5>Basic</h5>
    <Progress class="mb-3">
        <ProgressBar Value="25" />
    </Progress>

    <h5>Striped + Animated</h5>
    <Progress class="mb-3">
        <ProgressBar Value="60" Striped="true" Animated="true" />
    </Progress>

    <h5>Colors</h5>
    <Progress class="mb-3">
        <ProgressBar Value="35" Color="Color.Success" />
    </Progress>
    <Progress class="mb-3">
        <ProgressBar Value="70" Color="Color.Warning" />
    </Progress>
    <Progress class="mb-3">
        <ProgressBar Value="90" Color="Color.Danger" />
    </Progress>
</Div>

@code{

    protected override void OnInitialized()
    {
    }
}
