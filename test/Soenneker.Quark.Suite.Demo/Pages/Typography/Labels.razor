@page "/typography/labels"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Labels</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates the HTML Label component from Quark.Labels.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Label Usage</H2>
                <Paragraph>The Label component provides semantic HTML labels for form elements and accessibility.</Paragraph>

                <Div Margin="Margin.Is3.FromEnd">
                    <Label Form="true">Basic Label</Label>
                    <input type="text" class="form-control" placeholder="Enter text here"/>
                </Div>

                <CodeEditor ReadOnly="true" 
                            Language="@("html")" 
                            AutoHeight="true" Margin="Margin.Is3.FromTop.Is3.FromBottom"
                            Text="@(@"<Label Form=""true"">Basic Label</Label>
<input type=""text"" class=""form-control"" placeholder=""Enter text here""/>

<Label Form=""true"" For=""username"">Username</Label>
<input type=""text"" class=""form-control"" id=""username""/>")" />

                <H2>Label with Custom Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Label Form="true" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Styled Label</Label>
                    <input type="email" class="form-control" placeholder="Enter email here"/>
                </Div>

                <H2>Label for Form="true" Controls</H2>
                <Row>
                    <Column ColumnSize="@ColumnSize.Is6.OnTablet" Margin="Margin.Is3.FromEnd">
                        <Label Form="true" for="username">Username</Label>
                        <input type="text" class="form-control" id="username" placeholder="Enter username"/>
                    </Column>
                    <Column ColumnSize="@ColumnSize.Is6.OnTablet" Margin="Margin.Is3.FromEnd">
                        <Label Form="true" for="password">Password</Label>
                        <input type="password" class="form-control" id="password" placeholder="Enter password"/>
                    </Column>
                </Row>

                <H2>Label with Checkbox</H2>
                <Div Class="form-check" Margin="Margin.Is3.FromEnd">
                    <input class="form-check-input" type="checkbox" id="rememberMe"/>
                    <Label Class="form-check-label" for="rememberMe">
                        Remember me
                    </Label>
                </Div>

                <H2>Label with Radio Buttons</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Label Form="true">Choose an option:</Label>
                    <Div Class="form-check">
                        <input class="form-check-input" type="radio" name="option" id="option1" value="option1"/>
                        <Label Class="form-check-label" for="option1">
                            Option 1
                        </Label>
                    </Div>
                    <Div Class="form-check">
                        <input class="form-check-input" type="radio" name="option" id="option2" value="option2"/>
                        <Label Class="form-check-label" for="option2">
                            Option 2
                        </Label>
                    </Div>
                </Div>

                <H2>Label Properties</H2>
                <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromEnd">
                    <H3>Label Features</H3>
                    <Paragraph>The Label component inherits all properties from the Element base class:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
                        <UnorderedListItem><Strong>Class:</Strong> CSS classes (Bootstrap utility classes supported)</UnorderedListItem>
                        <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
                        <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
                        <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
                        <UnorderedListItem><Strong>Display:</Strong> CSS display property</UnorderedListItem>
                        <UnorderedListItem><Strong>Margin/Padding:</Strong> Spacing utilities</UnorderedListItem>
                        <UnorderedListItem><Strong>Event Handlers:</Strong> Click, focus, keyboard events</UnorderedListItem>
                    </UnorderedList>
                </Div>

                <H2>Accessibility Example</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Label Form="true" for="accessibilityInput" title="This is an accessible label">
                        Accessible Label with Tooltip
                    </Label>
                    <input type="text" class="form-control" id="accessibilityInput"
                           aria-describedby="helpText" placeholder="This input is properly labeled"/>
                    <Div id="helpText" class="form-text">This input has proper accessibility attributes.</Div>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code{

    protected override void OnInitialized()
    {
        Logger.LogInformation("Label demo page initialized");
    }

}
