@page "/typography/labels"
@using Microsoft.Extensions.Logging
@inject ILogger<Labels> Logger

<Div Class="space-y-12">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Labels</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            Semantic HTML labels for form elements and accessibility.
        </Paragraph>
    </Div>

    <Section Class="space-y-6">
        <DemoSection Title="Basic Label" Code="@(@"<Label Form=""true"">Basic Label</Label>
<input type=""text"" class=""input"" placeholder=""Enter text""/>")">
            <Div Class="space-y-1">
                <Label Form="true">Basic Label</Label>
                <input type="text" class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm" placeholder="Enter text"/>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">With Form Controls</H2>
        <Div Class="grid gap-4 md:grid-cols-2">
            <Div Class="space-y-1">
                <Label Form="true" For="username">Username</Label>
                <input type="text" id="username" class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm" placeholder="Enter username"/>
            </Div>
            <Div Class="space-y-1">
                <Label Form="true" For="password">Password</Label>
                <input type="password" id="password" class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm" placeholder="Enter password"/>
            </Div>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">With Checkbox & Radio</H2>
        <Div Class="space-y-4">
            <Div Class="flex items-center gap-2">
                <input type="checkbox" id="rememberMe" class="h-4 w-4 rounded border-input"/>
                <Label For="rememberMe" Class="cursor-pointer">Remember me</Label>
            </Div>
            <Div>
                <Label Form="true" Class="mb-2 block">Choose an option:</Label>
                <Div Class="flex gap-4">
                    <Div Class="flex items-center gap-2">
                        <input type="radio" name="option" id="option1" value="option1" class="h-4 w-4"/>
                        <Label For="option1" Class="cursor-pointer">Option 1</Label>
                    </Div>
                    <Div Class="flex items-center gap-2">
                        <input type="radio" name="option" id="option2" value="option2" class="h-4 w-4"/>
                        <Label For="option2" Class="cursor-pointer">Option 2</Label>
                    </Div>
                </Div>
            </Div>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Label Features</H2>
        <Div Class="rounded-xl border bg-muted/30 p-6">
            <UnorderedList Class="list-inside list-disc space-y-1 text-sm">
                <UnorderedListItem><Strong>Id, Class, Style</Strong> — HTML attributes</UnorderedListItem>
                <UnorderedListItem><Strong>Form, For</Strong> — Form association</UnorderedListItem>
                <UnorderedListItem><Strong>Margin/Padding</Strong> — Spacing</UnorderedListItem>
            </UnorderedList>
        </Div>
    </Section>
</Div>

@code {
    protected override void OnInitialized() => Logger.LogInformation("Labels demo initialized");
}
