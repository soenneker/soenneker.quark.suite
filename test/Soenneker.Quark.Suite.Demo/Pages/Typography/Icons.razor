@page "/typography/icons"

<PageTitle>Icons - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Icons</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            Font Awesome <Code Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono" Inline="true">Icon</Code> component with style, size, and animation options.
        </Paragraph>
    </Div>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Playground</H2>
        <Div Class="rounded-xl border bg-muted/30 p-6">
            <Div Class="grid gap-6 lg:grid-cols-2">
                <Div Class="space-y-3">
                    <input class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm" @bind="_iconName" @bind:event="oninput" placeholder="e.g. circle-check"/>
                    <select class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm" @bind="_iconStyle">
                        <option value="@IconStyle.Solid">Solid</option>
                        <option value="@IconStyle.Regular">Regular</option>
                        <option value="@IconStyle.Light">Light</option>
                    </select>
                    <select class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm" @bind="_size">
                        <option value="@IconSize.Small">Small</option>
                        <option value="@IconSize.Large">Large</option>
                        <option value="@IconSize.Is2x">2x</option>
                        <option value="@IconSize.Is3x">3x</option>
                    </select>
                    <Button Variant="ButtonVariant.Default" OnClick="RandomizeName">Random Icon</Button>
                </Div>
                <Div Class="flex items-center justify-center rounded-lg border bg-background p-8">
                    <Icon Name="@_iconName" IconStyle="@_iconStyle" IconSize="@_size" Rotate="@_rotate" Flip="@_flip" IconAnimation="@_animation"/>
                </Div>
            </Div>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Styles</H2>
        <Div Class="grid gap-6 md:grid-cols-2">
            <DemoSection Title="Solid">
                <Div Class="flex flex-wrap gap-4">
                    <Icon Name="circle-check" IconStyle="@IconStyle.Solid" IconSize="@IconSize.Is2x"/>
                    <Icon Name="circle-xmark" IconStyle="@IconStyle.Solid" IconSize="@IconSize.Is2x"/>
                    <Icon Name="star" IconStyle="@IconStyle.Solid" IconSize="@IconSize.Is2x"/>
                    <Icon Name="heart" IconStyle="@IconStyle.Solid" IconSize="@IconSize.Is2x"/>
                </Div>
            </DemoSection>
            <DemoSection Title="Regular">
                <Div Class="flex flex-wrap gap-4">
                    <Icon Name="circle-check" IconStyle="@IconStyle.Regular" IconSize="@IconSize.Is2x"/>
                    <Icon Name="circle-xmark" IconStyle="@IconStyle.Regular" IconSize="@IconSize.Is2x"/>
                    <Icon Name="star" IconStyle="@IconStyle.Regular" IconSize="@IconSize.Is2x"/>
                </Div>
            </DemoSection>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Sizes & Colors</H2>
        <Div Class="grid gap-6 md:grid-cols-2">
            <DemoSection Title="Sizes">
                <Div Class="flex flex-wrap items-center gap-4">
                    <Icon Name="star" IconSize="@IconSize.Small"/>
                    <Icon Name="star" IconSize="@IconSize.Large"/>
                    <Icon Name="star" IconSize="@IconSize.Is2x"/>
                    <Icon Name="star" IconSize="@IconSize.Is3x"/>
                </Div>
            </DemoSection>
            <DemoSection Title="Colors">
                <Div Class="flex flex-wrap gap-4">
                    <Icon Name="star" TextColor="@TextColor.Primary" IconSize="@IconSize.Is2x"/>
                    <Icon Name="star" TextColor="@TextColor.Success" IconSize="@IconSize.Is2x"/>
                    <Icon Name="star" TextColor="@TextColor.Warning" IconSize="@IconSize.Is2x"/>
                    <Icon Name="star" TextColor="@TextColor.Danger" IconSize="@IconSize.Is2x"/>
                </Div>
            </DemoSection>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Animations & Transforms</H2>
        <DemoSection>
            <Div Class="flex flex-wrap gap-6">
                <Icon Name="spinner" IconAnimation="@IconAnimation.Spin" IconSize="@IconSize.Is2x"/>
                <Icon Name="bell" IconAnimation="@IconAnimation.Shake" IconSize="@IconSize.Is2x"/>
                <Icon Name="heart" IconAnimation="@IconAnimation.Bounce" IconSize="@IconSize.Is2x"/>
                <Icon Name="arrow-right" Rotate="@IconRotate.R90" IconSize="@IconSize.Is2x"/>
                <Icon Name="arrow-right" Flip="@IconFlip.Horizontal" IconSize="@IconSize.Is2x"/>
            </Div>
        </DemoSection>
    </Section>
</Div>

@code {
    private string _iconName = "circle-check";
    private IconStyle? _iconStyle = IconStyle.Solid;
    private IconSize _size = IconSize.Is2x;
    private IconRotate _rotate = IconRotate.None;
    private IconFlip _flip = IconFlip.None;
    private IconAnimation _animation = IconAnimation.None;

    private readonly string[] _knownIconNames = ["circle-check", "circle-xmark", "star", "heart", "bell", "flag", "spinner", "arrow-right", "gear"];

    private void RandomizeName() => _iconName = _knownIconNames[Random.Shared.Next(_knownIconNames.Length)];
}
