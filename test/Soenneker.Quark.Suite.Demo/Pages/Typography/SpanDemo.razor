@page "/typography/span-demo"

<PageTitle>Span - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Span</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            The <Code Inline="true" Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono">Span</Code> component for inline styling and grouping.
        </Paragraph>
    </Div>

    <Section Class="space-y-6">
        <DemoSection Title="Basic" Code="@(@"<Paragraph>Text with <Span>span inline</Span> in paragraph.</Paragraph>
<Span TextColor=""TextColor.Primary"">Styled span</Span>")">
            <Paragraph>Text with <Span>span elements</Span> for inline content.</Paragraph>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Colors & Font Styling</H2>
        <DemoSection>
            <Div Class="space-y-2">
                <Paragraph>Colors: <Span TextColor="TextColor.Primary">Primary</Span> <Span TextColor="TextColor.Success">Success</Span> <Span TextColor="TextColor.Danger">Danger</Span></Paragraph>
                <Paragraph>Weights: <Span FontWeight="FontWeight.Light">Light</Span> <Span FontWeight="FontWeight.Bold">Bold</Span></Paragraph>
                <Paragraph Margin="Margin.Is0">Decoration: <Span TextDecoration="TextDecoration.Underline">Underline</Span> <Span TextDecoration="TextDecoration.LineThrough">Strikethrough</Span></Paragraph>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Forms & Badges</H2>
        <Div Class="space-y-4">
            <Div Class="space-y-1">
                <Label Form="true">Username <Span TextColor="TextColor.Danger">*</Span></Label>
                <TextEdit Id="span-username" Placeholder="Enter username" @bind-Text="_usernameValue" Class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm"/>
                <Small TextColor="TextColor.Muted">Characters remaining: <Span TextColor="TextColor.Success">@AvailableChars</Span></Small>
            </Div>
            <Div Class="flex flex-wrap gap-2">
                <Span Class="rounded bg-green-600 px-2 py-0.5 text-white">Active</Span>
                <Span Class="rounded bg-amber-500 px-2 py-0.5 text-white">Beta</Span>
                <Span Class="rounded bg-secondary px-2 py-0.5 text-white">Tag 1</Span>
            </Div>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Interactive</H2>
        <DemoSection>
            <Paragraph>
                <Span TextColor="TextColor.Primary" Class="cursor-pointer hover:underline" @onclick="HandleClick" Title="Click me!">Click me</Span>
                <Span TextColor="TextColor.Success" Class="ml-4 cursor-pointer hover:underline" @onclick="HandleClick2" Title="Click me too!">Click me too</Span>
            </Paragraph>
            <Small TextColor="TextColor.Muted">Clicks: @_clickCount1, @_clickCount2</Small>
        </DemoSection>
    </Section>
</Div>

@code {
    private int _clickCount1;
    private int _clickCount2;
    private string _usernameValue = string.Empty;

    private int AvailableChars => Math.Max(0, 20 - (_usernameValue?.Length ?? 0));

    private void HandleClick(MouseEventArgs _) { _clickCount1++; StateHasChanged(); }
    private void HandleClick2(MouseEventArgs _) { _clickCount2++; StateHasChanged(); }
}
