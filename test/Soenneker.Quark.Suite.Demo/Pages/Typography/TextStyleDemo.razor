@page "/typography/textstyle-demo"

<Div Class="space-y-12">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">TextStyle & TextAlignment</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            TextStyle and TextAlignment builder functionality for text transformation, wrapping, and alignment.
        </Paragraph>
    </Div>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Text Alignment</H2>
        <DemoSection>
            <Div Class="space-y-2">
                <Div Class="rounded border p-2" style="text-align: start;"><Text>Left aligned</Text></Div>
                <Div Class="rounded border p-2" style="text-align: center;"><Text>Center aligned</Text></Div>
                <Div Class="rounded border p-2" style="text-align: end;"><Text>Right aligned</Text></Div>
            </Div>
            <Div Class="mt-4 space-y-2">
                <Text TextAlignment="TextAlignment.Start" Display="Display.Block" Class="rounded border p-2">TextAlignment.Start</Text>
                <Text TextAlignment="TextAlignment.Center" Display="Display.Block" Class="rounded border p-2">TextAlignment.Center</Text>
                <Text TextAlignment="TextAlignment.End" Display="Display.Block" Class="rounded border p-2">TextAlignment.End</Text>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Text Transformation</H2>
        <DemoSection>
            <Div Class="space-y-2">
                <Text TextStyle="@TextStyle.Lowercase" Display="Display.Block" Class="rounded border p-2">LOWERCASE TEXT</Text>
                <Text TextStyle="@TextStyle.Uppercase" Display="Display.Block" Class="rounded border p-2">uppercase text</Text>
                <Text TextStyle="@TextStyle.Capitalize" Display="Display.Block" Class="rounded border p-2">capitalize this text</Text>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Text Styling & Wrapping</H2>
        <DemoSection>
            <Div Class="space-y-2">
                <Text TextStyle="@TextStyle.Muted" Display="Display.Block" Class="rounded border p-2">Muted text</Text>
                <Text TextStyle="@TextStyle.Emphasis" Display="Display.Block" Class="rounded border p-2">Emphasized text</Text>
                <Text TextStyle="@TextStyle.Wrap" Display="Display.Block" Class="max-w-[200px] rounded border p-2">This text will wrap when it reaches the container width.</Text>
                <Text TextStyle="@TextStyle.Truncate" Display="Display.Block" Class="max-w-[200px] rounded border p-2">This text will truncate with ellipsis when it overflows.</Text>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Combined with Components</H2>
        <DemoSection>
            <Button TextStyle="@TextStyle.Uppercase" Variant="ButtonVariant.Default">Uppercase Button</Button>
            <Div Class="mt-4 rounded-lg border border-primary/30 bg-primary/10 p-4 text-center">
                <Text TextAlignment="TextAlignment.Center">Centered text in styled container</Text>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Responsive & Fluent API</H2>
        <DemoSection>
            <Div Class="space-y-2">
                <Text TextAlignment="@TextAlignment.Start.OnMd.Center" Display="Display.Block" Class="rounded border p-2">Start on mobile, Center on tablet+</Text>
                <Text TextStyle="@TextStyle.Muted.Truncate" Display="Display.Block" Class="max-w-[200px] rounded border p-2">Muted + Truncate (fluent)</Text>
            </Div>
        </DemoSection>
    </Section>
</Div>
