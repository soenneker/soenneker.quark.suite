@page "/headings/basic"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Basic Heading Examples</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">Simple examples of using Quark.Headings components.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>

    <Row Margin="Margin.Is4.FromTop">
        <Column ColumnSize="ColumnSize.Is6.OnDesktop">
            <H2>Dynamic Heading Component</H2>
            <Heading Scale="Scale.Is1">Main Title</Heading>
            <Heading Scale="Scale.Is2">Section Title</Heading>
            <Heading Scale="Scale.Is3">Subsection</Heading>
        </Column>
        
        <Column ColumnSize="ColumnSize.Is6.OnDesktop">
            <H2>Individual Components</H2>
            <H1>Main Title</H1>
            <H2>Section Title</H2>
            <H3>Subsection</H3>
        </Column>
    </Row>

    <Row Margin="Margin.Is4.FromTop">
        <Column ColumnSize="ColumnSize.Is12">
            <H2>Styled Examples</H2>
            <H1 Class="text-primary border-bottom" Padding="Padding.Is2.FromBottom">Primary Heading</H1>
            <H2 TextColor="TextColor.Success">Success Heading</H2>
            <H3 TextColor="TextColor.Muted">Muted Heading</H3>
        </Column>
    </Row>
        </Column>
    </Row>
</Container>
