@page "/typography/headings/basic"

<Div Class="space-y-12">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Basic Heading Examples</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            Dynamic <Code Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono" Inline="true">Heading</Code> and individual <Code Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono" Inline="true">H1</Code>–<Code Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono" Inline="true">H6</Code> components.
        </Paragraph>
    </Div>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Dynamic vs Individual</H2>
        <Div Class="grid gap-8 lg:grid-cols-2">
            <DemoSection Title="Heading (Scale)">
                <Div Class="space-y-2">
                    <Heading Scale="Scale.Is1">Main Title</Heading>
                    <Heading Scale="Scale.Is2">Section Title</Heading>
                    <Heading Scale="Scale.Is3">Subsection</Heading>
                </Div>
            </DemoSection>
            <DemoSection Title="H1–H6">
                <Div Class="space-y-2">
                    <H1>Main Title</H1>
                    <H2>Section Title</H2>
                    <H3>Subsection</H3>
                </Div>
            </DemoSection>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Styled Examples</H2>
        <DemoSection Code="@(@"<H1 Class=""text-primary border-b pb-2"">Primary Heading</H1>
<H2 TextColor=""TextColor.Success"">Success Heading</H2>
<H3 TextColor=""TextColor.Muted"">Muted Heading</H3>")">
            <Div Class="space-y-2">
                <H1 Class="text-primary border-b pb-2">Primary Heading</H1>
                <H2 TextColor="TextColor.Success">Success Heading</H2>
                <H3 TextColor="TextColor.Muted">Muted Heading</H3>
            </Div>
        </DemoSection>
    </Section>
</Div>
