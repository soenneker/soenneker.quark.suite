@page "/typography/headings"
@using Microsoft.Extensions.Logging
@inject ILogger<Index> Logger

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Headings</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Quark.Headings components with Bootstrap styling.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>

    <Row Margin="Margin.Is4.FromTop">
        <Column>
            <H2>Dynamic Heading Component</H2>
            <Paragraph>Use the <Code>Heading</Code> component with different sizes:</Paragraph>
            
            <Div Margin="Margin.Is3.FromBottom">
                <Heading Scale="Scale.Is1">H1 Heading - Largest</Heading>
                <Heading Scale="Scale.Is2">H2 Heading - Second Largest</Heading>
                <Heading Scale="Scale.Is3">H3 Heading - Default Size</Heading>
                <Heading Scale="Scale.Is4">H4 Heading - Medium</Heading>
                <Heading Scale="Scale.Is5">H5 Heading - Small</Heading>
                <Heading Scale="Scale.Is6">H6 Heading - Smallest</Heading>
            </Div>
        </Column>
    </Row>

    <Row Margin="Margin.Is4.FromTop">
        <Column>
            <H2>Individual Heading Components</H2>
            <Paragraph>Use individual <Code>H1</Code>, <Code>H2</Code>, etc. components:</Paragraph>
            
            <Div Margin="Margin.Is3.FromBottom">
                <H1>H1 Component - Largest</H1>
                <H2>H2 Component - Second Largest</H2>
                <H3>H3 Component - Default Size</H3>
                <H4>H4 Component - Medium</H4>
                <H5>H5 Component - Small</H5>
                <H6>H6 Component - Smallest</H6>
            </Div>
        </Column>
    </Row>

    <Row Margin="Margin.Is4.FromTop">
        <Column>
            <H2>Heading Components with Bootstrap Classes</H2>
            <Paragraph>All heading components inherit from the Quark Element base class, so they support all Bootstrap styling:</Paragraph>
            
            <Div Margin="Margin.Is3.FromBottom">
                <H1 Class="text-primary">Primary Color H1</H1>
                <H2 Class="text-success">Success Color H2</H2>
                <H3 Class="text-warning">Warning Color H3</H3>
                <H4 Class="text-danger">Danger Color H4</H4>
                <H5 Class="text-info">Info Color H5</H5>
                <H6 Class="text-muted">Muted Color H6</H6>
            </Div>
        </Column>
    </Row>

    <Row Margin="Margin.Is4.FromTop">
        <Column>
            <H2>Heading Components with Margins and Padding</H2>
            <Paragraph>Use Quark's margin and padding system:</Paragraph>
            
            <Div Margin="Margin.Is3.FromBottom">
                <H1 Margin="Margin.Is3.FromBottom">H1 with Bottom Margin</H1>
                <H2 Margin="Margin.Is2.FromTop.Is2.FromBottom">H2 with Top and Bottom Margin</H2>
                <H3 Padding="Padding.Is3" Style="background-color: #f8f9fa; border-left: 4px solid #007bff;">H3 with Padding and Background</H3>
            </Div>
        </Column>
    </Row>

    <Row Margin="Margin.Is4.FromTop">
        <Column>
            <H2>Interactive Heading Components</H2>
            <Paragraph>Headings support click events and other interactions:</Paragraph>
            
            <Div Margin="Margin.Is3.FromBottom">
                <H1 OnClick="@(() => Logger.LogInformation("H1 clicked!"))" Style="cursor: pointer;">Clickable H1</H1>
                <H2 OnMouseOver="@(() => Logger.LogInformation("H2 hovered!"))" Style="cursor: pointer;">Hoverable H2</H2>
                <H3 Id="heading-3" Title="This is a tooltip">H3 with Tooltip</H3>
            </Div>
        </Column>
    </Row>

    <Row Margin="Margin.Is4.FromTop">
        <Column>
            <H2>Responsive Headings</H2>
            <Paragraph>Headings can be made responsive using Bootstrap's display utilities:</Paragraph>
            
            <Div Margin="Margin.Is3.FromBottom">
                <H1 Class="d-none d-md-block">H1 - Hidden on small screens</H1>
                <H2 Class="d-block d-md-none">H2 - Only visible on small screens</H2>
                <H3 Class="d-sm-block">H3 - Visible on small screens and up</H3>
            </Div>
        </Column>
    </Row>
        </Column>
    </Row>
</Container>

@code{
    protected override void OnInitialized()
    {
        Logger.LogInformation("Headings demo page initialized");
    }
}
