@page "/typography/headings"
@using Microsoft.Extensions.Logging
@inject ILogger<HeadingsDemo> Logger

<PageTitle>Headings - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <section class="space-y-4">
        <DemoSection Title="Dynamic heading" Description="Use Heading with Scale (Is1–Is6) for size." Code="@(@"<Heading Scale=""Scale.Is1"">H1 - Largest</Heading>
<Heading Scale=""Scale.Is2"">H2</Heading>
<Heading Scale=""Scale.Is3"">H3 - Default</Heading>
<Heading Scale=""Scale.Is4"">H4</Heading>
<Heading Scale=""Scale.Is5"">H5</Heading>
<Heading Scale=""Scale.Is6"">H6 - Smallest</Heading>")">
            <Div Class="space-y-2">
                <Heading Scale="Scale.Is1">H1 Heading - Largest</Heading>
                <Heading Scale="Scale.Is2">H2 Heading</Heading>
                <Heading Scale="Scale.Is3">H3 Heading - Default</Heading>
                <Heading Scale="Scale.Is4">H4 Heading</Heading>
                <Heading Scale="Scale.Is5">H5 Heading</Heading>
                <Heading Scale="Scale.Is6">H6 Heading - Smallest</Heading>
            </Div>
        </DemoSection>
    </section>

    <section class="space-y-4">
        <DemoSection Title="Individual H1–H6" Description="Use H1, H2, H3, H4, H5, H6 for semantic headings." Code="@(@"<H1>H1 Component</H1>
<H2>H2 Component</H2>
<H3>H3 Component</H3>")">
            <Div Class="space-y-2">
                <H1>H1 Component - Largest</H1>
                <H2>H2 Component</H2>
                <H3>H3 Component - Default</H3>
                <H4>H4 Component</H4>
                <H5>H5 Component</H5>
                <H6>H6 Component - Smallest</H6>
            </Div>
        </DemoSection>
    </section>

    <section class="space-y-4">
        <DemoSection Title="Text colors" Description="Use TextColor for semantic heading colors." Code="@(@"<H1 TextColor=""TextColor.Primary"">Primary H1</H1>
<H2 TextColor=""TextColor.Success"">Success H2</H2>
<H4 TextColor=""TextColor.Danger"">Danger H4</H4>")">
            <Div Class="space-y-2">
                <H1 TextColor="TextColor.Primary">Primary H1</H1>
                <H2 TextColor="TextColor.Success">Success H2</H2>
                <H3 TextColor="TextColor.Warning">Warning H3</H3>
                <H4 TextColor="TextColor.Danger">Danger H4</H4>
                <H5 TextColor="TextColor.Info">Info H5</H5>
                <H6 TextColor="TextColor.Muted">Muted H6</H6>
            </Div>
        </DemoSection>
    </section>

    <section class="space-y-4">
        <DemoSection Title="Margin and padding" Description="Use Margin and Padding for spacing." Code="@(@"<H1 Margin=""Margin.Is3.FromBottom"">H1 with bottom margin</H1>
<H2 Margin=""Margin.Is2.FromTop.Is2.FromBottom"">H2 with top and bottom</H2>
<H3 Padding=""Padding.Is3"" Class=""bg-muted/50 rounded"">H3 with padding</H3>")">
            <Div Class="space-y-4">
                <H1 Margin="Margin.Is3.FromBottom">H1 with Bottom Margin</H1>
                <H2 Margin="Margin.Is2.FromTop.Is2.FromBottom">H2 with Top and Bottom</H2>
                <H3 Padding="Padding.Is3" Class="bg-muted/50 rounded-lg border-l-4 border-primary">H3 with Padding</H3>
            </Div>
        </DemoSection>
    </section>

    <section class="space-y-4">
        <DemoSection Title="Responsive visibility" Description="Use Tailwind classes (hidden md:block, block md:hidden) for responsive behavior." Code="@(@"<H3 Class=""hidden md:block"">Visible on md+</H3>
<H3 Class=""block md:hidden"">Visible below md</H3>")">
            <Div Class="space-y-2">
                <H1 Class="hidden md:block">H1 - Hidden on small screens</H1>
                <H2 Class="block md:hidden">H2 - Visible only on small</H2>
                <H3 Class="sm:block">H3 - Visible on sm and up</H3>
            </Div>
        </DemoSection>
    </section>
</Div>

@code {
    protected override void OnInitialized()
    {
        Logger.LogInformation("Headings demo page initialized");
    }
}
