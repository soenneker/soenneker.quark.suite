@page "/typography/badges"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Badges</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates some of the common usages for the badges library.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Badges</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Badge BackgroundColor="@BackgroundColor.Primary">Primary</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Secondary">Secondary</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Success">Success</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Danger">Danger</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Warning">Warning</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Info">Info</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Light">Light</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Dark">Dark</Badge>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Badge Types</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Badge BackgroundColor="@BackgroundColor.Primary" Type="@BadgeType.Badge">Regular Badge</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Success" Type="@BadgeType.Pill">Pill Badge</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Danger" Type="@BadgeType.Dot">Dot Badge</Badge>
                </Div>
            </Div>

            <Hr/>

            <Hr/>

            <Div>
                <H2>Badges in Context</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <H4>Notifications <Badge BackgroundColor="@BackgroundColor.Danger">4</Badge></H4>
                    <H5>Messages <Badge BackgroundColor="@BackgroundColor.Info">12</Badge></H5>
                    <H6>Updates <Badge BackgroundColor="@BackgroundColor.Success">New</Badge></H6>
                </Div>
                <Div Margin="Margin.Is3.FromEnd">
                    <Button BackgroundColor="@BackgroundColor.Primary">
                        Profile <Badge BackgroundColor="@BackgroundColor.Light">9</Badge>
                    </Button>
                    <Button BackgroundColor="@BackgroundColor.Success">
                        Inbox <Badge BackgroundColor="@BackgroundColor.Dark">3</Badge>
                    </Button>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Rounded Badges</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Badge BackgroundColor="@BackgroundColor.Primary" Rounded="true">Rounded Primary</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Success" Rounded="true">Rounded Success</Badge>
                    <Badge BackgroundColor="@BackgroundColor.Warning" Rounded="true">Rounded Warning</Badge>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {

    protected override void OnInitialized()
    {
    }

}