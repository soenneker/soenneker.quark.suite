@page "/typography/badges"

<PageTitle>Badges - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Badges</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            Small count and label components. Use <Code Inline="true" Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono">Variant</Code> for styling.
        </Paragraph>
    </Div>

    <Div Class="space-y-6">
        <section class="space-y-4">
        <DemoSection Title="Variants" Description="Badge variants match button styling (Default, Secondary, Destructive, Outline, Ghost, Link)." Code="@(@"<Badge Variant=""BadgeVariant.Default"">Default</Badge>
<Badge Variant=""BadgeVariant.Secondary"">Secondary</Badge>
<Badge Variant=""BadgeVariant.Destructive"">Destructive</Badge>
<Badge Variant=""BadgeVariant.Outline"">Outline</Badge>
<Badge Variant=""BadgeVariant.Ghost"">Ghost</Badge>
<Badge Variant=""BadgeVariant.Link"">Link</Badge>")">
            <Div Class="flex flex-wrap gap-2">
                <Badge Variant="BadgeVariant.Default">Default</Badge>
                <Badge Variant="BadgeVariant.Secondary">Secondary</Badge>
                <Badge Variant="BadgeVariant.Destructive">Destructive</Badge>
                <Badge Variant="BadgeVariant.Outline">Outline</Badge>
                <Badge Variant="BadgeVariant.Ghost">Ghost</Badge>
                <Badge Variant="BadgeVariant.Link">Link</Badge>
            </Div>
        </DemoSection>
        </section>

        <section class="space-y-4">
        <DemoSection Title="In context" Description="Badges work well with headings and buttons.">
            <Div Class="space-y-4">
                <Div Class="flex items-center gap-2">
                    <H4 Class="text-lg font-semibold">Notifications</H4>
                    <Badge Variant="BadgeVariant.Destructive">4</Badge>
                </Div>
                <Div Class="flex items-center gap-2">
                    <H5 Class="text-base font-medium">Messages</H5>
                    <Badge Variant="BadgeVariant.Secondary">12</Badge>
                </Div>
                <Div Class="flex gap-2">
                    <Button Variant="ButtonVariant.Default">
                        Profile <Badge Variant="BadgeVariant.Secondary">9</Badge>
                    </Button>
                    <Button Variant="ButtonVariant.Secondary">
                        Inbox <Badge Variant="BadgeVariant.Default">3</Badge>
                    </Button>
                </Div>
            </Div>
        </DemoSection>
        </section>
    </Div>
</Div>
