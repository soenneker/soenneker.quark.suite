@page "/paragraph-demo"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Paragraph</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates the Paragraph component for text content blocks.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Paragraphs</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>This is a basic paragraph component. It creates HTML &lt;p&gt; elements for text content blocks.</Paragraph>
                    <Paragraph>This is another paragraph. Each paragraph component creates a separate paragraph element.</Paragraph>
                    <Paragraph>Paragraphs automatically have proper spacing and formatting for readability.</Paragraph>
                </Div>

                <CodeEditor ReadOnly="true" 
                            Language="@("html")" 
                            AutoHeight="true" Margin="Margin.Is3.FromTop"
                            Text="@(@"<Paragraph>This is a basic paragraph component.</Paragraph>
<Paragraph TextColor=""TextColor.Primary"">Styled paragraph with color.</Paragraph>
<Paragraph Class=""lead"">Lead paragraph for emphasis.</Paragraph>")" />
            </Div>

            <Hr/>

            <Div>
                <H2>Paragraphs with Different Styles</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph TextColor="TextColor.Primary">Primary colored paragraph text</Paragraph>
                    <Paragraph TextColor="TextColor.Success">Success colored paragraph text</Paragraph>
                    <Paragraph TextColor="TextColor.Warning">Warning colored paragraph text</Paragraph>
                    <Paragraph TextColor="TextColor.Danger">Danger colored paragraph text</Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Paragraphs with Bootstrap Classes</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph Class="lead">This is a lead paragraph with larger text and different styling.</Paragraph>
                    <Paragraph Class="small">This is a small paragraph with smaller text.</Paragraph>
                    <Paragraph FontWeight="FontWeight.Bold">This is a bold paragraph with bold font weight.</Paragraph>
                    <Paragraph FontStyle="FontStyle.Italic">This is an italic paragraph with italic font style.</Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Paragraphs with Alignment</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph TextAlignment="TextAlignment.Start">Left aligned paragraph text</Paragraph>
                    <Paragraph TextAlignment="TextAlignment.Center">Center aligned paragraph text</Paragraph>
                    <Paragraph TextAlignment="TextAlignment.End">Right aligned paragraph text</Paragraph>
                    <Paragraph Class="text-justify">Justified paragraph text. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris.</Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Paragraphs with Background Colors</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is3">Primary background paragraph</Paragraph>
                    <Paragraph BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is3">Success background paragraph</Paragraph>
                    <Paragraph BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is3">Warning background paragraph</Paragraph>
                    <Paragraph BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is3">Info background paragraph</Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Paragraphs with Spacing</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph Margin="Margin.Is1" Padding="Padding.Is1" BackgroundColor="BackgroundColor.Light">Paragraph with margin and padding 1</Paragraph>
                    <Paragraph Margin="Margin.Is2" Padding="Padding.Is2" BackgroundColor="BackgroundColor.Light">Paragraph with margin and padding 2</Paragraph>
                    <Paragraph Margin="Margin.Is3" Padding="Padding.Is3" BackgroundColor="BackgroundColor.Light">Paragraph with margin and padding 3</Paragraph>
                    <Paragraph Margin="Margin.Is4" Padding="Padding.Is4" BackgroundColor="BackgroundColor.Light">Paragraph with margin and padding 4</Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Interactive Paragraphs</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph TextColor="TextColor.Primary" Style="cursor: pointer;" @onclick="HandleParagraphClick" Title="Click me!">
                        This paragraph is clickable and will show an alert.
                    </Paragraph>
                    <Paragraph TextColor="TextColor.Muted">Click count: @_clickCount</Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Paragraph Component Properties</H2>
                <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                    <H3>Paragraph Features</H3>
                    <Paragraph>The Paragraph component inherits all properties from the Element base class:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
                        <UnorderedListItem><Strong>Class:</Strong> CSS classes (Bootstrap utility classes supported)</UnorderedListItem>
                        <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
                        <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
                        <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
                        <UnorderedListItem><Strong>Display:</Strong> CSS display property</UnorderedListItem>
                        <UnorderedListItem><Strong>Margin/Padding:</Strong> Spacing utilities</UnorderedListItem>
                        <UnorderedListItem><Strong>Event Handlers:</Strong> Click, focus, keyboard events</UnorderedListItem>
                    </UnorderedList>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Custom Styled Paragraphs</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph Class="custom-paragraph" Style="font-family: 'Courier New', monospace; font-size: 1.1em; color: #6f42c1; border-left: 4px solid #6f42c1; padding-left: 15px;">
                        This paragraph has custom styling with a monospace font, custom color, and a left border.
                    </Paragraph>
                    <Paragraph Class="shadow-sm" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                        This paragraph has a gradient background, rounded corners, and a shadow effect.
                    </Paragraph>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    private int _clickCount = 0;

    private void HandleParagraphClick(MouseEventArgs args)
    {
        _clickCount++;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }

}
