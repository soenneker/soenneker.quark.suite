@page "/typography/paragraph-demo"

<PageTitle>Paragraph - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <div class="space-y-4">
        <DemoSection Title="Basic" Code="@(@"<Paragraph>Basic paragraph content.</Paragraph>
<Paragraph TextColor=""TextColor.Primary"">Styled paragraph.</Paragraph>")">
            <Div Class="space-y-2">
                <Paragraph>Creates HTML &lt;p&gt; elements for text blocks.</Paragraph>
                <Paragraph>Each Paragraph creates a separate element with proper spacing.</Paragraph>
            </Div>
        </DemoSection>

        <DemoSection Title="Colors" Description="TextColor for semantic paragraph styling." Code="@(@"<Paragraph TextColor=""TextColor.Primary"">Primary</Paragraph>
<Paragraph TextColor=""TextColor.Success"">Success</Paragraph>
<Paragraph TextColor=""TextColor.Warning"">Warning</Paragraph>
<Paragraph TextColor=""TextColor.Danger"">Danger</Paragraph>")">
            <Div Class="space-y-1">
                <Paragraph TextColor="TextColor.Primary">Primary</Paragraph>
                <Paragraph TextColor="TextColor.Success">Success</Paragraph>
                <Paragraph TextColor="TextColor.Warning">Warning</Paragraph>
                <Paragraph TextColor="TextColor.Danger">Danger</Paragraph>
            </Div>
        </DemoSection>

        <DemoSection Title="Alignment" Description="TextAlignment.Start, Center, End." Code="@(@"<Paragraph TextAlignment=""TextAlignment.Start"" Class=""block"">Start aligned</Paragraph>
<Paragraph TextAlignment=""TextAlignment.Center"" Class=""block"">Center aligned</Paragraph>
<Paragraph TextAlignment=""TextAlignment.End"" Class=""block"">End aligned</Paragraph>")">
            <Div Class="space-y-2">
                <Paragraph TextAlignment="TextAlignment.Start" Class="block">Start aligned</Paragraph>
                <Paragraph TextAlignment="TextAlignment.Center" Class="block">Center aligned</Paragraph>
                <Paragraph TextAlignment="TextAlignment.End" Class="block">End aligned</Paragraph>
            </Div>
        </DemoSection>

        <DemoSection Title="Interactive" Description="Paragraph with onclick and event handling." Code="@(@"<Paragraph TextColor=""TextColor.Primary"" Class=""cursor-pointer hover:underline"" @@onclick=""HandleClick"" Title=""Click me!"">
    Clickable paragraph.
</Paragraph>")">
            <Paragraph TextColor="TextColor.Primary" Class="cursor-pointer hover:underline" @onclick="HandleClick" Title="Click me!">
                Clickable paragraph.
            </Paragraph>
            <Paragraph TextColor="TextColor.Muted">Click count: @_clickCount</Paragraph>
        </DemoSection>
    </div>
</Div>

@code {
    private int _clickCount;

    private void HandleClick(MouseEventArgs args)
    {
        _clickCount++;
        StateHasChanged();
    }
}
