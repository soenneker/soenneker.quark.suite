@page "/typography/texts"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Text</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates the HTML Text component from Quark.Texts.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Text Usage</H2>
    <Paragraph>The Text component provides semantic HTML text elements for typography and content display.</Paragraph>

    <Div Margin="Margin.Is3.FromBottom">
        <Text>Basic text content</Text>
    </Div>

    <H2>Text with Bootstrap Typography Classes</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="h1">Heading 1 Style</Text>
        <Text Class="h2">Heading 2 Style</Text>
        <Text Class="h3">Heading 3 Style</Text>
        <Text Class="h4">Heading 4 Style</Text>
        <Text Class="h5">Heading 5 Style</Text>
        <Text Class="h6">Heading 6 Style</Text>
    </Div>

    <H2>Text with Color Classes</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text TextColor="TextColor.Primary">Primary colored text</Text><Br/>
        <Text TextColor="TextColor.Secondary">Secondary colored text</Text><Br/>
        <Text TextColor="TextColor.Success">Success colored text</Text><Br/>
        <Text TextColor="TextColor.Danger">Danger colored text</Text><Br/>
        <Text TextColor="TextColor.Warning">Warning colored text</Text><Br/>
        <Text TextColor="TextColor.Info">Info colored text</Text><Br/>
        <Text TextColor="TextColor.Light" BackgroundColor="BackgroundColor.Dark">Light text on dark background</Text><Br/>
        <Text TextColor="TextColor.Dark">Dark colored text</Text>
    </Div>

    <H2>Text with Font Weight Classes</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text FontWeight="FontWeight.Light">Light font weight</Text><Br/>
        <Text FontWeight="FontWeight.Normal">Normal font weight</Text><Br/>
        <Text FontWeight="FontWeight.Bold">Bold font weight</Text><Br/>
        <Text FontWeight="FontWeight.Bolder">Bolder font weight</Text>
    </Div>

    <H2>Text with Font Style Classes</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text FontStyle="FontStyle.Normal">Normal font style</Text><Br/>
        <Text FontStyle="FontStyle.Italic">Italic font style</Text><Br/>
        <Text Class="fst-oblique">Oblique font style</Text>
    </Div>

    <H2>Text with Text Decoration</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text TextDecoration="TextDecoration.None">No text decoration</Text><Br/>
        <Text TextDecoration="TextDecoration.Underline">Underlined text</Text><Br/>
        <Text TextDecoration="TextDecoration.LineThrough">Strikethrough text</Text>
    </Div>

    <H2>Text with Text Alignment</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text TextAlignment="TextAlignment.Start">Left aligned text</Text><Br/>
        <Text TextAlignment="TextAlignment.Center">Center aligned text</Text><Br/>
        <Text TextAlignment="TextAlignment.End">Right aligned text</Text><Br/>
        <Text Class="text-justify">Justified text - Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</Text>
    </Div>

    <H2>Text with Background Colors</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is2">Primary background</Text><Br/>
        <Text BackgroundColor="BackgroundColor.Secondary" TextColor="TextColor.White" Padding="Padding.Is2">Secondary background</Text><Br/>
        <Text BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is2">Success background</Text><Br/>
        <Text BackgroundColor="BackgroundColor.Danger" TextColor="TextColor.White" Padding="Padding.Is2">Danger background</Text><Br/>
        <Text BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is2">Warning background</Text><Br/>
        <Text BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is2">Info background</Text>
    </Div>

    <H2>Text with Spacing</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Margin="Margin.Is1" Padding="Padding.Is1" BackgroundColor="BackgroundColor.Light">Margin and padding 1</Text><Br/>
        <Text Margin="Margin.Is2" Padding="Padding.Is2" BackgroundColor="BackgroundColor.Light">Margin and padding 2</Text><Br/>
        <Text Margin="Margin.Is3" Padding="Padding.Is3" BackgroundColor="BackgroundColor.Light">Margin and padding 3</Text><Br/>
        <Text Margin="Margin.Is4" Padding="Padding.Is4" BackgroundColor="BackgroundColor.Light">Margin and padding 4</Text>
    </Div>

    <H2>Text Properties</H2>
    <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
        <H3>Text Features</H3>
        <Paragraph>The Text component inherits all properties from the Element base class:</Paragraph>
        <UnorderedList>
            <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
            <UnorderedListItem><Strong>Class:</Strong> CSS classes (Bootstrap utility classes supported)</UnorderedListItem>
            <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
            <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
            <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
            <UnorderedListItem><Strong>Display:</Strong> CSS display property</UnorderedListItem>
            <UnorderedListItem><Strong>Margin/Padding:</Strong> Spacing utilities</UnorderedListItem>
            <UnorderedListItem><Strong>Event Handlers:</Strong> Click, focus, keyboard events</UnorderedListItem>
        </UnorderedList>
    </Div>

    <H2>Interactive Text Example</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text TextColor="TextColor.Primary" style="cursor: pointer;" title="Clickable text">
            This text has a pointer cursor and tooltip
        </Text>
    </Div>

    <H2>Text with Custom Styling</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="custom-text" style="font-family: 'Courier New', monospace; font-size: 1.2em; color: #6f42c1;">
            Custom styled text with inline styles
        </Text>
    </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code{

    protected override void OnInitialized()
    {
        Logger.LogInformation("Text demo page initialized");
    }

}
