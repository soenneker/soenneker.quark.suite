@page "/typography/texts"
@using Microsoft.Extensions.Logging

@inject ILogger<Index> Logger

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Text</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the HTML Text component from Quark.Texts.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Text Usage</H2>
    <Paragraph>The Text component provides semantic HTML text elements for typography and content display.</Paragraph>

    <Div Margin="Margin.Is3.FromBottom">
        <Text>Basic text content</Text>
    </Div>

    <H2>Text with Bootstrap Typography Classes</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="h1">Heading 1 Style</Text>
        <Text Class="h2">Heading 2 Style</Text>
        <Text Class="h3">Heading 3 Style</Text>
        <Text Class="h4">Heading 4 Style</Text>
        <Text Class="h5">Heading 5 Style</Text>
        <Text Class="h6">Heading 6 Style</Text>
    </Div>

    <H2>Text with Color Classes</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="text-primary">Primary colored text</Text><Br/>
        <Text Class="text-secondary">Secondary colored text</Text><Br/>
        <Text Class="text-success">Success colored text</Text><Br/>
        <Text Class="text-danger">Danger colored text</Text><Br/>
        <Text Class="text-warning">Warning colored text</Text><Br/>
        <Text Class="text-info">Info colored text</Text><Br/>
        <Text Class="text-light bg-dark">Light text on dark background</Text><Br/>
        <Text Class="text-dark">Dark colored text</Text>
    </Div>

    <H2>Text with Font Weight Classes</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="fw-light">Light font weight</Text><Br/>
        <Text Class="fw-normal">Normal font weight</Text><Br/>
        <Text Class="fw-bold">Bold font weight</Text><Br/>
        <Text Class="fw-bolder">Bolder font weight</Text>
    </Div>

    <H2>Text with Font Style Classes</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="fst-normal">Normal font style</Text><Br/>
        <Text Class="fst-italic">Italic font style</Text><Br/>
        <Text Class="fst-oblique">Oblique font style</Text>
    </Div>

    <H2>Text with Text Decoration</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="text-decoration-none">No text decoration</Text><Br/>
        <Text Class="text-decoration-underline">Underlined text</Text><Br/>
        <Text Class="text-decoration-line-through">Strikethrough text</Text>
    </Div>

    <H2>Text with Text Alignment</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="text-start">Left aligned text</Text><Br/>
        <Text Class="text-center">Center aligned text</Text><Br/>
        <Text Class="text-end">Right aligned text</Text><Br/>
        <Text Class="text-justify">Justified text - Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</Text>
    </Div>

    <H2>Text with Background Colors</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="bg-primary text-white p-2">Primary background</Text><Br/>
        <Text Class="bg-secondary text-white p-2">Secondary background</Text><Br/>
        <Text Class="bg-success text-white p-2">Success background</Text><Br/>
        <Text Class="bg-danger text-white p-2">Danger background</Text><Br/>
        <Text Class="bg-warning text-dark p-2">Warning background</Text><Br/>
        <Text Class="bg-info text-white p-2">Info background</Text>
    </Div>

    <H2>Text with Spacing</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="m-1 p-1 bg-light">Margin and padding 1</Text><Br/>
        <Text Class="m-2 p-2 bg-light">Margin and padding 2</Text><Br/>
        <Text Class="m-3 p-3 bg-light">Margin and padding 3</Text><Br/>
        <Text Class="m-4 p-4 bg-light">Margin and padding 4</Text>
    </Div>

    <H2>Text Properties</H2>
    <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
        <H3>Text Features</H3>
        <Paragraph>The Text component inherits all properties from the Element base class:</Paragraph>
        <UnorderedList>
            <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
            <UnorderedListItem><Strong>Class:</Strong> CSS classes (Bootstrap utility classes supported)</UnorderedListItem>
            <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
            <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
            <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
            <UnorderedListItem><Strong>Display:</Strong> CSS display property</UnorderedListItem>
            <UnorderedListItem><Strong>Margin/Padding:</Strong> Spacing utilities</UnorderedListItem>
            <UnorderedListItem><Strong>Event Handlers:</Strong> Click, focus, keyboard events</UnorderedListItem>
        </UnorderedList>
    </Div>

    <H2>Interactive Text Example</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="text-primary" style="cursor: pointer;" title="Clickable text">
            This text has a pointer cursor and tooltip
        </Text>
    </Div>

    <H2>Text with Custom Styling</H2>
    <Div Margin="Margin.Is3.FromBottom">
        <Text Class="custom-text" style="font-family: 'Courier New', monospace; font-size: 1.2em; color: #6f42c1;">
            Custom styled text with inline styles
        </Text>
    </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code{

    protected override void OnInitialized()
    {
        Logger.LogInformation("Text demo page initialized");
    }

}