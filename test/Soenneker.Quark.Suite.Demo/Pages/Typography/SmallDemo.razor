@page "/typography/small-demo"

<PageTitle>Small - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <div class="space-y-4">
        <DemoSection Title="Basic" Code="@(@"<Paragraph>Normal text with <Small>small text inline</Small> in paragraph.</Paragraph>
<Small>Standalone small text.</Small>")">
            <Div Class="space-y-2">
                <Paragraph>Normal text with <Small>small text inline</Small> within the paragraph.</Paragraph>
                <Small>Standalone small text.</Small>
            </Div>
        </DemoSection>

        <DemoSection Title="Colors">
                <Div Class="space-y-1">
                    <Paragraph>Primary: <Small TextColor="TextColor.Primary">Primary small</Small></Paragraph>
                    <Paragraph>Success: <Small TextColor="TextColor.Success">Success small</Small></Paragraph>
                    <Paragraph>Warning: <Small TextColor="TextColor.Warning">Warning small</Small></Paragraph>
                    <Paragraph>Danger: <Small TextColor="TextColor.Danger">Danger small</Small></Paragraph>
                </Div>
        </DemoSection>

        <DemoSection Title="Badges / Labels">
                <Div Class="flex flex-wrap gap-2">
                    <Paragraph>Price: $99.99 <Small Class="rounded bg-secondary px-2 py-0.5 text-white">On Sale</Small></Paragraph>
                    <Paragraph>Status: <Small Class="rounded bg-green-600 px-2 py-0.5 text-white">Verified</Small></Paragraph>
                    <Paragraph>Date: March 15, 2024 <Small TextColor="TextColor.Muted">(Last updated)</Small></Paragraph>
                </Div>
        </DemoSection>

        <DemoSection Title="Forms">
        <Div Class="grid gap-4 md:grid-cols-2">
            <Div Class="space-y-1">
                <Label Form="true" For="email">Email</Label>
                <input type="email" id="email" class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm" placeholder="Enter email"/>
                <Small TextColor="TextColor.Muted">We'll never share your email.</Small>
            </Div>
            <Div Class="space-y-1">
                <Label Form="true" For="pwd">Password</Label>
                <input type="password" id="pwd" class="flex h-9 w-full rounded-md border border-input bg-transparent px-3 py-1 text-sm" placeholder="Enter password"/>
                <Small TextColor="TextColor.Muted">At least 8 characters.</Small>
            </Div>
        </Div>
        </DemoSection>

        <DemoSection Title="Interactive">
            <Paragraph>
                <Small TextColor="TextColor.Primary" Class="cursor-pointer hover:underline" @onclick="HandleClick" Title="Click me!">Click for more info</Small>
            </Paragraph>
            <Small TextColor="TextColor.Muted">Click count: @_clickCount</Small>
        </DemoSection>
    </div>
</Div>

@code {
    private int _clickCount;

    private void HandleClick(MouseEventArgs args) { _clickCount++; StateHasChanged(); }
}
