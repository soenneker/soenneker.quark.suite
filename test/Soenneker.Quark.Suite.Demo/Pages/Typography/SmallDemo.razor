@page "/typography/small-demo"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Small</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates the Small component for small text elements.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Small Text</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>This is normal text with <Small>small text inline</Small> within the paragraph.</Paragraph>
                    <Paragraph>You can use <Small>small text</Small> for secondary information or fine print.</Paragraph>
                    <Small>This is standalone small text.</Small>
                </Div>
                <Paragraph TextColor="TextColor.Muted">The Small component creates HTML &lt;small&gt; elements for smaller text.</Paragraph>

                <CodeEditor ReadOnly="true" 
                            Language="@("html")" 
                            AutoHeight="true" Margin="Margin.Is3.FromTop"
                            Text="@(@"<Paragraph>Normal text with <Small>small text inline</Small> in paragraph.</Paragraph>
<Small>Standalone small text.</Small>")" />
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text with Different Styles</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Primary small text: <Small TextColor="TextColor.Primary">Primary colored small text</Small></Paragraph>
                    <Paragraph>Success small text: <Small TextColor="TextColor.Success">Success colored small text</Small></Paragraph>
                    <Paragraph>Warning small text: <Small TextColor="TextColor.Warning">Warning colored small text</Small></Paragraph>
                    <Paragraph>Danger small text: <Small TextColor="TextColor.Danger">Danger colored small text</Small></Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text with Background Colors</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Small text with primary background: <Small BackgroundColor="BackgroundColor.Primary" TextColor="TextColor.White" Padding="Padding.Is2.OnX.Is1.OnY">Primary Background</Small></Paragraph>
                    <Paragraph>Small text with success background: <Small BackgroundColor="BackgroundColor.Success" TextColor="TextColor.White" Padding="Padding.Is2.OnX.Is1.OnY">Success Background</Small></Paragraph>
                    <Paragraph>Small text with warning background: <Small BackgroundColor="BackgroundColor.Warning" TextColor="TextColor.Dark" Padding="Padding.Is2.OnX.Is1.OnY">Warning Background</Small></Paragraph>
                    <Paragraph>Small text with info background: <Small BackgroundColor="BackgroundColor.Info" TextColor="TextColor.White" Padding="Padding.Is2.OnX.Is1.OnY">Info Background</Small></Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text as Badges and Labels</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Product price: $99.99 <Small Class="badge" BackgroundColor="BackgroundColor.Secondary" Margin="Margin.Is2.FromStart">On Sale</Small>
                    </Paragraph>
                    <Paragraph>
                        User status: Active <Small Class="badge" BackgroundColor="BackgroundColor.Success" Margin="Margin.Is2.FromStart">Verified</Small>
                    </Paragraph>
                    <Paragraph>
                        Article date: March 15, 2024 <Small TextColor="TextColor.Muted" Margin="Margin.Is2.FromStart">(Last updated)</Small>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text in Forms</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Div Margin="Margin.Is3.FromBottom">
                        <Label For="email" Form="true">Email Address</Label>
                        <TextEdit Id="email" Placeholder="Enter your email" @bind-Text="emailValue" />
                        <Small Class="form-text" TextColor="TextColor.Muted">We'll never share your email with anyone else.</Small>
                    </Div>
                    <Div Margin="Margin.Is3.FromBottom">
                        <Label For="password" Form="true">Password</Label>
                        <TextEdit Id="password" Type="password" Placeholder="Enter your password" @bind-Text="passwordValue" />
                        <Small Class="form-text" TextColor="TextColor.Muted">Password must be at least 8 characters long.</Small>
                    </Div>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text with Custom Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Custom styled small text: 
                        <Small Class="custom-small" Style="font-family: 'Courier New', monospace; color: #6f42c1; font-weight: bold;">
                            Monospace Purple Bold
                        </Small>
                    </Paragraph>
                    <Paragraph>
                        Small text with border: 
                        <Small Class="border border-primary rounded" Padding="Padding.Is2.OnX.Is1.OnY">Bordered Small Text</Small>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text in Lists</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Features list:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem>Fast performance <Small TextColor="TextColor.Success">(New!)</Small></UnorderedListItem>
                        <UnorderedListItem>Secure encryption <Small TextColor="TextColor.Muted">(Updated)</Small></UnorderedListItem>
                        <UnorderedListItem>Easy to use <Small Class="badge bg-primary">Popular</Small></UnorderedListItem>
                        <UnorderedListItem>24/7 support <Small TextColor="TextColor.Info">(Coming soon)</Small></UnorderedListItem>
                    </UnorderedList>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Interactive Small Text</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Clickable small text: 
                        <Small TextColor="TextColor.Primary" Style="cursor: pointer; text-decoration: underline;" @onclick="HandleSmallClick" Title="Click me!">
                            Click me for more info
                        </Small>
                    </Paragraph>
                    <Small TextColor="TextColor.Muted">Click count: @clickCount</Small>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Component Properties</H2>
                <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                    <H3>Small Features</H3>
                    <Paragraph>The Small component inherits all properties from the Element base class:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
                        <UnorderedListItem><Strong>Class:</Strong> CSS classes (Bootstrap utility classes supported)</UnorderedListItem>
                        <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
                        <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
                        <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
                        <UnorderedListItem><Strong>Display:</Strong> CSS display property</UnorderedListItem>
                        <UnorderedListItem><Strong>Margin/Padding:</Strong> Spacing utilities</UnorderedListItem>
                        <UnorderedListItem><Strong>Event Handlers:</Strong> Click, focus, keyboard events</UnorderedListItem>
                    </UnorderedList>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Accessibility Features</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Small text with ARIA label: 
                        <Small AriaLabel="Additional information about the product">See details</Small>
                    </Paragraph>
                    <Paragraph>
                        Small text with role: 
                        <Small Role="note">This is a note</Small>
                    </Paragraph>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    private int clickCount = 0;
    private string emailValue = string.Empty;
    private string passwordValue = string.Empty;

    private void HandleSmallClick(MouseEventArgs args)
    {
        clickCount++;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }
}
