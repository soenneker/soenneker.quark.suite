@page "/typography/anchors"

<Div Class="space-y-12">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Anchors</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            Semantic links for navigation. Use <Code Inline="true" Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono">To</Code> and <Code Inline="true" Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono">Target</Code>.
        </Paragraph>
    </Div>

    <Section Class="space-y-6">
        <DemoSection Title="Basic Links" Code="@(@"<Anchor To="""" TextColor=""TextColor.Primary"">NavLink</Anchor>
<Anchor To=""https://example.com"" Target=""Target.Blank"">External</Anchor>")">
            <Div Class="flex flex-wrap gap-4">
                <Anchor To="" TextColor="TextColor.Primary">Basic NavLink</Anchor>
                <Anchor To="https://example.com" Target="Target.Blank">External Link</Anchor>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Navigation</H2>
        <DemoSection>
            <Nav Class="flex gap-4">
                <Anchor To="" Class="text-primary hover:underline">Home</Anchor>
                <Anchor To="about" Class="text-primary hover:underline">About</Anchor>
                <Anchor To="services" Class="text-primary hover:underline">Services</Anchor>
            </Nav>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Button-style Links</H2>
        <DemoSection>
            <Div Class="flex flex-wrap gap-2">
                <Button Variant="ButtonVariant.Default" To="">Navigate Home</Button>
                <Button Variant="ButtonVariant.Outline" To="about">Navigate About</Button>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Styled</H2>
        <DemoSection>
            <Anchor To="" TextDecoration="TextDecoration.None" FontWeight="FontWeight.Bold" TextColor="TextColor.Success" Class="hover:underline">
                Custom Styled Link
            </Anchor>
        </DemoSection>
    </Section>
</Div>
