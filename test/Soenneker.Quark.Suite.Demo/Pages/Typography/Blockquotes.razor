@page "/typography/blockquotes"

<PageTitle>Blockquotes - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Blockquotes</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            Blockquote components for quotations with semantic markup.
        </Paragraph>
    </Div>

    <Div Class="space-y-6">
        <section class="space-y-4">
        <DemoSection Title="Basic" Code="@(@"<Blockquote Class=""border-l-4 border-primary pl-4"">
    <Paragraph>The only way to do great work is to love what you do.</Paragraph>
</Blockquote>")">
            <Blockquote Class="border-l-4 border-primary pl-4 italic">
                <Paragraph>The only way to do great work is to love what you do.</Paragraph>
            </Blockquote>
        </DemoSection>
        </section>

        <section class="space-y-4">
        <DemoSection Title="With footer" Description="Add a footer element for attribution.">
            <Blockquote Class="border-l-4 border-primary pl-4">
                <Paragraph Margin="Margin.Is0.FromBottom">Stay hungry. Stay foolish.</Paragraph>
                <footer class="mt-2 text-sm text-muted-foreground">Steve Jobs â€” Stanford Commencement 2005</footer>
            </Blockquote>
        </DemoSection>
        </section>

        <section class="space-y-4">
        <DemoSection Title="Styled" Description="Use border, background, and padding for card-style blockquotes.">
            <Div Class="grid gap-6 md:grid-cols-2">
            <Blockquote Class="rounded-lg border-l-4 border-primary bg-primary/10 p-4">
                <Paragraph Margin="Margin.Is0.FromBottom" TextColor="TextColor.Primary">Success is not final, failure is not fatal.</Paragraph>
                <footer class="mt-2 text-sm text-muted-foreground">Winston Churchill</footer>
            </Blockquote>
            <Blockquote Class="rounded-lg border-l-4 border-green-500 bg-green-500/10 p-4">
                <Paragraph Margin="Margin.Is0.FromBottom" TextColor="TextColor.Success">The best time to plant a tree was 20 years ago.</Paragraph>
                <footer class="mt-2 text-sm text-muted-foreground">Chinese Proverb</footer>
            </Blockquote>
            </Div>
        </DemoSection>
        </section>

        <section class="space-y-4">
        <DemoSection Title="Testimonial" Description="Full-width gradient blockquote for testimonials.">
            <Blockquote Class="rounded-xl bg-gradient-to-br from-violet-500 to-purple-700 p-6 text-center text-white">
            <Icon Name="quote-left" IconSize="@IconSize.Is2x" TextColor="TextColor.White" Class="opacity-50" Margin="Margin.Is3.FromEnd"/>
            <Paragraph Margin="Margin.Is3.FromBottom" Class="text-lg">This is the best component library I've ever used!</Paragraph>
            <footer><Strong>Jane Developer</Strong>, Senior Engineer</footer>
        </Blockquote>
        </DemoSection>
        </section>
    </Div>
</Div>
