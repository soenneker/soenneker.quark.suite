@page "/typography/blockquotes"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
                <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Blockquotes</H1>
                <Paragraph Class="lead" TextColor="TextColor.Muted">Blockquote components for displaying quotations with proper semantic markup.</Paragraph>
            </Div>
        </Column>
    </Row>
    
    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface" Margin="Margin.Is5.FromBottom">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Basic Blockquote</Strong>
                </Div>
                <Div Class="surface-body">
                    <Blockquote Class="blockquote">
                        <Paragraph>The only way to do great work is to love what you do.</Paragraph>
                    </Blockquote>

                    <CodeEditor ReadOnly="true" 
                                Language="@("html")" 
                                AutoHeight="true" Margin="Margin.Is3.FromTop"
                                Text="@(@"<Blockquote Class=""blockquote"">
    <Paragraph>The only way to do great work is to love what you do.</Paragraph>
</Blockquote>")" />
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface" Margin="Margin.Is5.FromBottom">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Blockquote with Footer</Strong>
                </Div>
                <Div Class="surface-body">
                    <Blockquote Class="blockquote">
                        <Paragraph Margin="Margin.Is0.FromBottom">Stay hungry. Stay foolish.</Paragraph>
                        <footer class="blockquote-footer mt-2">Steve Jobs at <cite title="Stanford Commencement">Stanford Commencement 2005</cite></footer>
                    </Blockquote>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface" Margin="Margin.Is5.FromBottom">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Blockquote with Citation</Strong>
                </Div>
                <Div Class="surface-body">
                    <Blockquote Class="blockquote" Cite="https://www.example.com/source">
                        <Paragraph Margin="Margin.Is0.FromBottom">
                            The future belongs to those who believe in the beauty of their dreams.
                        </Paragraph>
                        <footer class="blockquote-footer mt-2">Eleanor Roosevelt</footer>
                    </Blockquote>
                    <Small TextColor="TextColor.Muted">This blockquote includes a cite attribute with the source URL.</Small>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface" Margin="Margin.Is5.FromBottom">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Centered Blockquote</Strong>
                </Div>
                <Div Class="surface-body">
                    <Blockquote Class="blockquote text-center">
                        <Paragraph Margin="Margin.Is0.FromBottom">
                            In the middle of difficulty lies opportunity.
                        </Paragraph>
                        <footer class="blockquote-footer mt-2">Albert Einstein</footer>
                    </Blockquote>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface" Margin="Margin.Is5.FromBottom">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Right-Aligned Blockquote</Strong>
                </Div>
                <Div Class="surface-body">
                    <Blockquote Class="blockquote text-end">
                        <Paragraph Margin="Margin.Is0.FromBottom">
                            Life is what happens when you're busy making other plans.
                        </Paragraph>
                        <footer class="blockquote-footer mt-2">John Lennon</footer>
                    </Blockquote>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface" Margin="Margin.Is5.FromBottom">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Styled Blockquotes</Strong>
                </Div>
                <Div Class="surface-body">
                    <Row Gap="Gap.Is4">
                        <Column ColumnSize="@ColumnSize.Is6.OnLg">
                            <H5>Primary Style</H5>
                            <Blockquote Class="blockquote bg-opacity-10" BackgroundColor="BackgroundColor.Primary" Border="Border.Is4.FromStart" BorderColor="@BorderColor.Primary" Padding="Padding.Is3.Is3.FromStart">
                                <Paragraph Margin="Margin.Is0.FromBottom" TextColor="@TextColor.Primary">
                                    Success is not final, failure is not fatal.
                                </Paragraph>
                                <footer class="blockquote-footer mt-2">Winston Churchill</footer>
                            </Blockquote>
                        </Column>
                        <Column ColumnSize="@ColumnSize.Is6.OnLg">
                            <H5>Success Style</H5>
                            <Blockquote Class="blockquote bg-opacity-10" BackgroundColor="BackgroundColor.Success" Border="Border.Is4.FromStart" BorderColor="@BorderColor.Success" Padding="Padding.Is3.Is3.FromStart">
                                <Paragraph Margin="Margin.Is0.FromBottom" TextColor="@TextColor.Success">
                                    The best time to plant a tree was 20 years ago.
                                </Paragraph>
                                <footer class="blockquote-footer mt-2">Chinese Proverb</footer>
                            </Blockquote>
                        </Column>
                    </Row>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface" Margin="Margin.Is5.FromBottom">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Testimonial Style</Strong>
                </Div>
                <Div Class="surface-body">
                    <Blockquote Class="blockquote text-center" Padding="Padding.Is4" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 1rem;">
                        <Icon Name="quote-left" IconSize="@IconSize.Is2x" TextColor="@TextColor.White.Opacity50" Margin="Margin.Is3.FromEnd"/>
                        <Paragraph Margin="Margin.Is3.FromBottom" TextColor="TextColor.White" Class="fs-5">
                            This is the best component library I've ever used! The API is intuitive and the components are beautifully designed.
                        </Paragraph>
                        <footer class="blockquote-footer text-white">
                            <Strong TextColor="TextColor.White">Jane Developer</Strong>, Senior Engineer
                        </footer>
                    </Blockquote>
                </Div>
            </Section>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Section Class="surface" Margin="Margin.Is5.FromBottom">
                <Div Class="surface-header d-flex align-items-center justify-content-between">
                    <Strong>Nested Content</Strong>
                </Div>
                <Div Class="surface-body">
                    <Blockquote Class="blockquote">
                        <Paragraph>
                            <Strong>Important Quote:</Strong> The greatest glory in living lies not in never falling, but in rising every time we fall.
                        </Paragraph>
                        <Paragraph Margin="Margin.Is0.FromBottom">
                            This quote emphasizes <em>resilience</em> and <em>perseverance</em> as key virtues in life.
                        </Paragraph>
                        <footer class="blockquote-footer mt-2">
                            Nelson Mandela in <cite title="Long Walk to Freedom">Long Walk to Freedom</cite>
                        </footer>
                    </Blockquote>
                </Div>
            </Section>
        </Column>
    </Row>
</Container>

