@page "/typography/codes"

<PageTitle>Code - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <div class="space-y-4">
        <DemoSection Title="Inline Code" Code="@(@"<Paragraph>Inline: <Code Inline=""true"">var x = 42;</Code></Paragraph>
<Code Inline=""true"" Class=""text-danger font-bold"">error message</Code>")">
            <Div Class="space-y-2">
                <Paragraph Margin="Margin.Is0">Inline code: <Code Inline="true">var x = 42;</Code> and <Code Inline="true">Console.WriteLine("Hello");</Code></Paragraph>
                <Paragraph Margin="Margin.Is0">Styled: <Code Inline="true" Class="text-destructive font-bold">error message</Code></Paragraph>
            </Div>
        </DemoSection>

        <Div Class="space-y-6">
            <DemoSection Title="Basic" Code="@(@"<PreCode>public class Example
{
    public string Name { get; set; }
}</PreCode>")" CodeLanguage="csharp">
                <PreCode>@("public class Example\n{\n    public string Name { get; set; }\n}")</PreCode>
            </DemoSection>
            <DemoSection Title="With Language" Code="@(@"<PreCode Language=""csharp"">public async Task<string> GetDataAsync()
{
    var response = await client.GetAsync(url);
    return await response.Content.ReadAsStringAsync();
}</PreCode>")" CodeLanguage="csharp">
                <PreCode Language="csharp">@("public async Task<string> GetDataAsync()\n{\n    var response = await client.GetAsync(url);\n    return await response.Content.ReadAsStringAsync();\n}")</PreCode>
            </DemoSection>
            <DemoSection Title="Scrollable" Code="@(@"<PreCode Class=""rounded-lg border border-primary"" MaxHeight=""200"">// Long scrollable block
public void Method1() { }
public void Method2() { }
public void Method3() { }
public void Method4() { }
public void Method5() { }</PreCode>")" CodeLanguage="csharp">
                <PreCode Class="rounded-lg border border-primary" MaxHeight="200">@("// Long scrollable block\npublic void Method1() { }\npublic void Method2() { }\npublic void Method3() { }\npublic void Method4() { }\npublic void Method5() { }")</PreCode>
            </DemoSection>
        </Div>
    </div>
</Div>
