@page "/typography/strong-demo"

<PageTitle>Strong - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-3">
        <H1 Class="text-4xl font-bold tracking-tight">Strong</H1>
        <Paragraph Class="text-xl text-muted-foreground" Margin="Margin.Is0">
            The <Code Class="rounded bg-muted px-1.5 py-0.5 text-sm font-mono" Inline="true">Strong</Code> component for semantic bold emphasis.
        </Paragraph>
    </Div>

    <Section Class="space-y-6">
        <DemoSection Title="Basic" Code="@(@"<Paragraph>Normal text with <Strong>strong text</Strong> inline.</Paragraph>")">
            <Paragraph>Normal text with <Strong>strong text inline</Strong> within the paragraph.</Paragraph>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Colors & Context</H2>
        <DemoSection>
            <Div Class="space-y-1">
                <Paragraph>Colored: <Strong TextColor="TextColor.Primary">Primary</Strong> <Strong TextColor="TextColor.Success">Success</Strong> <Strong TextColor="TextColor.Danger">Danger</Strong></Paragraph>
                <Paragraph>Important: <Strong>Please read the terms carefully.</Strong></Paragraph>
                <Paragraph>Success: <Strong TextColor="TextColor.Success">Action completed successfully!</Strong></Paragraph>
            </Div>
        </DemoSection>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Labels & Lists</H2>
        <Div Class="grid gap-6 md:grid-cols-2">
            <Div>
                <H3 Class="mb-2 text-lg font-medium">Product Info</H3>
                <Paragraph>Name: <Strong>Premium Widget Pro</Strong></Paragraph>
                <Paragraph>Price: <Strong TextColor="TextColor.Success">$99.99</Strong></Paragraph>
                <Paragraph>Status: <Strong TextColor="TextColor.Primary">In Stock</Strong></Paragraph>
            </Div>
            <Div>
                <H3 Class="mb-2 text-lg font-medium">Key Features</H3>
                <UnorderedList>
                    <UnorderedListItem><Strong>High Performance:</Strong> Optimized for speed</UnorderedListItem>
                    <UnorderedListItem><Strong>Secure:</Strong> Enterprise-grade security</UnorderedListItem>
                    <UnorderedListItem><Strong>Support:</Strong> 24/7 customer support</UnorderedListItem>
                </UnorderedList>
            </Div>
        </Div>
    </Section>

    <Section Class="space-y-6">
        <H2 Class="text-2xl font-semibold tracking-tight">Strong vs Bold</H2>
        <DemoSection>
            <Div Class="space-y-2">
                <Paragraph><Strong>Strong (semantic):</Strong> Used for importance and emphasis.</Paragraph>
                <Paragraph><Span FontWeight="FontWeight.Bold">Bold (visual):</Span> Used for visual emphasis only.</Paragraph>
                <Paragraph TextColor="TextColor.Muted">Strong is semantically meaningful for screen readers.</Paragraph>
            </Div>
        </DemoSection>
    </Section>
</Div>
