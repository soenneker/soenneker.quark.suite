        --qt-muted: #6c757d;
        --qt-heading: #000000;
        /* Accent / states */
        --qt-accent: #6c757d;
        --qt-accent-hover: #5c636a;
        --qt-focus-ring: rgba(108, 117, 125, 0.25);
        /* Shared colors for light bg components */
        --qt-shadow: rgba(0, 0, 0, 0.08);
        --qt-hover-alt: #eef1f4;
        --qt-border-light: rgba(0, 0, 0, 0.04);
    }

    .demo-hero {
