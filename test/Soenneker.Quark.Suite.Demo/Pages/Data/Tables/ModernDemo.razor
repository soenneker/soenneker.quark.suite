@page "/data/tables/modern-demo"
@using Microsoft.Extensions.Logging
@using Soenneker.DataTables.Dtos.ServerSideRequest
@using Soenneker.Quark.Suite.Demo.Services
@using Soenneker.Quark.Suite.Demo.Dtos

@inject ILogger<ModernDemo> Logger
@inject EmployeeService EmployeeService

<PageTitle>Modern Demo - Table</PageTitle>

<Div class="demo-hero">
    <Container>
        <Row>
            <Column ColumnSize="ColumnSize.Is12" Class="text-center">
                <Div class="hero-content">
                    <Div class="demo-icon">ðŸŽ¨</Div>
                    <H1 Class="demo-title">Modern Table Demo</H1>
                    <Paragraph Class="demo-subtitle">Clean, minimalist table design with modern aesthetics and smooth interactions.</Paragraph>
                </Div>
            </Column>
        </Row>
    </Container>
</Div>

<Container>
    <Card Class="demo-card">
        <CardHeader>
            <Div class="card-header-content">
                <H3><Icon Name="palette" Margin="Margin.Is2.FromEnd"/>Modern Employee Directory</H3>
                <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is0.FromBottom">Experience the clean, minimalist design with enhanced visual hierarchy</Paragraph>
            </Div>
        </CardHeader>
        <CardBody>
            <Table @ref="_tableRef"
                        OnInteraction="OnInteraction"
                        OnOrder="HandleOrder"
                        OnInitialize="HandleInitialize"
                        Options="_modernTableOptions"
                        TotalRecords="@_totalRecords">

                <TableSearch Placeholder="Search..."/>

                <TableElement>
                    <Thead>
                        <Tr>
                            <Th Data="Name" Sortable="true" Searchable="true">Name</Th>
                            <Th Data="Department" Sortable="true" Searchable="true">Department</Th>
                            <Th Data="Email" Sortable="true" Searchable="true">Email</Th>
                            <Th Data="Salary" Sortable="true" Searchable="true">Salary</Th>
                            <Th Data="HireDate" Sortable="true" Searchable="true">Hire Date</Th>
                            <Th Data="Status" Sortable="true" Searchable="true">Status</Th>
                        </Tr>
                    </Thead>

                    <Tbody>
                        @if (_currentEmployees is { Count: > 0 })
                        {
                            @foreach (var employee in _currentEmployees)
                            {
                                <Tr Key="@employee.Id">
                                    <Td>@employee.Name</Td>
                                    <Td>@employee.Department</Td>
                                    <Td>@employee.Email</Td>
                                    <Td>@employee.Salary.ToString("C")</Td>
                                    <Td>@employee.HireDate.ToString("MMM dd, yyyy")</Td>
                                    <Td>@employee.Status</Td>
                                </Tr>
                            }
                        }
                        else if (_tableRef.HasLoadedOnce)
                        {
                            <TableNoData>
                                <Div class="no-data-content">
                                    <Div class="no-data-icon">ðŸŽ¨</Div>
                                    <H4>No employees found</H4>
                                    <Paragraph>Try adjusting your search criteria.</Paragraph>
                                </Div>
                            </TableNoData>
                        }
                    </Tbody>
                </TableElement>

                <TableBottomBar>
                    <TablePagination/>
                </TableBottomBar>
            </Table>
        </CardBody>
    </Card>

    <Card Margin="Margin.Is4.FromTop">
        <CardHeader>
            <H4>Code Example</H4>
        </CardHeader>
        <CardBody>
            <CodeEditor ReadOnly="true" 
                        Language="@("html")" 
                        AutoHeight="true" Text="@(@"<Table Options=""_modernTableOptions"" TotalRecords=""@_totalRecords"">
    <TableSearch Placeholder=""Search...""/>
    <TableElement>
        <Thead>
            <Tr>
                <Th Data=""Name"" Sortable=""true"">Name</Th>
                <Th Data=""Department"" Sortable=""true"">Department</Th>
            </Tr>
        </Thead>
        <Tbody>
            @foreach (var item in _items)
            {
                <Tr>
                    <Td>@item.Name</Td>
                    <Td>@item.Department</Td>
                </Tr>
            }
        </Tbody>
    </TableElement>
    <TableBottomBar>
        <TablePagination/>
    </TableBottomBar>
</Table>")" />
        </CardBody>
    </Card>
</Container>

<style>
