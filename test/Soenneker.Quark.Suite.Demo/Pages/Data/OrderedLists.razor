@page "/data/orderedlists"

<Container Padding="Padding.Is4.OnY">
<Row>
    <Column>
        <Div TextAlignment="TextAlignment.Center" Margin="Margin.Is5.FromEnd">
            <H1 DisplaySize="DisplaySize.Is4" FontWeight="FontWeight.Bold" TextColor="TextColor.Primary">Ordered Lists</H1>
            <Paragraph Class="lead" TextColor="TextColor.Muted">This page demonstrates the OrderedList and OrderedListItem components for creating numbered lists.</Paragraph>
        </Div>
    </Column>
</Row>

<Row Gap="Gap.Is4">
<Column>
<Div>
    <H2>Basic Ordered Lists</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <OrderedList>
            <OrderedListItem>First step</OrderedListItem>
            <OrderedListItem>Second step</OrderedListItem>
            <OrderedListItem>Third step</OrderedListItem>
            <OrderedListItem>Fourth step</OrderedListItem>
        </OrderedList>
    </Div>
    <Paragraph TextColor="TextColor.Muted">The OrderedList component creates HTML &lt;ol&gt; elements with OrderedListItem children.</Paragraph>

    <CodeEditor ReadOnly="true" 
                Language="@("html")" 
                AutoHeight="true" Margin="Margin.Is3.FromTop"
                Text="@(@"<OrderedList>
    <OrderedListItem>First step</OrderedListItem>
    <OrderedListItem>Second step</OrderedListItem>
    <OrderedListItem>Third step</OrderedListItem>
    <OrderedListItem>Fourth step</OrderedListItem>
</OrderedList>")" />
</Div>

<Hr/>

<Div>
    <H2>Nested Ordered Lists</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <OrderedList>
            <OrderedListItem>Main step 1</OrderedListItem>
            <OrderedListItem>
                Main step 2
                <OrderedList>
                    <OrderedListItem>Sub step 2.1</OrderedListItem>
                    <OrderedListItem>Sub step 2.2</OrderedListItem>
                    <OrderedListItem>
                        Sub step 2.3
                        <OrderedList>
                            <OrderedListItem>Sub-sub step 2.3.1</OrderedListItem>
                            <OrderedListItem>Sub-sub step 2.3.2</OrderedListItem>
                        </OrderedList>
                    </OrderedListItem>
                </OrderedList>
            </OrderedListItem>
            <OrderedListItem>Main step 3</OrderedListItem>
        </OrderedList>
    </Div>
</Div>

<Hr/>

<Div>
    <H2>Different Numbering Styles</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <Row>
            <Column Size="ColumnSize.Is6">
                <H4>Decimal (Default)</H4>
                <OrderedList Style="list-style-type: decimal;">
                    <OrderedListItem>Decimal item 1</OrderedListItem>
                    <OrderedListItem>Decimal item 2</OrderedListItem>
                    <OrderedListItem>Decimal item 3</OrderedListItem>
                </OrderedList>
            </Column>
            <Column Size="ColumnSize.Is6">
                <H4>Lowercase Letters</H4>
                <OrderedList Style="list-style-type: lower-alpha;">
                    <OrderedListItem>Letter item a</OrderedListItem>
                    <OrderedListItem>Letter item b</OrderedListItem>
                    <OrderedListItem>Letter item c</OrderedListItem>
                </OrderedList>
            </Column>
        </Row>
        <Row Margin="Margin.Is3.FromTop">
            <Column Size="ColumnSize.Is6">
                <H4>Uppercase Letters</H4>
                <OrderedList Style="list-style-type: upper-alpha;">
                    <OrderedListItem>Letter item A</OrderedListItem>
                    <OrderedListItem>Letter item B</OrderedListItem>
                    <OrderedListItem>Letter item C</OrderedListItem>
                </OrderedList>
            </Column>
            <Column Size="ColumnSize.Is6">
                <H4>Lowercase Roman</H4>
                <OrderedList Style="list-style-type: lower-roman;">
                    <OrderedListItem>Roman item i</OrderedListItem>
                    <OrderedListItem>Roman item ii</OrderedListItem>
                    <OrderedListItem>Roman item iii</OrderedListItem>
                </OrderedList>
            </Column>
        </Row>
        <Row Margin="Margin.Is3.FromTop">
            <Column Size="ColumnSize.Is6">
                <H4>Uppercase Roman</H4>
                <OrderedList Style="list-style-type: upper-roman;">
                    <OrderedListItem>Roman item I</OrderedListItem>
                    <OrderedListItem>Roman item II</OrderedListItem>
                    <OrderedListItem>Roman item III</OrderedListItem>
                </OrderedList>
            </Column>
            <Column Size="ColumnSize.Is6">
                <H4>Numbers (1, 2, 3)</H4>
                <OrderedList Style="list-style-type: decimal-leading-zero;">
                    <OrderedListItem>Zero-padded item 01</OrderedListItem>
                    <OrderedListItem>Zero-padded item 02</OrderedListItem>
                    <OrderedListItem>Zero-padded item 03</OrderedListItem>
                </OrderedList>
            </Column>
        </Row>
    </Div>
</Div>

<Hr/>

<Div>
    <H2>Custom Starting Numbers</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <H4>Starting from 5</H4>
        <OrderedList Start="5">
            <OrderedListItem>Fifth item</OrderedListItem>
            <OrderedListItem>Sixth item</OrderedListItem>
            <OrderedListItem>Seventh item</OrderedListItem>
        </OrderedList>

        <H4 Margin="Margin.Is4.FromTop">Starting from 10</H4>
        <OrderedList Start="10">
            <OrderedListItem>Tenth item</OrderedListItem>
            <OrderedListItem>Eleventh item</OrderedListItem>
            <OrderedListItem>Twelfth item</OrderedListItem>
        </OrderedList>
    </Div>
</Div>

<Hr/>

<Div>
    <H2>Styled Ordered Lists</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <H3>Process Steps with Custom Styling</H3>
        <OrderedList Class="custom-ordered-list" Style="counter-reset: step-counter; border: 2px solid #28a745; border-radius: 8px; padding: 20px; background-color: #f8f9fa;">
            <OrderedListItem Class="custom-ordered-item" Style="counter-increment: step-counter; margin-bottom: 15px; padding: 10px; background-color: white; border-radius: 6px; border-left: 4px solid #28a745;">
                <Strong>Step @(1):</Strong> Initialize the project
            </OrderedListItem>
            <OrderedListItem Class="custom-ordered-item" Style="counter-increment: step-counter; margin-bottom: 15px; padding: 10px; background-color: white; border-radius: 6px; border-left: 4px solid #28a745;">
                <Strong>Step @(2):</Strong> Set up the development environment
            </OrderedListItem>
            <OrderedListItem Class="custom-ordered-item" Style="counter-increment: step-counter; margin-bottom: 15px; padding: 10px; background-color: white; border-radius: 6px; border-left: 4px solid #28a745;">
                <Strong>Step @(3):</Strong> Configure the database
            </OrderedListItem>
            <OrderedListItem Class="custom-ordered-item" Style="counter-increment: step-counter; margin-bottom: 15px; padding: 10px; background-color: white; border-radius: 6px; border-left: 4px solid #28a745;">
                <Strong>Step @(4):</Strong> Deploy to production
            </OrderedListItem>
        </OrderedList>
    </Div>
</Div>

<Hr/>

<Div>
    <H2>Lists with Icons and Progress</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <OrderedList ListStyle="ListStyle.Unstyled">
            <OrderedListItem Display="Display.Flex" AlignItems="AlignItems.Center" Margin="Margin.Is3.FromBottom">
                <Icon Name="check-circle" TextColor="TextColor.Success" Margin="Margin.Is3.FromEnd"/>
                <Div Flex="Flex.Grow.Is1">
                    <Strong>Step 1: Project Setup</Strong>
                    <Paragraph Margin="Margin.Is0.FromBottom" TextColor="TextColor.Muted">Initialize the project and install dependencies</Paragraph>
                </Div>
                <Badge BackgroundColor="@BackgroundColor.Success">Completed</Badge>
            </OrderedListItem>
            <OrderedListItem Display="Display.Flex" AlignItems="AlignItems.Center" Margin="Margin.Is3.FromBottom">
                <Icon Name="clock" TextColor="TextColor.Warning" Margin="Margin.Is3.FromEnd"/>
                <Div Flex="Flex.Grow.Is1">
                    <Strong>Step 2: Development</Strong>
                    <Paragraph Margin="Margin.Is0.FromBottom" TextColor="TextColor.Muted">Implement core features and functionality</Paragraph>
                </Div>
                <Badge BackgroundColor="@BackgroundColor.Warning">In Progress</Badge>
            </OrderedListItem>
            <OrderedListItem Display="Display.Flex" AlignItems="AlignItems.Center" Margin="Margin.Is3.FromBottom">
                <Icon Name="circle" TextColor="TextColor.Secondary" Margin="Margin.Is3.FromEnd"/>
                <Div Flex="Flex.Grow.Is1">
                    <Strong>Step 3: Testing</Strong>
                    <Paragraph Margin="Margin.Is0.FromBottom" TextColor="TextColor.Muted">Perform comprehensive testing and quality assurance</Paragraph>
                </Div>
                <Badge BackgroundColor="@BackgroundColor.Secondary">Pending</Badge>
            </OrderedListItem>
            <OrderedListItem Display="Display.Flex" AlignItems="AlignItems.Center" Margin="Margin.Is3.FromBottom">
                <Icon Name="circle" TextColor="TextColor.Secondary" Margin="Margin.Is3.FromEnd"/>
                <Div Flex="Flex.Grow.Is1">
                    <Strong>Step 4: Deployment</Strong>
                    <Paragraph Margin="Margin.Is0.FromBottom" TextColor="TextColor.Muted">Deploy to production environment</Paragraph>
                </Div>
                <Badge BackgroundColor="@BackgroundColor.Secondary">Pending</Badge>
            </OrderedListItem>
        </OrderedList>
    </Div>
</Div>

<Hr/>

<Div>
    <H2>Interactive Ordered Lists</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <OrderedList ListStyle="ListStyle.Unstyled">
            <OrderedListItem Margin="Margin.Is2.FromBottom">
                <Div Display="Display.Flex" AlignItems="AlignItems.Center">
                    <Span Margin="Margin.Is3.FromEnd" FontWeight="FontWeight.Bold">1.</Span>
                    <Button BackgroundColor="@BackgroundColor.Primary" Size="ButtonSize.Sm" @onclick="() => HandleStepClick(1)">
                        <Icon Name="play" Margin="Margin.Is1.FromEnd"/>
                        Start Step 1
                    </Button>
                </Div>
            </OrderedListItem>
            <OrderedListItem Margin="Margin.Is2.FromBottom">
                <Div Display="Display.Flex" AlignItems="AlignItems.Center">
                    <Span Margin="Margin.Is3.FromEnd" FontWeight="FontWeight.Bold">2.</Span>
                    <Button BackgroundColor="@BackgroundColor.Success" Size="ButtonSize.Sm" @onclick="() => HandleStepClick(2)">
                        <Icon Name="check" Margin="Margin.Is1.FromEnd"/>
                        Complete Step 2
                    </Button>
                </Div>
            </OrderedListItem>
            <OrderedListItem Margin="Margin.Is2.FromBottom">
                <Div Display="Display.Flex" AlignItems="AlignItems.Center">
                    <Span Margin="Margin.Is3.FromEnd" FontWeight="FontWeight.Bold">3.</Span>
                    <Button BackgroundColor="@BackgroundColor.Warning" Size="ButtonSize.Sm" @onclick="() => HandleStepClick(3)">
                        <Icon Name="edit" Margin="Margin.Is1.FromEnd"/>
                        Edit Step 3
                    </Button>
                </Div>
            </OrderedListItem>
        </OrderedList>

        <Div Margin="Margin.Is3.FromTop">
            <Paragraph TextColor="TextColor.Muted">Last clicked step: @_lastClickedStep</Paragraph>
        </Div>
    </Div>
</Div>

<Hr/>

<Div>
    <H2>Recipe Instructions Example</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <H3>Chocolate Chip Cookies Recipe</H3>
        <OrderedList Class="recipe-steps">
            <OrderedListItem>
                <Strong>Preheat oven</Strong> to 375°F (190°C)
            </OrderedListItem>
            <OrderedListItem>
                <Strong>Mix dry ingredients</Strong> - In a bowl, combine flour, baking soda, and salt
            </OrderedListItem>
            <OrderedListItem>
                <Strong>Cream butter and sugars</Strong> - Beat butter, brown sugar, and granulated sugar until fluffy
            </OrderedListItem>
            <OrderedListItem>
                <Strong>Add eggs and vanilla</Strong> - Beat in eggs one at a time, then vanilla
            </OrderedListItem>
            <OrderedListItem>
                <Strong>Combine wet and dry</Strong> - Gradually blend in flour mixture
            </OrderedListItem>
            <OrderedListItem>
                <Strong>Add chocolate chips</Strong> - Stir in chocolate chips
            </OrderedListItem>
            <OrderedListItem>
                <Strong>Bake</Strong> - Drop rounded tablespoons onto ungreased cookie sheets and bake for 9-11 minutes
            </OrderedListItem>
        </OrderedList>
    </Div>
</Div>

<Hr/>

<Div>
    <H2>OrderedList Component Properties</H2>
                <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
        <H3>OrderedList Features</H3>
        <Paragraph>The OrderedList and OrderedListItem components provide:</Paragraph>
            <UnorderedList>
                <UnorderedListItem><Strong>OrderedList:</Strong> Main container for numbered lists</UnorderedListItem>
                <UnorderedListItem><Strong>OrderedListItem:</Strong> Individual numbered list items</UnorderedListItem>
                <UnorderedListItem><Strong>Nesting:</Strong> Support for nested numbered lists</UnorderedListItem>
                <UnorderedListItem><Strong>Numbering Styles:</Strong> Various list-style-type options</UnorderedListItem>
                <UnorderedListItem><Strong>Starting Numbers:</Strong> Custom start values</UnorderedListItem>
                <UnorderedListItem><Strong>Styling:</Strong> Custom CSS classes and styles</UnorderedListItem>
                <UnorderedListItem><Strong>Interactive Content:</Strong> Buttons, forms, and other components</UnorderedListItem>
                <UnorderedListItem><Strong>Accessibility:</Strong> Proper semantic HTML structure</UnorderedListItem>
            </UnorderedList>
    </Div>
</Div>

<Hr/>

<Div>
    <H2>Accessibility Features</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <OrderedList Role="list" AriaLabel="Step-by-step instructions">
            <OrderedListItem Role="listitem" AriaLabel="First instruction">Accessible instruction 1</OrderedListItem>
            <OrderedListItem Role="listitem" AriaLabel="Second instruction">Accessible instruction 2</OrderedListItem>
            <OrderedListItem Role="listitem" AriaLabel="Third instruction">Accessible instruction 3</OrderedListItem>
        </OrderedList>
        <Paragraph TextColor="TextColor.Muted" Margin="Margin.Is2.FromTop">This list has proper ARIA attributes for screen readers.</Paragraph>
    </Div>
</Div>
</Column>
</Row>
</Container>

<style>
    .recipe-steps {
        counter-reset: recipe-step;
    }
    
    .recipe-steps > li {
        counter-increment: recipe-step;
        margin-bottom: 10px;
        padding: 10px;
        background-color: #fff3cd;
        border-left: 4px solid #ffc107;
        border-radius: 4px;
    }
</style>

@code {
    private string _lastClickedStep = "None";

    private void HandleStepClick(int stepNumber)
    {
        _lastClickedStep = $"Step {stepNumber}";
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }

}
