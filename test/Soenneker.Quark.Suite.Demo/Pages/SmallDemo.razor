@page "/small-demo"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Small</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Small component for small text elements.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Small Text</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>This is normal text with <Small>small text inline</Small> within the paragraph.</Paragraph>
                    <Paragraph>You can use <Small>small text</Small> for secondary information or fine print.</Paragraph>
                    <Small>This is standalone small text.</Small>
                </Div>
                <Paragraph Class="text-muted">The Small component creates HTML &lt;small&gt; elements for smaller text.</Paragraph>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text with Different Styles</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Primary small text: <Small Class="text-primary">Primary colored small text</Small></Paragraph>
                    <Paragraph>Success small text: <Small Class="text-success">Success colored small text</Small></Paragraph>
                    <Paragraph>Warning small text: <Small Class="text-warning">Warning colored small text</Small></Paragraph>
                    <Paragraph>Danger small text: <Small Class="text-danger">Danger colored small text</Small></Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text with Background Colors</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Small text with primary background: <Small Class="bg-primary text-white px-2 py-1">Primary Background</Small></Paragraph>
                    <Paragraph>Small text with success background: <Small Class="bg-success text-white px-2 py-1">Success Background</Small></Paragraph>
                    <Paragraph>Small text with warning background: <Small Class="bg-warning text-dark px-2 py-1">Warning Background</Small></Paragraph>
                    <Paragraph>Small text with info background: <Small Class="bg-info text-white px-2 py-1">Info Background</Small></Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text as Badges and Labels</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Product price: $99.99 <Small Class="badge bg-secondary ms-2">On Sale</Small>
                    </Paragraph>
                    <Paragraph>
                        User status: Active <Small Class="badge bg-success ms-2">Verified</Small>
                    </Paragraph>
                    <Paragraph>
                        Article date: March 15, 2024 <Small Class="text-muted ms-2">(Last updated)</Small>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text in Forms</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Div Class="mb-3">
                        <Label For="email" Class="form-label">Email Address</Label>
                        <TextEdit Id="email" Placeholder="Enter your email" @bind-Text="emailValue" />
                        <Small Class="form-text text-muted">We'll never share your email with anyone else.</Small>
                    </Div>
                    <Div Class="mb-3">
                        <Label For="password" Class="form-label">Password</Label>
                        <TextEdit Id="password" Type="password" Placeholder="Enter your password" @bind-Text="passwordValue" />
                        <Small Class="form-text text-muted">Password must be at least 8 characters long.</Small>
                    </Div>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text with Custom Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Custom styled small text: 
                        <Small Class="custom-small" Style="font-family: 'Courier New', monospace; color: #6f42c1; font-weight: bold;">
                            Monospace Purple Bold
                        </Small>
                    </Paragraph>
                    <Paragraph>
                        Small text with border: 
                        <Small Class="border border-primary px-2 py-1 rounded">Bordered Small Text</Small>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Text in Lists</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Features list:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem>Fast performance <Small Class="text-success">(New!)</Small></UnorderedListItem>
                        <UnorderedListItem>Secure encryption <Small Class="text-muted">(Updated)</Small></UnorderedListItem>
                        <UnorderedListItem>Easy to use <Small Class="badge bg-primary">Popular</Small></UnorderedListItem>
                        <UnorderedListItem>24/7 support <Small Class="text-info">(Coming soon)</Small></UnorderedListItem>
                    </UnorderedList>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Interactive Small Text</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Clickable small text: 
                        <Small Class="text-primary" Style="cursor: pointer; text-decoration: underline;" @onclick="HandleSmallClick" Title="Click me!">
                            Click me for more info
                        </Small>
                    </Paragraph>
                    <Small Class="text-muted">Click count: @clickCount</Small>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Small Component Properties</H2>
                <Div BackgroundColor="BackgroundColor.Light" Padding="Padding.Is3" Margin="Margin.Is3.FromBottom">
                    <H3>Small Features</H3>
                    <Paragraph>The Small component inherits all properties from the Element base class:</Paragraph>
                    <UnorderedList>
                        <UnorderedListItem><Strong>Id:</Strong> HTML id attribute</UnorderedListItem>
                        <UnorderedListItem><Strong>Class:</Strong> CSS classes (Bootstrap utility classes supported)</UnorderedListItem>
                        <UnorderedListItem><Strong>Style:</Strong> Inline CSS styles</UnorderedListItem>
                        <UnorderedListItem><Strong>Title:</Strong> Tooltip text</UnorderedListItem>
                        <UnorderedListItem><Strong>Hidden:</Strong> Visibility control</UnorderedListItem>
                        <UnorderedListItem><Strong>Display:</Strong> CSS display property</UnorderedListItem>
                        <UnorderedListItem><Strong>Margin/Padding:</Strong> Spacing utilities</UnorderedListItem>
                        <UnorderedListItem><Strong>Event Handlers:</Strong> Click, focus, keyboard events</UnorderedListItem>
                    </UnorderedList>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Accessibility Features</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Small text with ARIA label: 
                        <Small AriaLabel="Additional information about the product">See details</Small>
                    </Paragraph>
                    <Paragraph>
                        Small text with role: 
                        <Small Role="note">This is a note</Small>
                    </Paragraph>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    private int clickCount = 0;
    private string emailValue = string.Empty;
    private string passwordValue = string.Empty;

    private void HandleSmallClick(MouseEventArgs args)
    {
        clickCount++;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }
}
