@page "/media/avatars"

<PageTitle>Avatars - Quark Suite</PageTitle>

<Div Class="space-y-8 max-w-4xl">
    <Div Class="space-y-6">
        <section class="space-y-4">
            <DemoSection Title="Basic avatar"
                         Description="shadcn-style Avatar with image and fallback."
                         Code="@BasicCode">
                <Div Class="flex flex-wrap items-center gap-4">
                    <Avatar>
                        <AvatarImage Src="https://github.com/shadcn.png" Alt="shadcn" />
                        <AvatarFallback>CN</AvatarFallback>
                    </Avatar>

                    <Avatar Class="rounded-lg">
                        <AvatarImage Src="https://github.com/evilrabbit.png" Alt="evilrabbit" />
                        <AvatarFallback>ER</AvatarFallback>
                    </Avatar>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Sizes"
                         Description="Use Size=sm|default|lg."
                         Code="@SizeCode">
                <Div Class="flex items-center gap-4">
                    <Avatar Size="sm">
                        <AvatarFallback>SM</AvatarFallback>
                    </Avatar>
                    <Avatar>
                        <AvatarFallback>DF</AvatarFallback>
                    </Avatar>
                    <Avatar Size="lg">
                        <AvatarFallback>LG</AvatarFallback>
                    </Avatar>
                </Div>
            </DemoSection>
        </section>

        <section class="space-y-4">
            <DemoSection Title="Avatar group"
                         Description="Stacked avatars using shadcn utility classes."
                         Code="@GroupCode">
                <Div Class="*:data-[slot=avatar]:ring-background flex -space-x-2 *:data-[slot=avatar]:ring-2 *:data-[slot=avatar]:grayscale">
                    <Avatar>
                        <AvatarImage Src="https://github.com/shadcn.png" Alt="shadcn" />
                        <AvatarFallback>CN</AvatarFallback>
                    </Avatar>
                    <Avatar>
                        <AvatarImage Src="https://github.com/maxleiter.png" Alt="maxleiter" />
                        <AvatarFallback>ML</AvatarFallback>
                    </Avatar>
                    <Avatar>
                        <AvatarImage Src="https://github.com/evilrabbit.png" Alt="evilrabbit" />
                        <AvatarFallback>ER</AvatarFallback>
                    </Avatar>
                </Div>
            </DemoSection>
        </section>
    </Div>
</Div>

@code {
    private const string BasicCode =
@"<Avatar>
    <AvatarImage Src=""https://github.com/shadcn.png"" Alt=""@shadcn"" />
    <AvatarFallback>CN</AvatarFallback>
</Avatar>";

    private const string SizeCode =
@"<Avatar Size=""sm""><AvatarFallback>SM</AvatarFallback></Avatar>
<Avatar><AvatarFallback>DF</AvatarFallback></Avatar>
<Avatar Size=""lg""><AvatarFallback>LG</AvatarFallback></Avatar>";

    private const string GroupCode =
@"<Div Class=""*:data-[slot=avatar]:ring-background flex -space-x-2 *:data-[slot=avatar]:ring-2"">
    <Avatar>...</Avatar>
    <Avatar>...</Avatar>
    <Avatar>...</Avatar>
</Div>";
}
