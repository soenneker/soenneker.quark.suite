@page "/span-demo"

<Container Class="py-4">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Span</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Span component for inline text elements.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Span Usage</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>This is normal text with <Span>span text inline</Span> within the paragraph.</Paragraph>
                    <Paragraph>You can use <Span>span elements</Span> to style or group inline content.</Paragraph>
                    <Span>This is standalone span text.</Span>
                </Div>
                <Paragraph Class="text-muted">The Span component creates HTML &lt;span&gt; elements for inline text styling.</Paragraph>
            </Div>

            <Hr/>

            <Div>
                <H2>Span with Different Colors</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Text with colored spans: <Span Class="text-primary">Primary</Span>, <Span Class="text-success">Success</Span>, <Span Class="text-warning">Warning</Span>, <Span Class="text-danger">Danger</Span></Paragraph>
                    <Paragraph>Background colors: <Span Class="bg-primary text-white px-2 py-1">Primary BG</Span> <Span Class="bg-success text-white px-2 py-1">Success BG</Span> <Span Class="bg-warning text-dark px-2 py-1">Warning BG</Span></Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Span with Font Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Font weights: <Span Class="fw-light">Light</Span>, <Span Class="fw-normal">Normal</Span>, <Span Class="fw-bold">Bold</Span>, <Span Class="fw-bolder">Bolder</Span></Paragraph>
                    <Paragraph>Font styles: <Span Class="fst-normal">Normal</Span>, <Span Class="fst-italic">Italic</Span>, <Span Class="fst-oblique">Oblique</Span></Paragraph>
                    <Paragraph>Text decoration: <Span Class="text-decoration-none">None</Span>, <Span Class="text-decoration-underline">Underline</Span>, <Span Class="text-decoration-line-through">Strikethrough</Span></Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Span as Badges and Labels</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Status indicators: 
                        <Span Class="badge bg-success">Active</Span>
                        <Span Class="badge bg-warning text-dark">Pending</Span>
                        <Span Class="badge bg-danger">Inactive</Span>
                        <Span Class="badge bg-info">New</Span>
                    </Paragraph>
                    <Paragraph>
                        Tags: 
                        <Span Class="badge bg-secondary me-1">Tag 1</Span>
                        <Span Class="badge bg-secondary me-1">Tag 2</Span>
                        <Span Class="badge bg-secondary me-1">Tag 3</Span>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Span with Custom Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Custom styled spans: 
                        <Span Class="custom-span" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 4px 8px; border-radius: 4px;">
                            Gradient Span
                        </Span>
                        <Span Class="ms-2" Style="border: 2px solid #dc3545; padding: 2px 6px; border-radius: 3px; color: #dc3545;">
                            Bordered Span
                        </Span>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Interactive Spans</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Clickable spans: 
                        <Span Class="text-primary" Style="cursor: pointer; text-decoration: underline;" @onclick="HandleSpanClick" Title="Click me!">
                            Click me
                        </Span>
                        <Span Class="text-success ms-3" Style="cursor: pointer; text-decoration: underline;" @onclick="HandleSpanClick2" Title="Click me too!">
                            Click me too
                        </Span>
                    </Paragraph>
                    <Paragraph Class="text-muted">Click counts - Span 1: @clickCount1, Span 2: @clickCount2</Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Span with Spacing and Layout</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Spans with margins: 
                        <Span Class="bg-light p-1 me-2">Margin End</Span>
                        <Span Class="bg-light p-1 ms-2">Margin Start</Span>
                        <Span Class="bg-light p-1 mx-2">Margin X</Span>
                    </Paragraph>
                    <Paragraph>
                        Spans with padding: 
                        <Span Class="bg-primary text-white px-3 py-2">More Padding</Span>
                        <Span Class="bg-success text-white p-3 ms-2">Even More Padding</Span>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Span in Different Contexts</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <H3>In Headers</H3>
                    <H4>Welcome <Span Class="text-primary">John</Span> to our <Span Class="text-success">Premium</Span> service</H4>
                    
                    <H3>In Lists</H3>
                    <ul>
                        <li>Feature A <Span Class="badge bg-success">Available</Span></li>
                        <li>Feature B <Span Class="badge bg-warning text-dark">Beta</Span></li>
                        <li>Feature C <Span Class="badge bg-secondary">Coming Soon</Span></li>
                    </ul>
                    
                    <H3>In Forms</H3>
                    <Div Class="mb-3">
                        <Label For="username" Class="form-label">Username <Span Class="text-danger">*</Span></Label>
                        <TextEdit Id="username" Placeholder="Enter username" @bind-Value="usernameValue" />
                        <Small Class="form-text text-muted">Available characters: <Span Class="text-success">@availableChars</Span> remaining</Small>
                    </Div>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Span Component Properties</H2>
                <div class="bg-light p-3 mb-3">
                    <H3>Span Features</H3>
                    <Paragraph>The Span component inherits all properties from the Element base class:</Paragraph>
                    <ul>
                        <li><strong>Id:</strong> HTML id attribute</li>
                        <li><strong>Class:</strong> CSS classes (Bootstrap utility classes supported)</li>
                        <li><strong>Style:</strong> Inline CSS styles</li>
                        <li><strong>Title:</strong> Tooltip text</li>
                        <li><strong>Hidden:</strong> Visibility control</li>
                        <li><strong>Display:</strong> CSS display property</li>
                        <li><strong>Margin/Padding:</strong> Spacing utilities</li>
                        <li><strong>Event Handlers:</strong> Click, focus, keyboard events</li>
                    </ul>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Accessibility Features</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Span with ARIA attributes: 
                        <Span Role="button" TabIndex="0" AriaLabel="Click to expand details" @onclick="HandleAccessibleClick" @onkeypress="HandleKeyPress">
                            Expand Details
                        </Span>
                    </Paragraph>
                    <Paragraph>
                        Span with title attribute: 
                        <Span Title="This span provides additional context">Hover for info</Span>
                    </Paragraph>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    private int clickCount1 = 0;
    private int clickCount2 = 0;
    private string usernameValue = string.Empty;

    private int availableChars => Math.Max(0, 20 - (usernameValue?.Length ?? 0));

    private void HandleSpanClick(MouseEventArgs args)
    {
        clickCount1++;
        StateHasChanged();
    }

    private void HandleSpanClick2(MouseEventArgs args)
    {
        clickCount2++;
        StateHasChanged();
    }

    private void HandleAccessibleClick(MouseEventArgs args)
    {
        // Handle click for accessible span
        StateHasChanged();
    }

    private void HandleKeyPress(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" || args.Key == " ")
        {
            HandleAccessibleClick(new MouseEventArgs());
        }
    }

    protected override void OnInitialized()
    {
    }
}
