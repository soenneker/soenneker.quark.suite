@page "/section-demo"

<Container Class="py-4">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Section</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Section component for semantic content sections.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Sections</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Section>
                        <H3>Section 1</H3>
                        <Paragraph>This is the content of section 1. The Section component creates HTML &lt;section&gt; elements for semantic content organization.</Paragraph>
                    </Section>
                    <Section>
                        <H3>Section 2</H3>
                        <Paragraph>This is the content of section 2. Sections help organize content into logical groups.</Paragraph>
                    </Section>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Sections with Different Styles</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Section Class="bg-light p-3 mb-3">
                        <H3 Class="text-primary">Light Background Section</H3>
                        <Paragraph>This section has a light background with padding and margin.</Paragraph>
                    </Section>
                    <Section Class="bg-primary text-white p-3 mb-3">
                        <H3>Primary Background Section</H3>
                        <Paragraph>This section has a primary background with white text.</Paragraph>
                    </Section>
                    <Section Class="border border-success p-3 mb-3">
                        <H3 Class="text-success">Bordered Section</H3>
                        <Paragraph>This section has a success-colored border.</Paragraph>
                    </Section>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Nested Sections</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Section Class="bg-light p-4">
                        <H3>Main Section</H3>
                        <Paragraph>This is the main section content.</Paragraph>
                        
                        <Section Class="bg-white p-3 mt-3">
                            <H4>Subsection 1</H4>
                            <Paragraph>This is a subsection within the main section.</Paragraph>
                        </Section>
                        
                        <Section Class="bg-white p-3 mt-3">
                            <H4>Subsection 2</H4>
                            <Paragraph>This is another subsection within the main section.</Paragraph>
                        </Section>
                    </Section>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Sections with Different Content Types</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Section Class="bg-info text-white p-3 mb-3">
                        <H3>Text Content Section</H3>
                        <Paragraph>This section contains text content with multiple paragraphs.</Paragraph>
                        <Paragraph>It demonstrates how sections can organize related text content.</Paragraph>
                    </Section>
                    
                    <Section Class="bg-warning text-dark p-3 mb-3">
                        <H3>Interactive Content Section</H3>
                        <Paragraph>This section contains interactive elements.</Paragraph>
                        <Button BackgroundColor="@Color.Primary" @onclick="HandleSectionClick">Click Me!</Button>
                        <Text Class="ms-3">Click count: @clickCount</Text>
                    </Section>
                    
                    <Section Class="bg-success text-white p-3 mb-3">
                        <H3>Form Content Section</H3>
                        <Paragraph>This section contains form elements.</Paragraph>
                        <TextEdit Placeholder="Enter some text..." @bind-Value="formValue" />
                        <Text Class="ms-2">Value: @formValue</Text>
                    </Section>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Sections with Custom Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Section Class="custom-section" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                        <H3>Gradient Section</H3>
                        <Paragraph>This section has a custom gradient background with rounded corners and shadow.</Paragraph>
                    </Section>
                    
                    <Section Class="mt-4" Style="border: 2px dashed #dc3545; padding: 15px; background-color: #fff5f5;">
                        <H3 Class="text-danger">Dashed Border Section</H3>
                        <Paragraph Class="text-danger">This section has a dashed red border with a light background.</Paragraph>
                    </Section>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Section Component Properties</H2>
                <div class="bg-light p-3 mb-3">
                    <H3>Section Features</H3>
                    <Paragraph>The Section component inherits all properties from the Element base class:</Paragraph>
                    <ul>
                        <li><strong>Id:</strong> HTML id attribute</li>
                        <li><strong>Class:</strong> CSS classes (Bootstrap utility classes supported)</li>
                        <li><strong>Style:</strong> Inline CSS styles</li>
                        <li><strong>Title:</strong> Tooltip text</li>
                        <li><strong>Hidden:</strong> Visibility control</li>
                        <li><strong>Display:</strong> CSS display property</li>
                        <li><strong>Margin/Padding:</strong> Spacing utilities</li>
                        <li><strong>Event Handlers:</strong> Click, focus, keyboard events</li>
                    </ul>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Accessibility Features</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Section Role="region" AriaLabel="Important Information">
                        <H3>Accessible Section</H3>
                        <Paragraph>This section has proper ARIA attributes for accessibility.</Paragraph>
                    </Section>
                    
                    <Section Class="mt-3" Title="This section contains navigation links">
                        <H3>Navigation Section</H3>
                        <Paragraph>This section has a title attribute for additional context.</Paragraph>
                    </Section>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    private int clickCount = 0;
    private string formValue = string.Empty;

    private void HandleSectionClick(MouseEventArgs args)
    {
        clickCount++;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }
}
