@page "/textstyle-demo"

<Container Padding="Padding.Is4.OnY">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">TextStyle and TextAlignment Demo</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the TextStyle and TextAlignment builder functionality available on all components.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Text Alignment Examples (using TextAlignment property)</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Div TextAlignment="@TextAlignment.Start" Class="border p-2 mb-2">
                        <Text>Left aligned text (text-start)</Text>
                    </Div>
                    <Div TextAlignment="@TextAlignment.Center" Class="border p-2 mb-2">
                        <Text>Center aligned text (text-center)</Text>
                    </Div>
                    <Div TextAlignment="@TextAlignment.End" Class="border p-2 mb-2">
                        <Text>Right aligned text (text-end)</Text>
                    </Div>
                </Div>

                <H2>Text Transformation Examples (using TextStyle property)</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Text TextStyle="@TextStyle.Lowercase" Class="border p-2 mb-2 d-block">LOWERCASE TEXT</Text>
                    <Text TextStyle="@TextStyle.Uppercase" Class="border p-2 mb-2 d-block">uppercase text</Text>
                    <Text TextStyle="@TextStyle.Capitalize" Class="border p-2 mb-2 d-block">capitalize this text</Text>
                </Div>

                <H2>Text Styling Examples (using TextStyle property)</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Text TextStyle="@TextStyle.Muted" Class="border p-2 mb-2 d-block">Muted text color</Text>
                    <Text TextStyle="@TextStyle.Emphasis" Class="border p-2 mb-2 d-block">Emphasized text</Text>
                    <Text TextStyle="@TextStyle.Reset" Class="border p-2 mb-2 d-block">Reset text styling</Text>
                </Div>

                <H2>Text Wrapping Examples (using TextStyle property)</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Text TextStyle="@TextStyle.Wrap" Class="border p-2 mb-2 d-block" Style="width: 200px;">
                        This text will wrap when it reaches the container width
                    </Text>
                    <Text TextStyle="@TextStyle.Nowrap" Class="border p-2 mb-2 d-block" Style="width: 200px; overflow: hidden;">
                        This text will not wrap and may overflow
                    </Text>
                    <Text TextStyle="@TextStyle.Truncate" Class="border p-2 mb-2 d-block" Style="width: 200px;">
                        This text will be truncated with ellipsis when it overflows
                    </Text>
                </Div>

                <H2>Combined with Other Components</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Button TextStyle="@TextStyle.Uppercase" BackgroundColor="BackgroundColor.Primary" Margin="Margin.Is2.FromBottom">
                        Uppercase Button Text
                    </Button>
                    <Div TextAlignment="@TextAlignment.Center" Class="alert alert-info">
                        <Text>Centered text in an alert</Text>
                    </Div>
                </Div>

                <H2>Usage with Fluent API</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Text TextAlignment="@TextAlignment.Center" TextStyle="@TextStyle.Uppercase" Class="border p-2 d-block">
                        Separate properties: Center alignment + Uppercase transformation
                    </Text>
                    <Text TextAlignment="@TextAlignment.Start.OnTablet.Center" Class="border p-2 d-block">
                        Responsive alignment: Start on mobile, Center on tablet+
                    </Text>
                    <Text TextStyle="@TextStyle.Muted.Truncate" Class="border p-2 d-block" Style="width: 200px;">
                        Fluent API: Muted + Truncate
                    </Text>
                </Div>

                <H2>Complex Chaining Examples</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Text TextAlignment="@TextAlignment.Center.OnPhone.End.OnWidescreen" TextStyle="@TextStyle.Uppercase" Class="border p-2 d-block">
                        Complex: Center on phone, End on widescreen, Uppercase
                    </Text>
                    <Text TextAlignment="@TextAlignment.Start.OnTablet.Center.OnDesktop" Class="border p-2 d-block">
                        Complex: Start → Center on tablet → Center on desktop
                    </Text>
                    <Text TextStyle="@TextStyle.Muted.OnPhone.Emphasis.OnTablet.Lowercase" Class="border p-2 d-block">
                        Complex: Muted on phone, Emphasis on tablet, Lowercase
                    </Text>
                    <Text TextStyle="@TextStyle.Wrap.OnPhone.Nowrap.OnTablet.Truncate.OnDesktop" Class="border p-2 d-block" Style="width: 200px;">
                        Complex: Wrap → Nowrap on tablet → Truncate on desktop
                    </Text>
                </Div>

                <H2>TextAlignment vs TextStyle Comparison</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Div Class="alert alert-info">
                        <H4>Key Differences:</H4>
                        <UnorderedList>
                            <UnorderedListItem><Strong>TextAlignment:</Strong> Controls text alignment (left, center, right, justify)</UnorderedListItem>
                            <UnorderedListItem><Strong>TextStyle:</Strong> Controls text transformation, wrapping, and styling (uppercase, lowercase, truncate, muted, etc.)</UnorderedListItem>
                            <UnorderedListItem><Strong>Separation:</Strong> These are now separate properties for better clarity and maintainability</UnorderedListItem>
                        </UnorderedList>
                    </Div>
                </Div>

                <H2>Responsive Examples</H2>
                <Div Margin="Margin.Is3.FromBottom">
                    <Text TextAlignment="@TextAlignment.Start.OnPhone.Center.OnTablet.End.OnDesktop" Class="border p-2 d-block">
                        Responsive alignment: Start → Center → End
                    </Text>
                    <Text TextStyle="@TextStyle.Lowercase.OnPhone.Uppercase.OnTablet.Capitalize.OnDesktop" Class="border p-2 d-block">
                        Responsive transformation: Lowercase → Uppercase → Capitalize
                    </Text>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {

    protected override void OnInitialized()
    {
        // Demo initialization
    }

}