@page "/divs/padding-demo"

<PageTitle>Padding Demo</PageTitle>

<h1>Padding Demo</h1>

<p>This page demonstrates the padding functionality in Quark.Divs.</p>

<h2>Basic Padding</h2>

<div class="demo-section">
    <h3>Size 0 Padding (No Padding)</h3>
    <Div Padding="@Padding.S0" Class="border border-primary">
        No padding content
    </Div>
</div>

<div class="demo-section">
    <h3>Size 1 Padding</h3>
    <Div Padding="@Padding.S1" Class="border border-primary">
        Small padding content
    </Div>
</div>

<div class="demo-section">
    <h3>Size 2 Padding</h3>
    <Div Padding="@Padding.S2" Class="border border-primary">
        Medium padding content
    </Div>
</div>

<div class="demo-section">
    <h3>Size 3 Padding</h3>
    <Div Padding="@Padding.S3" Class="border border-primary">
        Large padding content
    </Div>
</div>

<h2>Directional Padding</h2>

<div class="demo-section">
    <h3>Top Padding</h3>
    <Div Padding="@Padding.S2.FromTop" Class="border border-primary">
        Top padding only
    </Div>
</div>

<div class="demo-section">
    <h3>Right Padding</h3>
    <Div Padding="@Padding.S2.FromRight" Class="border border-primary">
        Right padding only
    </Div>
</div>

<div class="demo-section">
    <h3>Horizontal Padding (X-axis)</h3>
    <Div Padding="@Padding.S3.OnX" Class="border border-primary">
        Horizontal padding
    </Div>
</div>

<div class="demo-section">
    <h3>Vertical Padding (Y-axis)</h3>
    <Div Padding="@Padding.S3.OnY" Class="border border-primary">
        Vertical padding
    </Div>
</div>

<h2>Chained Padding</h2>

<div class="demo-section">
    <h3>Multiple Padding Rules</h3>
    <Div Padding="@Padding.S1.FromTop.S2.FromRight" Class="border border-primary">
        Different padding on top and right
    </Div>
</div>

<div class="demo-section">
    <h3>Complex Padding</h3>
    <Div Padding="@Padding.S2.OnY.S1.FromLeft.S3.FromRight" Class="border border-primary">
        Complex padding combination
    </Div>
</div>

<h2>Responsive Padding</h2>

<div class="demo-section">
    <h3>Responsive Padding</h3>
    <Div Padding="@Padding.S1.OnPhone.S2.OnTablet.S3.OnDesktop" Class="border border-primary">
        Responsive padding: S1 on mobile, S2 on tablet, S3 on desktop
    </Div>
</div>

<h2>Custom Padding</h2>

<div class="demo-section">
    <h3>Custom CSS Class</h3>
    <Div Padding="@("custom-padding")" Class="border border-primary">
        Custom padding class
    </Div>
</div>

<div class="demo-section">
    <h3>Custom CSS Style</h3>
    <Div Padding="@("padding: 20px 30px;")" Class="border border-primary">
        Custom padding style
    </Div>
</div>

<style>
    .demo-section {
        margin-bottom: 2rem;
    }
    
    .demo-section h3 {
        margin-bottom: 0.5rem;
        color: #6c757d;
    }
</style>
