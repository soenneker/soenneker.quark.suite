@page "/divs/padding-demo"

<PageTitle>Padding Demo</PageTitle>

<h1>Padding Demo</h1>

<p>This page demonstrates the padding functionality in Quark.Divs.</p>

<h2>Basic Padding</h2>

<div class="demo-section">
    <h3>Size 0 Padding (No Padding)</h3>
    <Div Padding="@Padding.Is0" Class="border border-primary">
        No padding content
    </Div>
</Div>

<div class="demo-section">
    <h3>Size 1 Padding</h3>
    <Div Padding="@Padding.Is1" Class="border border-primary">
        Small padding content
    </Div>
</Div>

<div class="demo-section">
    <h3>Size 2 Padding</h3>
    <Div Padding="@Padding.Is2" Class="border border-primary">
        Medium padding content
    </Div>
</Div>

<div class="demo-section">
    <h3>Size 3 Padding</h3>
    <Div Padding="@Padding.Is3" Class="border border-primary">
        Large padding content
    </Div>
</Div>

<h2>Directional Padding</h2>

<div class="demo-section">
    <h3>Top Padding</h3>
    <Div Padding="@Padding.Is2.FromTop" Class="border border-primary">
        Top padding only
    </Div>
</Div>

<div class="demo-section">
    <h3>Right Padding</h3>
    <Div Padding="@Padding.Is2.FromRight" Class="border border-primary">
        Right padding only
    </Div>
</Div>

<div class="demo-section">
    <h3>Horizontal Padding (X-axis)</h3>
    <Div Padding="@Padding.Is3.OnX" Class="border border-primary">
        Horizontal padding
    </Div>
</Div>

<div class="demo-section">
    <h3>Vertical Padding (Y-axis)</h3>
    <Div Padding="@Padding.Is3.OnY" Class="border border-primary">
        Vertical padding
    </Div>
</Div>

<h2>Chained Padding</h2>

<div class="demo-section">
    <h3>Multiple Padding Rules</h3>
    <Div Padding="@Padding.Is1.FromTop.Is2.FromRight" Class="border border-primary">
        Different padding on top and right
    </Div>
</Div>

<div class="demo-section">
    <h3>Complex Padding</h3>
    <Div Padding="@Padding.Is2.OnY.Is1.FromLeft.Is3.FromRight" Class="border border-primary">
        Complex padding combination
    </Div>
</Div>

<h2>Responsive Padding</h2>

<div class="demo-section">
    <h3>Responsive Padding</h3>
    <Div Padding="@Padding.Is1.OnPhone.Is2.OnTablet.Is3.OnDesktop" Class="border border-primary">
        Responsive padding: Is1 on mobile, Is2 on tablet, Is3 on desktop
    </Div>
</Div>

<h2>Custom Padding</h2>

<div class="demo-section">
    <h3>Custom CSS Class</h3>
    <Div Padding="@("custom-padding")" Class="border border-primary">
        Custom padding class
    </Div>
</Div>

<div class="demo-section">
    <h3>Custom CSS Style</h3>
    <Div Padding="@("padding: 20px 30px;")" Class="border border-primary">
        Custom padding style
    </Div>
</Div>

<style>
    .demo-section {
        margin-bottom: 2rem;
    }
    
    .demo-section h3 {
        margin-bottom: 0.5rem;
        color: #6c757d;
    }
</style>
