@page "/headings/basic"

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Basic Heading Examples</h1>
            <p>Simple examples of using Quark.Headings components.</p>
        </Div>
    </Div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h2>Dynamic Heading Component</h2>
            <Heading Scale="Scale.Is1">Main Title</Heading>
            <Heading Scale="Scale.Is2">Section Title</Heading>
            <Heading Scale="Scale.Is3">Subsection</Heading>
        </Div>
        
        <div class="col-md-6">
            <h2>Individual Components</h2>
            <H1>Main Title</H1>
            <H2>Section Title</H2>
            <H3>Subsection</H3>
        </Div>
    </Div>

    <div class="row mt-4">
        <div class="col-12">
            <h2>Styled Examples</h2>
            <H1 Class="text-primary border-bottom pb-2">Primary Heading</H1>
            <H2 Class="text-success">Success Heading</H2>
            <H3 Class="text-muted">Muted Heading</H3>
        </Div>
    </Div>
</Div>
