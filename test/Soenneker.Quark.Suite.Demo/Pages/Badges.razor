@page "/badges"

<Container Class="py-4">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Badges</H1>
                <Paragraph Class="lead text-muted">This page demonstrates some of the common usages for the badges library.</Paragraph>
            </Div>
        </Column>
    </Row>
    
    <Row Gap="Gap.Is4">
        <Column>
            <Div>
    <H2>Basic Badges</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <Badge BackgroundColor="@Color.Primary">Primary</Badge>
        <Badge BackgroundColor="@Color.Secondary">Secondary</Badge>
        <Badge BackgroundColor="@Color.Success">Success</Badge>
        <Badge BackgroundColor="@Color.Danger">Danger</Badge>
        <Badge BackgroundColor="@Color.Warning">Warning</Badge>
        <Badge BackgroundColor="@Color.Info">Info</Badge>
        <Badge BackgroundColor="@Color.Light">Light</Badge>
        <Badge BackgroundColor="@Color.Dark">Dark</Badge>
    </Div>
</Div>

<Hr />

<Div>
    <H2>Badge Types</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <Badge BackgroundColor="@Color.Primary" Type="@BadgeType.Badge">Regular Badge</Badge>
        <Badge BackgroundColor="@Color.Success" Type="@BadgeType.Pill">Pill Badge</Badge>
        <Badge BackgroundColor="@Color.Danger" Type="@BadgeType.Dot">Dot Badge</Badge>
    </Div>
</Div>

<Hr />

<Hr />

<Div>
    <H2>Badges in Context</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <H4>Notifications <Badge BackgroundColor="@Color.Danger">4</Badge></H4>
        <H5>Messages <Badge BackgroundColor="@Color.Info">12</Badge></H5>
        <H6>Updates <Badge BackgroundColor="@Color.Success">New</Badge></H6>
    </Div>
    <Div Margin="Margin.Is3.FromEnd">
        <Button BackgroundColor="@Color.Primary">
            Profile <Badge BackgroundColor="@Color.Light">9</Badge>
        </Button>
        <Button BackgroundColor="@Color.Success">
            Inbox <Badge BackgroundColor="@Color.Dark">3</Badge>
        </Button>
    </Div>
</Div>

<Hr />

<Div>
    <H2>Rounded Badges</H2>
    <Div Margin="Margin.Is3.FromEnd">
        <Badge BackgroundColor="@Color.Primary" Rounded="true">Rounded Primary</Badge>
        <Badge BackgroundColor="@Color.Success" Rounded="true">Rounded Success</Badge>
        <Badge BackgroundColor="@Color.Warning" Rounded="true">Rounded Warning</Badge>
    </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    protected override void OnInitialized()
    {
    }
}
