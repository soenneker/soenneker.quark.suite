@page "/strong-demo"

<Container Class="py-4">
    <Row>
        <Column>
            <Div Class="text-center" Margin="Margin.Is5.FromEnd">
                <H1 Class="display-4 fw-bold text-primary">Strong</H1>
                <Paragraph Class="lead text-muted">This page demonstrates the Strong component for bold text emphasis.</Paragraph>
            </Div>
        </Column>
    </Row>

    <Row Gap="Gap.Is4">
        <Column>
            <Div>
                <H2>Basic Strong Text</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>This is normal text with <Strong>strong text inline</Strong> within the paragraph.</Paragraph>
                    <Paragraph>You can use <Strong>strong elements</Strong> to emphasize important content.</Paragraph>
                    <Strong>This is standalone strong text.</Strong>
                </Div>
                <Paragraph Class="text-muted">The Strong component creates HTML &lt;strong&gt; elements for bold text emphasis.</Paragraph>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong Text with Different Colors</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Colored strong text: <Strong Class="text-primary">Primary Strong</Strong>, <Strong Class="text-success">Success Strong</Strong>, <Strong Class="text-warning">Warning Strong</Strong>, <Strong Class="text-danger">Danger Strong</Strong></Paragraph>
                    <Paragraph>Background colors: <Strong Class="bg-primary text-white px-2 py-1">Primary BG Strong</Strong> <Strong Class="bg-success text-white px-2 py-1">Success BG Strong</Strong></Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong Text in Different Contexts</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Important notice: <Strong>This is very important information that needs to be emphasized.</Strong></Paragraph>
                    <Paragraph>Warning: <Strong Class="text-danger">Please read the terms and conditions carefully before proceeding.</Strong></Paragraph>
                    <Paragraph>Success message: <Strong Class="text-success">Your action has been completed successfully!</Strong></Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong Text as Headers and Labels</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        <Strong Class="h4">Product Information:</Strong>
                    </Paragraph>
                    <Paragraph>
                        Name: <Strong>Premium Widget Pro</Strong><Br />
                        Price: <Strong Class="text-success">$99.99</Strong><Br />
                        Status: <Strong Class="text-primary">In Stock</Strong>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong Text with Custom Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Custom styled strong text: 
                        <Strong Class="custom-strong" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 4px 8px; border-radius: 4px; text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
                            Gradient Strong Text
                        </Strong>
                    </Paragraph>
                    <Paragraph>
                        Strong text with border: 
                        <Strong Class="border border-danger px-2 py-1" Style="border-radius: 3px; color: #dc3545;">
                            Bordered Strong Text
                        </Strong>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Interactive Strong Text</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Clickable strong text: 
                        <Strong Class="text-primary" Style="cursor: pointer; text-decoration: underline;" @onclick="HandleStrongClick" Title="Click me!">
                            Click for more details
                        </Strong>
                    </Paragraph>
                    <Paragraph Class="text-muted">Click count: @clickCount</Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong Text in Forms</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Div Class="mb-3">
                        <Label For="fullname" Class="form-label"><Strong>Full Name</Strong> <Span Class="text-danger">*</Span></Label>
                        <TextEdit Id="fullname" Placeholder="Enter your full name" @bind-Value="fullNameValue" />
                    </Div>
                    <Div Class="mb-3">
                        <Label For="company" Class="form-label"><Strong>Company Name</Strong></Label>
                        <TextEdit Id="company" Placeholder="Enter company name" @bind-Value="companyValue" />
                        <Small Class="form-text text-muted">Required for <Strong>business accounts</Strong></Small>
                    </Div>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong Text in Lists</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>Key features:</Paragraph>
                    <ul>
                        <li><Strong>High Performance:</Strong> Optimized for speed and efficiency</li>
                        <li><Strong>Secure:</Strong> Enterprise-grade security features</li>
                        <li><Strong>Scalable:</Strong> Grows with your business needs</li>
                        <li><Strong>Support:</Strong> 24/7 customer support available</li>
                    </ul>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong Text with Icons and Badges</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Status indicators: 
                        <Strong Class="badge bg-success">Active</Strong>
                        <Strong Class="badge bg-warning text-dark">Pending</Strong>
                        <Strong Class="badge bg-danger">Critical</Strong>
                    </Paragraph>
                    <Paragraph>
                        Priority levels: 
                        <Strong Class="text-danger">High Priority</Strong> | 
                        <Strong Class="text-warning">Medium Priority</Strong> | 
                        <Strong Class="text-success">Low Priority</Strong>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong Component Properties</H2>
                <div class="bg-light p-3 mb-3">
                    <H3>Strong Features</H3>
                    <Paragraph>The Strong component inherits all properties from the Element base class:</Paragraph>
                    <ul>
                        <li><strong>Id:</strong> HTML id attribute</li>
                        <li><strong>Class:</strong> CSS classes (Bootstrap utility classes supported)</li>
                        <li><strong>Style:</strong> Inline CSS styles</li>
                        <li><strong>Title:</strong> Tooltip text</li>
                        <li><strong>Hidden:</strong> Visibility control</li>
                        <li><strong>Display:</strong> CSS display property</li>
                        <li><strong>Margin/Padding:</strong> Spacing utilities</li>
                        <li><strong>Event Handlers:</strong> Click, focus, keyboard events</li>
                    </ul>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Accessibility Features</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        Strong text with ARIA attributes: 
                        <Strong Role="alert" AriaLive="polite">Important announcement: This is an alert message.</Strong>
                    </Paragraph>
                    <Paragraph>
                        Strong text with title attribute: 
                        <Strong Title="This text provides additional context when hovered">Hover for details</Strong>
                    </Paragraph>
                </Div>
            </Div>

            <Hr/>

            <Div>
                <H2>Strong vs Bold Styling</H2>
                <Div Margin="Margin.Is3.FromEnd">
                    <Paragraph>
                        <Strong>Strong element (semantic):</Strong> Used for importance and emphasis
                    </Paragraph>
                    <Paragraph>
                        <Span Class="fw-bold">Bold styling (visual):</Span> Used for visual emphasis only
                    </Paragraph>
                    <Paragraph Class="text-muted">
                        Note: Strong elements are semantically meaningful for screen readers and other assistive technologies.
                    </Paragraph>
                </Div>
            </Div>
        </Column>
    </Row>
</Container>

@code {
    private int clickCount = 0;
    private string fullNameValue = string.Empty;
    private string companyValue = string.Empty;

    private void HandleStrongClick(MouseEventArgs args)
    {
        clickCount++;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
    }
}
