<Bar Mode="BarMode.VerticalInline"
    CollapseMode="BarCollapseMode.Small"
    Breakpoint="BreakpointType.Desktop"
    NavigationBreakpoint="BreakpointType.Tablet"
    Class="sidebar">
    <Div class="d-flex align-items-center w-100" style="gap: .5rem; padding: 0.5rem 0;">
        <BarToggler>
            <BarIcon Name="bars"/>
        </BarToggler>
        <BarBrand>
            <BarItem>
                <BarLink To="./" Class="navbar-brand">
                    <Image Source="https://user-images.githubusercontent.com/4441470/224455560-91ed3ee7-f510-4041-a8d2-3fc093025112.png" Alt="Quark Suite" Style="height: 1.5rem; margin-right: 0.5rem;" />
                    <span style="font-size: 1.1rem; font-weight: 600;">Quark Suite</span>
                </BarLink>
            </BarItem>
        </BarBrand>
    </Div>

    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="">
                    <BarIcon Name="home"/>
                    Home
                </BarLink>
            </BarItem>
            
            @* Typography Components *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="font"/>
                        Typography
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="headings">Headings (H1-H6)</BarDropdownItem>
                        <BarDropdownItem To="texts">Text & Paragraph</BarDropdownItem>
                        <BarDropdownItem To="blockquotes">Blockquotes</BarDropdownItem>
                        <BarDropdownItem To="small-demo">Small</BarDropdownItem>
                        <BarDropdownItem To="strong-demo">Strong</BarDropdownItem>
                        <BarDropdownItem To="span-demo">Span</BarDropdownItem>
                        <BarDropdownItem To="codes">Code & Kbd</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="badges">Badges & Pills</BarDropdownItem>
                        <BarDropdownItem To="labels">Labels</BarDropdownItem>
                        <BarDropdownItem To="typography">Typography Utilities</BarDropdownItem>
                        <BarDropdownItem To="textstyle-demo">Text Styles</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Surface Components *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="square"/>
                        Surfaces
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="cards">Cards</BarDropdownItem>
                        <BarDropdownItem To="alerts">Alerts</BarDropdownItem>
                        <BarDropdownItem To="listgroups">List Groups</BarDropdownItem>
                        <BarDropdownItem To="accordions">Accordions</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="buttons">Buttons</BarDropdownItem>
                        <BarDropdownItem To="button-groups">Button Groups</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Forms & Inputs *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="edit"/>
                        Forms & Inputs
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="input-demo">Input</BarDropdownItem>
                        <BarDropdownItem To="textedits">Text Edits</BarDropdownItem>
                        <BarDropdownItem To="numericedit-demo">Numeric Edit</BarDropdownItem>
                        <BarDropdownItem To="dateedits">Date Edits</BarDropdownItem>
                        <BarDropdownItem To="datepickers">Date Pickers</BarDropdownItem>
                        <BarDropdownItem To="memoedits">Memo Edits</BarDropdownItem>
                        <BarDropdownItem To="selects">Selects</BarDropdownItem>
                        <BarDropdownItem To="sliders">Sliders</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="checks">Checkboxes</BarDropdownItem>
                        <BarDropdownItem To="radios">Radios</BarDropdownItem>
                        <BarDropdownItem To="switches">Switches</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="fields">Fields</BarDropdownItem>
                        <BarDropdownItem To="fieldsets-demo">Fieldsets</BarDropdownItem>
                        <BarDropdownItem To="validation-demo">Validation</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Layout & Flow *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="th"/>
                        Layout & Flow
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="containers">Containers</BarDropdownItem>
                        <BarDropdownItem To="columns">Rows & Columns</BarDropdownItem>
                        <BarDropdownItem To="layouts">Layouts</BarDropdownItem>
                        <BarDropdownItem To="divs">Divs</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Overlays *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="window-restore"/>
                        Overlays
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="modals">Modals</BarDropdownItem>
                        <BarDropdownItem To="offcanvas">Offcanvas</BarDropdownItem>
                        <BarDropdownItem To="collapses">Collapses</BarDropdownItem>
                        <BarDropdownItem To="dropdowns">Dropdowns</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Navigation *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="compass"/>
                        Navigation
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="bars">Bars</BarDropdownItem>
                        <BarDropdownItem To="navs">Navs</BarDropdownItem>
                        <BarDropdownItem To="breadcrumbs">Breadcrumbs</BarDropdownItem>
                        <BarDropdownItem To="paginations">Paginations</BarDropdownItem>
                        <BarDropdownItem To="tabs">Tabs</BarDropdownItem>
                        <BarDropdownItem To="stepsdemo">Steps</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Media & Content *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="image"/>
                        Media & Content
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="images">Images</BarDropdownItem>
                        <BarDropdownItem To="videos">Videos & Audio</BarDropdownItem>
                        <BarDropdownItem To="icons">Icons</BarDropdownItem>
                        <BarDropdownItem To="iframes">IFrames</BarDropdownItem>
                        <BarDropdownItem To="figures">Figures</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Data Display *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="table"/>
                        Data Display
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="tables/basic">Tables - Basic</BarDropdownItem>
                        <BarDropdownItem To="tables/modern-demo">Tables - Modern</BarDropdownItem>
                        <BarDropdownItem To="tables/loading-demo">Tables - Loading</BarDropdownItem>
                        <BarDropdownItem To="tables/paged-result-demo">Tables - Paged</BarDropdownItem>
                        <BarDropdownItem To="tables/bar-layout-demo">Tables - Bar Layout</BarDropdownItem>
                        <BarDropdownItem To="tables/topbar">Tables - TopBar</BarDropdownItem>
                        <BarDropdownItem To="tables/request-data-options-demo">Tables - Request Options</BarDropdownItem>
                        <BarDropdownDivider/>
                        <BarDropdownItem To="orderedlists">Ordered Lists</BarDropdownItem>
                        <BarDropdownItem To="unorderedlists">Unordered Lists</BarDropdownItem>
                        <BarDropdownItem To="treeview">TreeView</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Feedback *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="exclamation-triangle"/>
                        Feedback
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="alerts">Alerts</BarDropdownItem>
                        <BarDropdownItem To="snackbars">Snackbars</BarDropdownItem>
                        <BarDropdownItem To="progresses">Progress Bars</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            @* Utilities & Demos *@
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon Name="cog"/>
                        Utilities & Demos
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="themes">Themes</BarDropdownItem>
                        <BarDropdownItem To="semantic-html">Semantic HTML</BarDropdownItem>
                        <BarDropdownItem To="br-demo">Br (Line Break)</BarDropdownItem>
                        <BarDropdownItem To="hr-demo">Hr (Horizontal Rule)</BarDropdownItem>
                        <BarDropdownItem To="section-demo">Section</BarDropdownItem>
                        <BarDropdownItem To="details-demo">Details & Summary</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>


@code {
    // Dropdown states are now managed internally by the components
}
