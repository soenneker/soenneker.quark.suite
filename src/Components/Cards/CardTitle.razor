
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<Heading Scale="@Scale.S5" @attributes="BuildAttributes()">
    @ChildContent
</Heading>

@code {
	public override string? ThemeKey { get; set; } = "CardTitle";

    protected override Dictionary<string, object> BuildAttributes()
    {
        Dictionary<string, object> attributes = base.BuildAttributes();
        const string classes = "card-title";
        AppendToClassAttr(attributes, classes);
        return attributes;
    }
}


