@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ICardTitle

<Heading Scale="@Scale.Is5" @attributes="BuildAttributes()">
    @ChildContent
</Heading>

@code {
    public override string? ThemeKey { get; set; } = "CardTitle";

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "card-title"));
        return attributes;
    }

}