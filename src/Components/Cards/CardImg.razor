@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ICardImg

<Image @attributes="BuildAttributes()"/>

@code {
    public override string? ThemeKey { get; set; } = "CardImg";

    [Parameter]
    public bool Top { get; set; }

    [Parameter]
    public bool Bottom { get; set; }

    [Parameter]
    public string? Source { get; set; }

    [Parameter]
    public string? Alt { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            var imgClass = Top ? "card-img-top" : Bottom ? "card-img-bottom" : "card-img";
            AppendClass(ref cls, imgClass);
        });

        if (Source.HasContent())
            attributes["src"] = Source;

        if (Alt.HasContent())
            attributes["alt"] = Alt;

        return attributes;
    }

}