@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IFieldLabel

<label @attributes="BuildAttributes()">
    @ChildContent
    @if (RequiredIndicator)
    {
        <span class="field-required">*</span>
    }
</label>

@code {
    /// <summary>
    /// Gets or sets the for attribute, which associates the label with a form control.
    /// </summary>
    [Parameter]
    public string? For { get; set; }

    /// <summary>
    /// Gets or sets whether to show the required indicator.
    /// </summary>
    [Parameter]
    public bool RequiredIndicator { get; set; }

    // Prefer a simple cascading bool rather than poking into ParentField.
    [CascadingParameter(Name = "FieldHorizontal")]
    protected bool FieldHorizontal { get; set; }

    protected virtual bool IsHorizontal => FieldHorizontal;

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-field-label");
            AppendClass(ref cls, IsHorizontal ? "col-form-label" : "form-label");
        });

        if (For.HasContent())
            attributes["for"] = For!;
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(For);
        hc.Add(RequiredIndicator);
        hc.Add(IsHorizontal);
    }
}