@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IFieldHelp

<Div @attributes="BuildAttributes()">
    @ChildContent
</Div>

@code {
    public override string? ThemeKey { get; set; } = "FieldHelp";

    protected virtual bool ParentIsFieldBody => ParentFieldBody is not null;

    [CascadingParameter]
    protected FieldBody? ParentFieldBody { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "field-help");
            
            if (ParentIsFieldBody)
                AppendClass(ref cls, "field-help-in-body");
        });

        return attributes;
    }

}