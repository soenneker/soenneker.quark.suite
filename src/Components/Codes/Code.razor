@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ICode

<code @attributes="BuildAttributes()" >
    @ChildContent
</code>

@code {
	public override string? ThemeKey { get; set; } = "Code";

    [Parameter]
    public string? Language { get; set; }

    [Parameter]
    public bool Inline { get; set; }

    [Parameter]
    public bool Highlight { get; set; } = true;

    [Parameter]
    public string? Theme { get; set; } = "default";

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        if (!Class.HasContent())
        {
            BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
            {
                if (Inline)
                {
                    AppendClass(ref cls, "text-bg-light");
                    AppendClass(ref cls, "px-1");
                    AppendClass(ref cls, "py-0");
                    AppendClass(ref cls, "rounded");
                }
                else
                {
                    AppendClass(ref cls, "d-block");
                    AppendClass(ref cls, "text-bg-light");
                    AppendClass(ref cls, "p-3");
                    AppendClass(ref cls, "rounded");
                }
            });
        }
        else
        {
            var currentClass = attributes.GetValueOrDefault("class")?.ToString() ?? "";

            if (Inline && !currentClass.Contains("text-bg-light"))
            {
                BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
                {
                    AppendClass(ref cls, "text-bg-light");
                    AppendClass(ref cls, "px-1");
                    AppendClass(ref cls, "py-0");
                    AppendClass(ref cls, "rounded");
                });
            }
            else if (!Inline && !currentClass.Contains("d-block"))
            {
                BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
                {
                    AppendClass(ref cls, "d-block");
                    AppendClass(ref cls, "text-bg-light");
                    AppendClass(ref cls, "p-3");
                    AppendClass(ref cls, "rounded");
                });
            }
        }

        if (Language.HasContent())
        {
            attributes["data-language"] = Language;
        }

        if (Theme.HasContent() && Theme != "default")
        {
            attributes["data-theme"] = Theme;
        }

        if (Highlight)
        {
            attributes["data-highlight"] = "true";
        }

        return attributes;
    }

}
