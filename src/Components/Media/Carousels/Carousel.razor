@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<CascadingValue Name="ParentCarousel" Value="@this" IsFixed="true">
<div @attributes="BuildAttributes()" role="region" aria-roledescription="carousel">
    @ChildContent
</div>
</CascadingValue>

@code {
    /// <summary>
    /// Gets or sets orientation: horizontal or vertical.
    /// </summary>
    [Parameter]
    public string Orientation { get; set; } = "horizontal";

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-slot"] = "carousel";
        attributes["data-orientation"] = Orientation;

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-carousel");
            AppendClass(ref cls, "relative");
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        base.ComputeRenderKeyCore(ref hc);
        hc.Add(Orientation);
    }
}
