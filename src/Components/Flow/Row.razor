@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IRow

<div @attributes="BuildAttributes()">
	@ChildContent
</div>

@code {
	[Parameter]
	public CssValue<GutterBuilder>? Gutter { get; set; }

	/// <summary>
	/// Number of columns in the grid (default 12). Renders as grid-cols-1 through grid-cols-12.
	/// </summary>
	[Parameter]
	public int Columns { get; set; } = 12;

    private string GetGridColsClass() => Columns switch
    {
        >= 1 and <= 12 => $"grid-cols-{Columns}",
        _ => "grid-cols-12"
    };

    // shadcn grid - new-york-v4 (grid layout)
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-row");
            AppendClass(ref cls, "grid w-full");
            AppendClass(ref cls, GetGridColsClass());
            if (Gutter is { IsEmpty: false })
            {
                var gutterClass = Gutter.Value.ToString();
                if (gutterClass.HasContent())
                    AppendClass(ref cls, gutterClass);
            }
        });
    }

	protected override void ComputeRenderKeyCore(ref HashCode hc)
	{
		AddIf(ref hc, Gutter);
		hc.Add(Columns);
	}
}