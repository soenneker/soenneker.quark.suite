@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IBarDropdownDivider

<hr @attributes="BuildAttributes()"/>

@code {
    public override string? ThemeKey { get; set; } = "BarDropdownDivider";

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "dropdown-divider"));
        return attributes;
    }

}
