@inherits Soenneker.Quark.Element
@implements IAlertDescription

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    [CascadingParameter]
    protected Alert? ParentAlert { get; set; }

    protected override void OnInitialized()
    {
        ParentAlert?.NotifyHasDescription();
        base.OnInitialized();
    }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        // Apply notification description specific styling
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-alert-description");
            AppendClass(ref cls, "alert-description");
        });
    }
}
