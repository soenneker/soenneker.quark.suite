
@inherits Soenneker.Quark.Element
@implements IAlertMessage

<strong @attributes="BuildAttributes()">
    @ChildContent
</strong>

@code {
    [CascadingParameter]
    protected Alert? ParentAlert { get; set; }

    protected override void OnInitialized()
    {
        ParentAlert?.NotifyHasMessage();
        base.OnInitialized();
    }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        
        // Apply notification message specific styling
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "alert-message"));
        
        return attributes;
    }
}
