
@inherits Soenneker.Quark.Element
@implements IAlertMessage

<strong @attributes="BuildAttributes()">
    @ChildContent
</strong>

@code {
    [CascadingParameter(Name = nameof(ParentAlert))]
    protected Alert? ParentAlert { get; set; }

    protected override void OnInitialized()
    {
        ParentAlert?.NotifyHasMessage();
        base.OnInitialized();
    }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        // Apply notification message specific styling
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-alert-message");
            AppendClass(ref cls, "font-medium");
        });
    }
}
