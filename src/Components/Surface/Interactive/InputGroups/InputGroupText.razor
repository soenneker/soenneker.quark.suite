@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IInputGroupText

<span @attributes="BuildAttributes()">@ChildContent</span>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);
        attributes["data-slot"] = "input-group-text";

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-input-group-text");
            AppendClass(ref cls, "text-muted-foreground flex items-center gap-2 text-sm [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4");
        });
    }
}
