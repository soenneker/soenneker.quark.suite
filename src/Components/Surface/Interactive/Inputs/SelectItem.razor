@namespace Soenneker.Quark
@typeparam TValue
@inherits Soenneker.Quark.Element
@implements ISelectItem<TValue>

<option @attributes="BuildAttributes()">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else if (Text.HasContent())
    {
        @Text
    }
</option>

@code {
    /// <summary>
    /// Gets or sets the value of the select item.
    /// </summary>
    [Parameter]
    public TValue? Value { get; set; }

    /// <summary>
    /// Gets or sets the display text for the select item.
    /// </summary>
    [Parameter]
    public string? Text { get; set; }

    /// <summary>
    /// Gets or sets whether the select item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-select-item");
        });

        if (Value != null)
            attributes["value"] = Value.ToString();

        if (Disabled)
            attributes["disabled"] = true;

        if (Hidden)
            attributes["hidden"] = true;

        return attributes;
    }
}
