@namespace Soenneker.Quark
@inherits Soenneker.Quark.SurfaceElement
@implements ICard

<CascadingValue Value="@this" IsFixed="true">
    <div @attributes="BuildAttributes()">
        @ChildContent
    </div>
</CascadingValue>

@code {
    // shadcn Card - new-york-v4 ui/card.tsx
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes.TryAdd("data-slot", "card");

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-card");
            AppendClass(ref cls, "bg-card text-card-foreground flex flex-col gap-6 rounded-xl border py-6 shadow-sm");
        });
    }
}
