@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ICardImg

<Image @attributes="BuildAttributes()"/>

@code {
    /// <summary>
    /// Gets or sets whether the image should be positioned at the top of the card.
    /// </summary>
    [Parameter]
    public bool Top { get; set; }

    /// <summary>
    /// Gets or sets whether the image should be positioned at the bottom of the card.
    /// </summary>
    [Parameter]
    public bool Bottom { get; set; }

    /// <summary>
    /// Gets or sets the image source URL.
    /// </summary>
    [Parameter]
    public string? Source { get; set; }

    /// <summary>
    /// Gets or sets the alt text for the image.
    /// </summary>
    [Parameter]
    public string? Alt { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-card-img");
            var imgClass = Top ? "card-img-top" : Bottom ? "card-img-bottom" : "card-img";
            AppendClass(ref cls, imgClass);
        });

        if (Source.HasContent())
            attributes["src"] = Source;

        if (Alt.HasContent())
            attributes["alt"] = Alt;
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Top);
        hc.Add(Bottom);
        hc.Add(Source);
        hc.Add(Alt);
    }
}