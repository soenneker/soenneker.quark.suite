@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ICardHeader

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    // shadcn CardHeader - new-york-v4 ui/card.tsx
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        attributes.TryAdd("data-slot", "card-header");

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-card-header");
            AppendClass(ref cls, "@container/card-header grid auto-rows-min grid-rows-[auto_auto] items-start gap-2 px-6 has-data-[slot=card-action]:grid-cols-[1fr_auto] [.border-b]:pb-6");
        });
    }
}