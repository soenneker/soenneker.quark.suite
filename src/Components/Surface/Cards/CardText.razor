@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ICardText

<p @attributes="BuildAttributes()">
    @ChildContent
</p>

@code {
    public override string? ThemeKey { get; set; } = "CardText";

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "card-text"));
        return attributes;
    }

}