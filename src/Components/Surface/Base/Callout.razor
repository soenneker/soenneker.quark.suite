@namespace Soenneker.Quark
@inherits Soenneker.Quark.Surface

<div @attributes="BuildSurfaceAttributes()">@ChildContent</div>

@code {
    public override string? ThemeKey { get; set; } = "Callout";
    
    protected override Dictionary<string, object> BuildSurfaceAttributes()
    {
        var attributes = base.BuildSurfaceAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "callout"));
        return attributes;
    }
}

