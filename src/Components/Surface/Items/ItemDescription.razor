@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IItemDescription

<p @attributes="BuildAttributes()">@ChildContent</p>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);
        attributes["data-slot"] = "item-description";
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-item-description");
            AppendClass(ref cls, "text-muted-foreground line-clamp-2 text-sm leading-normal font-normal text-balance [&>a:hover]:text-primary [&>a]:underline [&>a]:underline-offset-4");
        });
    }
}
