@namespace Soenneker.Quark
@inherits Soenneker.Quark.SurfaceElement

<div @attributes="BuildAttributes()">@ChildContent</div>

@code {
    public override string? ThemeKey { get; set; } = "Callout";
    
    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "callout"));
        return attributes;
    }
}

