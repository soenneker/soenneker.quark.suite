@namespace Soenneker.Quark
@inherits Soenneker.Quark.DecoratedTypographicElement
@implements IBadge

<span @attributes="BuildAttributes()">@ChildContent</span>

@code {
    /// <summary>
    /// Gets or sets the type of the badge.
    /// </summary>
    [Parameter]
    public BadgeType Type { get; set; } = BadgeType.Badge;

    /// <summary>
    /// Gets or sets whether the badge should be rounded.
    /// </summary>
    [Parameter]
    public bool Rounded { get; set; }

    private string? GetTypeClass()
    {
        if (Type == BadgeType.Pill)
            return "rounded-full";

        if (Type == BadgeType.Dot)
            return "w-2 h-2 rounded-full p-0";

        return null;
    }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-badge");
            AppendClass(ref cls, "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors");
            
            string? typeClass = GetTypeClass();

            if (typeClass != null)
                AppendClass(ref cls, typeClass);
                
            if (Rounded)
                AppendClass(ref cls, "rounded-md");
        });
    }

    

    protected override void ApplyBackgroundColor(ref PooledStringBuilder sty, ref PooledStringBuilder cls)
    {
        if (BackgroundColor is not null && !BackgroundColor.Value.IsEmpty)
        {
            bool isTheme = BackgroundColor.Value.TryGetBootstrapThemeToken(out string? token);

            if (isTheme && token is not null)
            {
                AppendClass(ref cls, $"bg-{token}");
            }
            else
            {
                var colorValue = BackgroundColor.Value.ToString();

                if (colorValue.HasContent() && BackgroundColor.Value.IsCssClass)
                {
                    AppendClass(ref cls, $"bg-{colorValue}");
                }
            }
        }
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Type);
        hc.Add(Rounded);
    }
}