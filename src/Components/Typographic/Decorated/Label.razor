@namespace Soenneker.Quark
@inherits Soenneker.Quark.DecoratedTypographicElement
@implements ILabel

<label @attributes="BuildAttributes()">@ChildContent</label>

@code {
    public override string? ThemeKey { get; set; } = "Label";

    [Parameter]
    public string? For { get; set; }

    [Parameter]
    public bool Form { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        if (For.HasContent())
            attributes["for"] = For;

        if (Form)
        {
            BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => { AppendClass(ref cls, "form-label"); });
        }

        return attributes;
    }

}