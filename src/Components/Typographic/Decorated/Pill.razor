@namespace Soenneker.Quark
@inherits Soenneker.Quark.DecoratedTypographicElement
@implements IPill

<span @attributes="BuildAttributes()">@ChildContent</span>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes.TryAdd("data-slot", "pill");
        // badge-like styling (shadcn Badge variant style)
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-pill");
            AppendClass(ref cls, "inline-flex items-center justify-center rounded-full border border-transparent px-2.5 py-0.5 text-xs font-semibold w-fit whitespace-nowrap shrink-0 transition-[color,box-shadow]");
        });
    }
}


