@namespace Soenneker.Quark
@inherits Soenneker.Quark.DecoratedTypographicElement
@implements IKbdChip

<kbd @attributes="BuildAttributes()">@ChildContent</kbd>

@code {
    public override string? ThemeKey { get; set; } = "KbdChip";

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "badge");
            AppendClass(ref cls, "bg-dark");
        });

        return attributes;
    }

}