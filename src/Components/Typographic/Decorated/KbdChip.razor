@namespace Soenneker.Quark
@inherits Soenneker.Quark.DecoratedTypographicElement
@implements IKbdChip

<kbd @attributes="BuildAttributes()">@ChildContent</kbd>

@code {
    // shadcn - new-york-v4
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-kbd-chip");
            AppendClass(ref cls, "inline-flex items-center rounded border px-1.5 py-0.5 text-xs font-mono bg-muted text-foreground");
        });
    }

}