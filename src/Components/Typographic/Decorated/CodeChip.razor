@namespace Soenneker.Quark
@inherits Soenneker.Quark.DecoratedTypographicElement

<code @attributes="BuildTypographicAttributes()">@ChildContent</code>

@code {
    public override string? ThemeKey { get; set; } = "CodeChip";

    protected override Dictionary<string, object> BuildTypographicAttributes()
    {
        var attributes = base.BuildTypographicAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => 
        {
            AppendClass(ref cls, "badge");
            AppendClass(ref cls, "bg-light");
            AppendClass(ref cls, "text-dark");
        });
        return attributes;
    }
}
