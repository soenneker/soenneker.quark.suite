@namespace Soenneker.Quark
@inherits Soenneker.Quark.DecoratedTypographicElement
@implements ICodeChip

<code @attributes="BuildAttributes()">@ChildContent</code>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) => 
        {
            AppendClass(ref cls, "q-code-chip");
            AppendClass(ref cls, "badge");
            AppendClass(ref cls, "bg-light");
            AppendClass(ref cls, "text-dark");
        });
    }
}
