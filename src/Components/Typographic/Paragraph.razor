@namespace Soenneker.Quark
@inherits Soenneker.Quark.TypographicElement
@implements IParagraph

<p @attributes="BuildAttributes()">@ChildContent</p>

@code {
    // shadcn - new-york-v4
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-paragraph");
            // shadcn typography - body text (new-york-v4)
            AppendClass(ref cls, "text-sm text-foreground leading-7");
        });
    }
}
