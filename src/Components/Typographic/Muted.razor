@namespace Soenneker.Quark
@inherits Soenneker.Quark.TypographicElement

<span @attributes="BuildAttributes()">@ChildContent</span>

@code {
    public override string? ThemeKey { get; set; } = "Muted";

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "text-muted"));
        return attributes;
    }
}

