@namespace Soenneker.Quark
@inherits Soenneker.Quark.TypographicElement

<span @attributes="BuildTypographicAttributes()">@ChildContent</span>

@code {
    public override string? ThemeKey { get; set; } = "Muted";

    protected override Dictionary<string, object> BuildTypographicAttributes()
    {
        var attributes = base.BuildTypographicAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "text-muted"));
        return attributes;
    }
}

