@namespace Soenneker.Quark
@inherits Soenneker.Quark.TypographicElement
@implements IBlockquote

<blockquote @attributes="BuildAttributes()">@ChildContent</blockquote>

@code {
    // shadcn - new-york-v4
    /// <summary>
    /// Gets or sets the cite attribute for the blockquote.
    /// </summary>
    [Parameter]
    public string? Cite { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-blockquote");
        });

        if (Cite.HasContent())
            attributes["cite"] = Cite;
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Cite);
    }
}
