@namespace Soenneker.Quark
@inherits Soenneker.Quark.TypographicElement
@implements IH4

<h4 @attributes="BuildAttributes()">@ChildContent</h4>

@code{
    // shadcn - new-york-v4
    /// <summary>
    /// Gets or sets the display size for the heading.
    /// </summary>
    [Parameter]
    public CssValue<DisplaySizeBuilder>? DisplaySize { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAndStyleAttributes(attributes, (ref cls, ref sty) =>
        {
            AppendClass(ref cls, "q-h4 text-xl font-semibold");
            AddCss(ref sty, ref cls, DisplaySize);
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        AddIf(ref hc, DisplaySize);
    }
}
