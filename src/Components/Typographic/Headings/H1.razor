@namespace Soenneker.Quark
@inherits Soenneker.Quark.TypographicElement
@implements IH1

<h1 @attributes="BuildAttributes()">@ChildContent</h1>

@code{
    /// <summary>
    /// Gets or sets the display size for the heading.
    /// </summary>
    [Parameter]
    public CssValue<DisplaySizeBuilder>? DisplaySize { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAndStyleAttributes(attributes, (ref cls, ref sty) =>
        {
            AppendClass(ref cls, "q-h1");
            AddCss(ref sty, ref cls, DisplaySize);
        });

        return attributes;
    }
}
