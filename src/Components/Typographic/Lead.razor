@namespace Soenneker.Quark
@inherits Soenneker.Quark.TypographicElement

<p @attributes="BuildAttributes()">@ChildContent</p>

@code {
    public override string? ThemeKey { get; set; } = "Lead";

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "lead"));
        return attributes;
    }
}

