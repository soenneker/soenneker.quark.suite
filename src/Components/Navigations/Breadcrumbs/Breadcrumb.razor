@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IBreadcrumb

<nav @attributes="BuildAttributes()">
    <ol @attributes="BuildListAttributes()">
        @ChildContent
    </ol>
</nav>

@code {
    /// <summary>
    /// Gets or sets whether the breadcrumb should be displayed in large size.
    /// </summary>
    [Parameter]
    public bool Large { get; set; }

    /// <summary>
    /// Gets or sets whether the breadcrumb should be displayed in small size.
    /// </summary>
    [Parameter]
    public bool Small { get; set; }

    /// <summary>
    /// Gets or sets whether to show dividers between breadcrumb items.
    /// </summary>
    [Parameter]
    public bool Divider { get; set; }

    /// <summary>
    /// Gets or sets the text to use as divider between items.
    /// </summary>
    [Parameter]
    public string? DividerText { get; set; }

    /// <summary>
    /// Gets or sets the aria-label attribute value.
    /// </summary>
    [Parameter]
    public string? AriaLabel { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-breadcrumb");
        });

        // Set default aria-label for the Nav component if none provided
        if (!AriaLabel.HasContent())
        {
            attributes["AriaLabel"] = "breadcrumb";
        }
    }

    private Dictionary<string, object> BuildListAttributes()
    {
        var attributes = new Dictionary<string, object>();

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "breadcrumb");
            
            if (Large)
                AppendClass(ref cls, "breadcrumb-lg");
            if (Small)
                AppendClass(ref cls, "breadcrumb-sm");
        });

        return attributes;
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Large);
        hc.Add(Small);
        hc.Add(Divider);
        hc.Add(DividerText);
        hc.Add(AriaLabel);
    }
}
