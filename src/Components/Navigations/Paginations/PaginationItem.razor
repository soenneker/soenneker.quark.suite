@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IPaginationItem

<li @attributes="BuildAttributes()">
	@ChildContent
</li>

@code {
    /// <summary>
    /// Gets or sets whether the pagination item is active.
    /// </summary>
    [Parameter]
    public bool Active { get; set; }

    /// <summary>
    /// Gets or sets whether the pagination item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }


    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-pagination-item");
            AppendClass(ref cls, "page-item");
            
            if (Active)
                AppendClass(ref cls, "active");
            if (Disabled)
                AppendClass(ref cls, "disabled");
        });

        return attributes;
    }
}
