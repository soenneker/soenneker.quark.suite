
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IBarLabel

<div @attributes="BuildAttributes()" >
    @ChildContent
</div>

@code {
	public override string? ThemeKey { get; set; } = "BarLabel";

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "b-bar-label"));
        return attributes;
    }

}
