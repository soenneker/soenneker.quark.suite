@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IBarItem

<div @attributes="BuildAttributes()" >
    @ChildContent
</div>

@code {
    /// <summary>
    /// Gets or sets whether the bar item is active.
    /// </summary>
    [Parameter]
    public bool Active { get; set; }

    /// <summary>
    /// Gets or sets whether the bar item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    [CascadingParameter(Name = nameof(Mode))]
    public BarMode Mode { get; set; } = BarMode.Horizontal;

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-bar-item");
            if (Active)
                AppendClass(ref cls, "bg-accent text-accent-foreground");
            if (Disabled)
                AppendClass(ref cls, "opacity-50 pointer-events-none");
        });

        if (Mode != BarMode.Horizontal)
        {
            BuildStyleAttribute(attributes, (ref sty) => AppendStyleDecl(ref sty, "width: 100%"));
        }
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Active);
        hc.Add(Disabled);
        hc.Add(Mode);
    }
}