
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IBarItem

<div @attributes="BuildAttributes()" >
    @ChildContent
</div>

@code {
    /// <summary>
    /// Gets or sets whether the bar item is active.
    /// </summary>
    [Parameter]
    public bool Active { get; set; }

    /// <summary>
    /// Gets or sets whether the bar item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    [CascadingParameter]
    public BarMode Mode { get; set; } = BarMode.Horizontal;

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-bar-item");
            AppendClass(ref cls, "nav-item");
            
            if (Active)
                AppendClass(ref cls, "active");
            if (Disabled)
                AppendClass(ref cls, "disabled");
        });

        if (Mode != BarMode.Horizontal)
        {
            BuildStyleAttribute(attributes, (ref PooledStringBuilder sty) => AppendStyleDecl(ref sty, "width: 100%"));
        }

        return attributes;
    }

}
