@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IBarLink

<Anchor To="@To" Target="@Target" @attributes="BuildAttributes()">
    @ChildContent
</Anchor>

@code {
    // shadcn - new-york-v4

    /// <summary>
    /// Gets or sets the URL to navigate to.
    /// </summary>
    [Parameter]
    public string? To { get; set; }

    /// <summary>
    /// Gets or sets the target attribute for the link.
    /// </summary>
    [Parameter]
    public Target? Target { get; set; }

    /// <summary>
    /// Gets or sets whether the bar link is active.
    /// </summary>
    [Parameter]
    public bool Active { get; set; }

    /// <summary>
    /// Gets or sets whether the bar link is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    [CascadingParameter(Name = nameof(Mode))]
    public BarMode Mode { get; set; } = BarMode.Horizontal;


    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-bar-link");
            AppendClass(ref cls, "inline-flex items-center rounded-md px-3 py-2 text-sm font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground");
            if (Active)
                AppendClass(ref cls, "bg-accent text-accent-foreground");
            if (Disabled)
                AppendClass(ref cls, "opacity-50 pointer-events-none");
        });

        if (Mode != BarMode.Horizontal)
        {
            BuildStyleAttribute(attributes, (ref sty) =>
            {
                AppendStyleDecl(ref sty, "display: flex");
                AppendStyleDecl(ref sty, "align-items: center");
                AppendStyleDecl(ref sty, "width: 100%");
                AppendStyleDecl(ref sty, "border-radius: 0");
            });
        }

        if (Disabled)
            attributes["aria-disabled"] = "true";
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(To);
        hc.Add(Target);
        hc.Add(Active);
        hc.Add(Disabled);
        hc.Add(Mode);
    }
}