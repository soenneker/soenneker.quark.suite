@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IBarLink

<Anchor To="@To" Target="@Target" @attributes="BuildAttributes()" >
    @ChildContent
</Anchor>

@code {
    /// <summary>
    /// Gets or sets the URL to navigate to.
    /// </summary>
    [Parameter]
    public string? To { get; set; }

    /// <summary>
    /// Gets or sets the target attribute for the link.
    /// </summary>
    [Parameter]
    public Target? Target { get; set; }

    /// <summary>
    /// Gets or sets whether the bar link is active.
    /// </summary>
    [Parameter]
    public bool Active { get; set; }

    /// <summary>
    /// Gets or sets whether the bar link is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    [CascadingParameter]
    public BarMode Mode { get; set; } = BarMode.Horizontal;


    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-bar-link");
            AppendClass(ref cls, "nav-link");
            
            if (Active)
                AppendClass(ref cls, "active");
            if (Disabled)
                AppendClass(ref cls, "disabled");
        });

        if (Mode != BarMode.Horizontal)
        {
            BuildStyleAttribute(attributes, (ref PooledStringBuilder sty) =>
            {
                AppendStyleDecl(ref sty, "display: flex");
                AppendStyleDecl(ref sty, "align-items: center");
                AppendStyleDecl(ref sty, "width: 100%");
                AppendStyleDecl(ref sty, "padding: 0.75rem 1rem");
                AppendStyleDecl(ref sty, "border-radius: 0");
                AppendStyleDecl(ref sty, "border-bottom: 1px solid var(--bs-border-color-translucent, rgba(0, 0, 0, 0.1))");
            });
        }

        if (Disabled)
            attributes["aria-disabled"] = "true";

        return attributes;
    }

}
