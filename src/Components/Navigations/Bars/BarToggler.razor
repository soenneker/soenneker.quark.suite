@namespace Soenneker.Quark
@using Soenneker.Blazor.Extensions.EventCallback

@inherits Soenneker.Quark.Element
@implements IBarToggler

<Button Type="@ButtonType.Button" OnClick="HandleToggle" @attributes="BuildAttributes()">
    @if (ChildContent is not null)
    {
        @ChildContent
    }
    else
    {
        <Icon Name="bars" IconStyle="@IconStyle.Solid" IconSize="@IconSize.Small" />
    }
</Button>

@code {
    // shadcn - new-york-v4
    /// <summary>
    /// Gets or sets the target element ID for the toggler.
    /// </summary>
    [Parameter]
    public string? Target { get; set; }

    /// <summary>
    /// Gets or sets the callback invoked When the toggler is clicked.
    /// </summary>
    [Parameter]
    public EventCallback<MouseEventArgs> OnToggle { get; set; }

    /// <summary>
    /// Gets or sets the mode of the toggler.
    /// </summary>
    [Parameter]
    public BarTogglerMode BarTogglerMode { get; set; } = BarTogglerMode.Normal;

	[CascadingParameter(Name = nameof(Mode))]
	public BarMode Mode { get; set; } = BarMode.Horizontal;

    [CascadingParameter(Name = nameof(BarToggleHandler))]
    public Func<MouseEventArgs, Task>? BarToggleHandler { get; set; }

    [CascadingParameter(Name = nameof(MenuId))]
    public string? MenuId { get; set; }

    [CascadingParameter(Name = nameof(VerticalBarCollapsed))]
    public bool VerticalBarCollapsed { get; set; }

    /// <summary>
    /// Gets or sets whether the toggler is disabled.
    /// </summary>
    [Parameter]
    public bool? Disabled { get; set; }

    protected override bool ShouldRender()
    {
        // For vertical bars, always render When sidebar collapse state might change
        // The base component's render key doesn't track cascading parameters
        if (Mode != BarMode.Horizontal)
        {
            return true;
        }

        return base.ShouldRender();
    }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-bar-toggler");
            AppendClass(ref cls, "inline-flex items-center justify-center p-2 rounded-md hover:bg-accent");
            
            if (Mode != BarMode.Horizontal)
            {
                AppendClass(ref cls, "sidebar-toggler my-2 flex justify-center items-center relative");

                if (VerticalBarCollapsed)
                    AppendClass(ref cls, "q-bar-toggler-collapsed");
            }
            
            if (BarTogglerMode == BarTogglerMode.Popout)
                AppendClass(ref cls, "q-bar-toggler-popout");
        });

        if (Mode == BarMode.Horizontal)
        {
            string? target = Target.HasContent() ? Target : MenuId.HasContent() ? $"#{MenuId}" : null;
            
            if (target.HasContent())
            {
                string controls = target!.StartsWith("#") ? target.Substring(1) : target!;
                attributes["aria-controls"] = controls;
                attributes["aria-expanded"] = "false";
            }
        }
        else
        {
            // Styles for vertical toggler are handled in CSS.
        }
    }

    

    private async Task HandleToggle(MouseEventArgs args)
    {
        // Use cascading handler if available, otherwise use the OnToggle parameter
        if (BarToggleHandler != null)
        {
            await BarToggleHandler(args);
        }
        else
        {
            await OnToggle.InvokeIfHasDelegate(args);
        }
        // Also invoke the standard OnClick so explicit OnClick on the component works
        await OnClick.InvokeIfHasDelegate(args);
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Target);
        hc.Add(Mode);
        hc.Add(BarTogglerMode);
        hc.Add(MenuId);
        hc.Add(VerticalBarCollapsed);
        hc.Add(Disabled);
    }
}