@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<div @attributes="BuildAttributes()">
    @ChildContent
    <Icon Name="chevron-right" Class="ml-auto h-4 w-4" />
</div>

@code {
    [Parameter]
    public bool Open { get; set; }

    [Parameter]
    public bool Inset { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-slot"] = "menubar-sub-trigger";
        attributes["data-state"] = Open ? "open" : "closed";
        attributes["data-inset"] = Inset ? "true" : "false";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-menubar-sub-trigger");
            AppendClass(ref cls, "focus:bg-accent focus:text-accent-foreground data-[state=open]:bg-accent data-[state=open]:text-accent-foreground flex cursor-default items-center rounded-sm px-2 py-1.5 text-sm outline-none select-none data-[inset]:pl-8");
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Open);
        hc.Add(Inset);
    }
}
