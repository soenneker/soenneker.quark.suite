@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<button @onclick="HandleClick" @attributes="BuildAttributes()">
    @ChildContent
</button>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);
        attributes["data-slot"] = "sidebar-group-action";
        attributes["data-sidebar"] = "group-action";
        attributes["type"] = "button";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-sidebar-group-action");
            AppendClass(ref cls, "text-sidebar-foreground ring-sidebar-ring hover:bg-sidebar-accent hover:text-sidebar-accent-foreground absolute top-3.5 right-3 flex aspect-square w-5 items-center justify-center rounded-md p-0 outline-hidden transition-transform focus-visible:ring-2 [&>svg]:size-4 [&>svg]:shrink-0");
            AppendClass(ref cls, "after:absolute after:-inset-2 md:after:hidden");
            AppendClass(ref cls, "group-data-[collapsible=icon]:hidden");
        });
    }
}
