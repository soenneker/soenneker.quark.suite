@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<div role="separator" @attributes="BuildAttributes()"></div>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);
        attributes["data-slot"] = "sidebar-separator";
        attributes["data-sidebar"] = "separator";
        attributes["aria-orientation"] = "horizontal";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-sidebar-separator");
            AppendClass(ref cls, "bg-sidebar-border mx-2 h-px w-auto");
        });
    }
}
