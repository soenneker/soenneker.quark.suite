@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<main @attributes="BuildAttributes()">
    @ChildContent
</main>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-slot"] = "sidebar-inset";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-sidebar-inset");
            AppendClass(ref cls, "bg-background relative flex w-full flex-1 flex-col");
            AppendClass(ref cls, "md:peer-data-[variant=inset]:m-2 md:peer-data-[variant=inset]:ml-0 md:peer-data-[variant=inset]:rounded-xl md:peer-data-[variant=inset]:shadow-sm md:peer-data-[variant=inset]:peer-data-[state=collapsed]:ml-2");
        });
    }
}
