@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<input @attributes="BuildAttributes()" />

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);
        attributes["data-slot"] = "sidebar-input";
        attributes["data-sidebar"] = "input";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-sidebar-input");
            AppendClass(ref cls, "bg-background h-8 w-full shadow-none flex rounded-md border border-input px-3 py-1 text-sm");
            AppendClass(ref cls, "placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2");
        });
    }
}
