@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements INavigationMenu

<div @attributes="BuildAttributes()">
    @ChildContent
    @if (Viewport)
    {
        <NavigationMenuViewport />
    }
</div>

@code {
    [Parameter]
    public bool Viewport { get; set; } = true;

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-slot"] = "navigation-menu";
        attributes["data-viewport"] = Viewport ? "true" : "false";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-navigation-menu");
            AppendClass(ref cls, "group/navigation-menu relative flex max-w-max flex-1 items-center justify-center");
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Viewport);
    }
}
