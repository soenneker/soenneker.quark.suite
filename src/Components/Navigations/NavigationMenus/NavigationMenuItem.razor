@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements INavigationMenuItem

<li @attributes="BuildAttributes()">
    @ChildContent
</li>

@code {
    [Parameter]
    public bool Open { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-slot"] = "navigation-menu-item";
        attributes["data-state"] = Open ? "open" : "closed";

        if (Disabled)
            attributes["aria-disabled"] = "true";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-navigation-menu-item");
            AppendClass(ref cls, "group/navigation-menu-item relative");

            if (Disabled)
                AppendClass(ref cls, "pointer-events-none opacity-50");
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Open);
        hc.Add(Disabled);
    }
}
