@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements INavigationMenuIndicator

<div @attributes="BuildAttributes()">
    <div class="bg-border relative top-[60%] h-2 w-2 rotate-45 rounded-tl-sm shadow-md"></div>
</div>

@code {
    [Parameter]
    public bool Visible { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-slot"] = "navigation-menu-indicator";
        attributes["data-state"] = Visible ? "visible" : "hidden";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-navigation-menu-indicator");
            AppendClass(ref cls, "data-[state=visible]:animate-in data-[state=hidden]:animate-out data-[state=hidden]:fade-out data-[state=visible]:fade-in");
            AppendClass(ref cls, "top-full z-[1] flex h-1.5 items-end justify-center overflow-hidden");
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Visible);
    }
}
