
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IDropdownMenu

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    // shadcn - new-york-v4
    /// <summary>
    /// Gets or sets whether the dropdown menu is visible.
    /// </summary>
    [Parameter]
    public bool Visible { get; set; }

    /// <summary>
    /// Gets or sets whether the dropdown menu should be right-aligned.
    /// </summary>
    [Parameter]
    public bool RightAligned { get; set; }

    /// <summary>
    /// Gets or sets the direction of the dropdown menu.
    /// </summary>
    [Parameter]
    public Direction Direction { get; set; } = Direction.Default;

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-dropdown-menu");
            AppendClass(ref cls, "absolute z-50 min-w-[8rem] overflow-hidden rounded-md border bg-popover p-1 text-popover-foreground shadow-md");
            if (!Visible)
                AppendClass(ref cls, "hidden");
            if (RightAligned)
                AppendClass(ref cls, "right-0");
            var directionClass = Direction.Value switch
            {
                Direction.UpValue => "bottom-full mb-1",
                Direction.EndValue => "left-full ml-1",
                Direction.StartValue => "right-full mr-1",
                _ => "top-full mt-1"
            };
            if (directionClass != null)
                AppendClass(ref cls, directionClass);
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Visible);
        hc.Add(RightAligned);
        hc.Add(Direction);
    }
}