
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IDropdownMenu

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    public override string? ThemeKey { get; set; } = "DropdownMenu";

    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public bool RightAligned { get; set; }

    [Parameter]
    public Direction Direction { get; set; } = Direction.Default;

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "dropdown-menu");
            
            if (Visible)
                AppendClass(ref cls, "show");

            if (RightAligned)
                AppendClass(ref cls, "dropdown-menu-end");
                
            var directionClass = Direction.Value switch
            {
                Direction.UpValue => "dropup",
                Direction.EndValue => "dropend",
                Direction.StartValue => "dropstart",
                _ => null
            };
            
            if (directionClass != null)
                AppendClass(ref cls, directionClass);
        });

        return attributes;
    }
}
