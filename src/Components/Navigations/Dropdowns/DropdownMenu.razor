
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IDropdownMenu

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    /// <summary>
    /// Gets or sets whether the dropdown menu is visible.
    /// </summary>
    [Parameter]
    public bool Visible { get; set; }

    /// <summary>
    /// Gets or sets whether the dropdown menu should be right-aligned.
    /// </summary>
    [Parameter]
    public bool RightAligned { get; set; }

    /// <summary>
    /// Gets or sets the direction of the dropdown menu.
    /// </summary>
    [Parameter]
    public Direction Direction { get; set; } = Direction.Default;

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-dropdown-menu");
            AppendClass(ref cls, "dropdown-menu");
            
            if (Visible)
                AppendClass(ref cls, "show");

            if (RightAligned)
                AppendClass(ref cls, "dropdown-menu-end");
                
            var directionClass = Direction.Value switch
            {
                Direction.UpValue => "dropup",
                Direction.EndValue => "dropend",
                Direction.StartValue => "dropstart",
                _ => null
            };
            
            if (directionClass != null)
                AppendClass(ref cls, directionClass);
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Visible);
        hc.Add(RightAligned);
        hc.Add(Direction);
    }
}