@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@using Soenneker.Blazor.Extensions.EventCallback
@implements IDropdownToggle

<button @attributes="BuildAttributes()" type="button" aria-expanded="false" aria-haspopup="true" @onclick="OnClickHandler">
    @ChildContent
</button>

@code {
    // shadcn - new-york-v4
    /// <summary>
    /// Gets or sets whether the toggle is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    /// <summary>
    /// Gets or sets whether this is a split button toggle.
    /// </summary>
    [Parameter]
    public bool IsSplit { get; set; }

    /// <summary>
    /// Gets or sets the callback invoked when the toggle is clicked.
    /// </summary>
    [Parameter]
    public EventCallback<MouseEventArgs> Clicked { get; set; }

    private async Task OnClickHandler(MouseEventArgs e)
    {
        if (!Disabled)
            await Clicked.InvokeIfHasDelegate(e);
    }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-dropdown-toggle");
            AppendClass(ref cls, "inline-flex items-center justify-center gap-2 rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed");
            if (IsSplit)
                AppendClass(ref cls, "border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 px-4 py-2");
            else
                AppendClass(ref cls, "bg-secondary text-secondary-foreground hover:bg-secondary/80 h-10 px-4 py-2");
            if (Disabled)
                AppendClass(ref cls, "pointer-events-none opacity-50");
        });

        if (Disabled)
        {
            attributes["disabled"] = true;
        }
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Disabled);
        hc.Add(IsSplit);
    }
}