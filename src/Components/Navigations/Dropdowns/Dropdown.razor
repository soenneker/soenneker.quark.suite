
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IDropdown

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    public override string? ThemeKey { get; set; } = "Dropdown";

    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public EventCallback<bool> VisibleChanged { get; set; }

    [Parameter]
    public bool RightAligned { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public Direction Direction { get; set; } = Direction.Default;

    [Parameter]
    public bool IsSubmenu { get; set; }

    [Parameter]
    public bool IsGroup { get; set; }

    [Parameter]
    public string? DropdownMenuTargetId { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, IsGroup ? "btn-group" : IsSubmenu ? "dropdown-submenu" : "dropdown");
            
            if (Visible)
                AppendClass(ref cls, "show");
            if (RightAligned)
                AppendClass(ref cls, "dropend");
            if (Disabled)
                AppendClass(ref cls, "disabled");
        });

        return attributes;
    }
}

