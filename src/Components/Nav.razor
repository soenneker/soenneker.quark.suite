@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements INav

<nav @attributes="BuildAttributes()">
    @ChildContent
</nav>

@code {
	public override string? ThemeKey { get; set; } = "Nav";

    [Parameter]
    public CssValue<NavStyleBuilder>? NavStyle { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
	{
		var attributes = base.BuildAttributes();
		
        // Handle nav styling
        if (NavStyle is not null && !NavStyle.Value.IsEmpty)
        {
            var navClass = NavStyle.Value.ToString();
            if (navClass.HasContent())
            {
				AppendToClassAttr(attributes, navClass);
            }
        }

		return attributes;
	}

}
