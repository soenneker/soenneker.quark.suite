@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IListGroupItem

<li @attributes="BuildAttributes()" @onclick="HandleClick">
    @ChildContent
</li>

@code {

    /// <summary>
    /// Gets or sets the name of the list group item.
    /// </summary>
    [Parameter]
    public string? ItemName { get; set; }

    /// <summary>
    /// Gets or sets whether the list group item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    /// <summary>
    /// Gets or sets whether the list group item is active.
    /// </summary>
    [Parameter]
    public bool Active { get; set; }

    [CascadingParameter(Name = nameof(ParentListGroup))]
    protected ListGroup? ParentListGroup { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        string? bgClass = null;

        if (BackgroundColor is not null && !BackgroundColor.Value.IsEmpty && BackgroundColor.Value.IsCssClass)
        {
            string v = BackgroundColor.Value.ToString().Trim();
            if (!v.StartsWith("list-group-item-", StringComparison.Ordinal))
                bgClass = v;
        }

        // shadcn-style list item - new-york-v4 (border-b, hover:bg-muted/50)
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-list-group-item");
            AppendClass(ref cls, "border-b p-3 last:border-b-0");

            if (ParentListGroup?.Mode == ListGroupMode.Selectable)
                AppendClass(ref cls, "cursor-pointer hover:bg-muted/50 transition-colors");

            if (Active)
                AppendClass(ref cls, "bg-muted");

            if (Disabled)
                AppendClass(ref cls, "opacity-50 pointer-events-none");

            if (bgClass != null)
                AppendClass(ref cls, bgClass);
        });

        if (Disabled)
            attributes["aria-disabled"] = "true";
    }

    

    protected override async Task HandleClick(MouseEventArgs e)
    {
        if (Disabled)
            return;

        if (ParentListGroup is not null && ItemName.HasContent())
            await ParentListGroup.SelectItem(ItemName);

        await base.HandleClick(e);
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(ItemName);
        hc.Add(Disabled);
        hc.Add(Active);
        if (ParentListGroup is not null)
            hc.Add(ParentListGroup.Mode);
    }
}