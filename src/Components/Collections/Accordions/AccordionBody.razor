@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IAccordionBody

@* grid animation (no keyframes), role=region, aria-labelledby *@
<div @attributes="BuildAttributes()">
    <div class="overflow-hidden min-h-0">
        <div class="pb-4 pt-0 text-sm">
            @ChildContent
        </div>
    </div>
</div>

@code {
    /// <summary>
    /// Gets or sets whether the accordion body is expanded.
    /// </summary>
    [Parameter]
    public bool Expanded { get; set; }

    [CascadingParameter(Name = nameof(ParentAccordionItem))]
    public AccordionItem? ParentAccordionItem { get; set; }
    
    [CascadingParameter(Name = nameof(ParentAccordion))]
    public Accordion? ParentAccordion { get; set; }

    /// <summary>
    /// Gets whether the accordion body is currently expanded.
    /// </summary>
    private bool IsExpanded => ParentAccordionItem?.IsExpanded ?? Expanded;

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-state"] = IsExpanded ? "open" : "closed";
        attributes["role"] = "region";
        if (ParentAccordionItem?.TriggerId.HasContent() == true)
            attributes["aria-labelledby"] = ParentAccordionItem.TriggerId;
        // grid animation (0fr -> 1fr), no keyframes
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "grid grid-rows-[0fr] transition-[grid-template-rows] duration-200 ease-out data-[state=open]:grid-rows-[1fr]");
        });

        if (ParentAccordionItem?.ContentId.HasContent() == true)
            attributes["id"] = ParentAccordionItem.ContentId;
    }

    

    private bool _lastIsExpanded;
    private bool _expandedChanged;

    protected override void OnParametersSet()
    {
        bool current = IsExpanded;
        _expandedChanged |= current != _lastIsExpanded;
        _lastIsExpanded = current;
        base.OnParametersSet();
    }

    protected override bool ShouldRender()
    {
        return _expandedChanged || base.ShouldRender();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        _expandedChanged = false;
        await base.OnAfterRenderAsync(firstRender);
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Expanded);
        hc.Add(IsExpanded);
        if (ParentAccordionItem?.Name is not null)
            hc.Add(ParentAccordionItem.Name);
        if (ParentAccordion?.Id is not null)
            hc.Add(ParentAccordion.Id);
    }
}