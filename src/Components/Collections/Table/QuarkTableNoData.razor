
@namespace Soenneker.Quark
@inherits Element

@if (QuarkTable?.HasLoadedOnce == true)
{
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        <div @attributes="BuildAttributes()">
            <div Class="quark-table-no-data-content">
                <div Class="quark-table-no-data-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 3H21V21H3V3ZM5 5V19H19V5H5ZM7 7H17V9H7V7ZM7 11H17V13H7V11ZM7 15H13V17H7V15Z" fill="currentColor" />
                    </svg>
                </div>
                <div Class="quark-table-no-data-text">
                    <H4>No data available</H4>
                    <Paragraph>There are no records to display at this time.</Paragraph>
                </div>
            </div>
        </div>
    }
}

@code {
    public override string? ThemeKey { get; set; } = "QuarkTableNoData";

    [CascadingParameter]
    public IQuarkTable? QuarkTable { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "quark-table-no-data"));
        return attributes;
    }
} 
