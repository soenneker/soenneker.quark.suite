
@namespace Soenneker.Quark
@inherits Element

<div @attributes="BuildWrapperAttributes()">
    <div @attributes="BuildAttributes()">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public string LayoutClass { get; set; } = string.Empty;

    // shadcn table toolbar - new-york-v4 ui/table.tsx
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-table-top-bar");
            AppendClass(ref cls, "flex flex-wrap items-center gap-3 rounded-md border bg-card px-3 py-2");
            
            if (LayoutClass.HasContent())
                AppendClass(ref cls, LayoutClass);
        });
    }

    private Dictionary<string, object> BuildWrapperAttributes()
    {
        var attributes = new Dictionary<string, object>();
        BuildClassAttribute(attributes, (ref cls) => AppendClass(ref cls, "q-table-top-bar-wrapper w-full"));
        return attributes;
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(LayoutClass);
    }
}
