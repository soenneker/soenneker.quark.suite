@namespace Soenneker.Quark
@inherits Element

<tbody @attributes="BuildAttributes()">
    @ChildContent
</tbody>

@code {
	protected override void BuildAttributesCore(Dictionary<string, object> attributes)
	{
		BuildClassAttribute(attributes, (ref cls) =>
		{
			AppendClass(ref cls, "q-table-tbody");
			// shadcn TableBody - new-york-v4 ui/table.tsx
			AppendClass(ref cls, "[&_tr:last-child]:border-0");
		});
	}
} 
