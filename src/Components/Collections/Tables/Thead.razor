@namespace Soenneker.Quark
@inherits Element

<thead @attributes="BuildAttributes()">
    @ChildContent
</thead>

@code {
	protected override void BuildAttributesCore(Dictionary<string, object> attributes)
	{
		attributes.TryAdd("data-slot", "table-header");
		BuildClassAttribute(attributes, (ref cls) =>
		{
			AppendClass(ref cls, "q-table-thead qt-thead");
			// shadcn TableHeader - new-york-v4 ui/table.tsx
			AppendClass(ref cls, "[&_tr]:border-b");
		});
	}
} 
