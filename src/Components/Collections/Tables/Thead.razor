@namespace Soenneker.Quark
@inherits Element

<thead @attributes="BuildAttributes()">
    @ChildContent
</thead>

@code {
	public override string? ThemeKey { get; set; } = "Thead";

	protected override Dictionary<string, object> BuildAttributes()
	{
		var attributes = base.BuildAttributes();
		BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "qt-thead"));
		return attributes;
	}
} 
