@namespace Soenneker.Quark
@inherits Element

<tr @key="@Key" @attributes="BuildAttributes()">
    @ChildContent
</tr>

@code {
    /// <summary>
    /// Gets or sets the key for the table row.
    /// </summary>
    [Parameter]
    public object? Key { get; set; }

	protected override void BuildAttributesCore(Dictionary<string, object> attributes)
	{
		attributes["role"] = "row";

		BuildClassAttribute(attributes, (ref cls) =>
		{
			AppendClass(ref cls, "q-table-tr");
			// shadcn TableRow - new-york-v4 ui/table.tsx
			AppendClass(ref cls, "hover:bg-muted/50 data-[state=selected]:bg-muted border-b transition-colors");
		});
	}

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Key);
    }
} 
