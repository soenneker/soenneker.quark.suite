@namespace Soenneker.Quark
@inherits Element

<caption @attributes="BuildAttributes()">
    @ChildContent
</caption>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-table-caption");
            // shadcn TableCaption - new-york-v4 ui/table.tsx
            AppendClass(ref cls, "text-muted-foreground mt-4 text-sm");
        });
    }
}
