@namespace Soenneker.Quark
@inherits Element

<tfoot @attributes="BuildAttributes()">
    @ChildContent
</tfoot>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-table-footer");
            // shadcn TableFooter - new-york-v4 ui/table.tsx
            AppendClass(ref cls, "bg-muted/50 border-t font-medium [&>tr]:last:border-b-0");
        });
    }
}
