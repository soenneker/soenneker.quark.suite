@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ISummary

<summary @attributes="BuildAttributes()">
    @ChildContent
</summary>

@code {
    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref cls) => AppendClass(ref cls, "q-summary"));
        return attributes;
    }
}