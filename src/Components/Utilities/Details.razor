@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IDetails

<details @attributes="BuildAttributes()">
	@ChildContent
</details>

@code {
    /// <summary>
    /// Gets or sets whether the details element is open.
    /// </summary>
    [Parameter]
    public bool Open { get; set; }

    /// <summary>
    /// Gets or sets the callback invoked when the details toggle state changes.
    /// </summary>
    [Parameter]
    public EventCallback<EventArgs> OnToggle { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();

        BuildClassAttribute(attributes, (ref cls) => AppendClass(ref cls, "q-details"));

        if (Open)
            attributes["open"] = true;

        if (OnToggle.HasDelegate)
            attributes["ontoggle"] = EventCallback.Factory.Create(this, OnToggle);

        return attributes;
    }
}

