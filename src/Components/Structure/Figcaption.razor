@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IFigcaption

<figcaption @attributes="BuildAttributes()">
	@ChildContent
</figcaption>

@code {
    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref cls) => AppendClass(ref cls, "q-figcaption"));
        return attributes;
    }
}

