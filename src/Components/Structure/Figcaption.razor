@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IFigcaption

<figcaption @attributes="BuildAttributes()">
	@ChildContent
</figcaption>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        BuildClassAttribute(attributes, (ref cls) => AppendClass(ref cls, "q-figcaption"));
    }
}

