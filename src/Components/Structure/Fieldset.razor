@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IFieldset

<fieldset @attributes="BuildAttributes()">
	@ChildContent
</fieldset>

@code {
    /// <summary>
    /// Gets or sets whether the fieldset is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    /// <summary>
    /// Gets or sets the form attribute value, which associates the fieldset with a form.
    /// </summary>
    [Parameter]
    public string? Form { get; set; }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-fieldset");
        });

        if (Disabled)
            attributes["disabled"] = true;

        if (Form.HasContent())
            attributes["form"] = Form;
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Disabled);
        hc.Add(Form);
    }
}