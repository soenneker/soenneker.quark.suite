@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IAlertDialogTitle

<Heading Scale="@Scale.Is5" @attributes="BuildAttributes()">
    @ChildContent
</Heading>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        // shadcn AlertDialogTitle - new-york-v4 ui/alert-dialog.tsx
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-alert-dialog-title");
            AppendClass(ref cls, "text-lg font-semibold sm:group-data-[size=default]/alert-dialog-content:group-has-data-[slot=alert-dialog-media]/alert-dialog-content:col-start-2");
        });
    }
}
