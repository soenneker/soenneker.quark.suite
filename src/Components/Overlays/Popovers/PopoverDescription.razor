@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<p @attributes="BuildAttributes()">
    @ChildContent
</p>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-slot"] = "popover-description";

        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) =>
        {
            AppendClass(ref cls, "q-popover-description");
            AppendClass(ref cls, "text-muted-foreground");
        });
    }
}
