
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ISnackbarFooter

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    // shadcn toast footer - new-york-v4 toast/sonner style
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        attributes.TryAdd("data-slot", "toast-footer");
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-snackbar-footer");
            AppendClass(ref cls, "flex items-center p-4 border-t");
        });
    }
}
