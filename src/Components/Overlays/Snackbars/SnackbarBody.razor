
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ISnackbarBody

<div @attributes="BuildAttributes()">
    @ChildContent
</div>

@code {
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        attributes.TryAdd("data-slot", "toast-description");
        // shadcn toast description - new-york-v4 toast/sonner style
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-snackbar-body");
            AppendClass(ref cls, "text-muted-foreground p-4 text-sm");
        });
    }
}

