@using Soenneker.Blazor.Extensions.EventCallback

@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element

<div @onclick="HandleItemClick" @onkeydown="HandleKeyDown" @onkeydown:preventDefault @attributes="BuildAttributes()" role="option">
    @ChildContent
</div>

@code {
    [Parameter]
    public EventCallback OnSelect { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    private async Task HandleItemClick(MouseEventArgs _)
    {
        if (!Disabled && OnSelect.HasDelegate)
            await OnSelect.InvokeAsync();
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" || e.Key == " ")
        {
            if (!Disabled && OnSelect.HasDelegate)
                await OnSelect.InvokeAsync();
        }
    }

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        base.BuildAttributesCore(attributes);

        attributes["data-slot"] = "command-item";
        attributes["tabindex"] = Disabled ? -1 : 0;
        if (Disabled)
            attributes["aria-disabled"] = "true";

        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-command-item");
            AppendClass(ref cls, "relative flex cursor-default items-center gap-2 rounded-sm px-2 py-2 text-sm outline-none select-none");
            AppendClass(ref cls, "aria-selected:bg-accent aria-selected:text-accent-foreground");
            AppendClass(ref cls, "data-[disabled=true]:pointer-events-none data-[disabled=true]:opacity-50");
            AppendClass(ref cls, "hover:bg-accent hover:text-accent-foreground");
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        base.ComputeRenderKeyCore(ref hc);
        hc.Add(Disabled);
    }
}
