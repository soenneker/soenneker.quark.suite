@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IModalTitle

<Heading Scale="@Scale" @attributes="BuildAttributes()">
    @ChildContent
</Heading>

@code {
    /// <summary>
    /// Gets or sets the scale/size of the modal title.
    /// </summary>
    [Parameter]
    public CssValue<ScaleBuilder>? Scale { get; set; } = Quark.Scale.Is5;

    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-modal-title");
            AppendClass(ref cls, "text-lg font-semibold leading-none tracking-tight");
        });
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        AddIf(ref hc, Scale);
    }
}
