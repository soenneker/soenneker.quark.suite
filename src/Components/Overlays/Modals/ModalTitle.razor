@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements IModalTitle

<Heading Scale="@Scale" @attributes="BuildAttributes()">
    @ChildContent
</Heading>

@code {
    public override string? ThemeKey { get; set; } = "ModalTitle";

    [Parameter]
    public CssValue<ScaleBuilder>? Scale { get; set; } = Quark.Scale.Is5;

    protected override Dictionary<string, object> BuildAttributes()
    {
        var attributes = base.BuildAttributes();
        BuildClassAttribute(attributes, (ref PooledStringBuilder cls) => AppendClass(ref cls, "modal-title"));
        return attributes;
    }
}
