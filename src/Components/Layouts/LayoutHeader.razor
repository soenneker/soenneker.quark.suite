
@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ILayoutHeader

<header @attributes="BuildAttributes()">
	@ChildContent
</header>

@code {
    /// <summary>
    /// Gets or sets whether the header should be fixed.
    /// </summary>
    [Parameter]
    public bool Fixed { get; set; }

	protected override Dictionary<string, object> BuildAttributes()
	{
		var attributes = base.BuildAttributes();
		
		// Let inner content (eg. `Bar`) render the actual navbar. Keep this as a simple sticky container.
		// Using sticky-top ensures the header participates in normal flow and pushes content down.
		// Ensure full-viewport width so the bar spans entirely on mobile.
		BuildClassAttribute(attributes, (ref cls) =>
		{
			AppendClass(ref cls, "q-layout-header");
			AppendClass(ref cls, "bg-body");
			AppendClass(ref cls, "shadow-sm");
			AppendClass(ref cls, "sticky-top");
			AppendClass(ref cls, "w-100");
		});
		
		return attributes;
	}
}
