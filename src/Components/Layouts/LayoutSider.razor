
@inherits Soenneker.Quark.Element

<aside @attributes="BuildAttributes()" >
    @ChildContent
</aside>

@code {
    public override string? ThemeKey { get; set; } = "LayoutSider";

    [Parameter]
    public bool Collapsible { get; set; }

    protected override Dictionary<string, object> BuildAttributes()
    {
        Dictionary<string, object> attributes = base.BuildAttributes();
        AppendToClassAttr(attributes, "border-end bg-body position-sticky top-0");

        if (Collapsible)
            /* placeholder for user-driven collapse handling via Class */
            _ = 0;

        // sensible default width on larger screens
        AppendStyleDeclAttr(attributes, "min-width: 240px");
        AppendStyleDeclAttr(attributes, "max-width: 320px");
        AppendStyleDeclAttr(attributes, "height: 100vh");

        return attributes;
    }

}
