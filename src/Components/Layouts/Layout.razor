@namespace Soenneker.Quark
@inherits Soenneker.Quark.Element
@implements ILayout

<CascadingValue Value="@this" IsFixed="true" >
    <CascadingValue Name="VerticalBarVisible" Value="@_sidebarVisible" IsFixed="true">
        <CascadingValue Name="VerticalBarVisibleChanged" Value="@OnSidebarVisibleChanged" IsFixed="true">
                <section @attributes="BuildAttributes()" >
                @if (Loading)
                {
                    @if (LoadingTemplate is not null)
                    {
                        @LoadingTemplate
                    }
                    else
                    {
                        <div @attributes="BuildLoadingAttributes()" ></div>
                    }
                }
                @ChildContent
                </section>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>

@code {
    /// <summary>
    /// Gets or sets whether the layout should include a sidebar.
    /// </summary>
    [Parameter]
    public bool Sider { get; set; }

    /// <summary>
    /// Gets or sets whether the layout is in a loading state.
    /// </summary>
    [Parameter]
    public bool Loading { get; set; }

    /// <summary>
    /// Gets or sets the CSS class for the loading overlay.
    /// </summary>
    [Parameter]
    public string? LoadingClass { get; set; }

    /// <summary>
    /// Gets or sets the template for the loading overlay.
    /// </summary>
    [Parameter]
    public RenderFragment? LoadingTemplate { get; set; }


    private bool _sidebarVisible = true;

    private bool _initialized;

    // shadcn layout/sidebar shell - new-york-v4 ui/sidebar.tsx
    protected override void BuildAttributesCore(Dictionary<string, object> attributes)
    {
        BuildClassAttribute(attributes, (ref cls) =>
        {
            AppendClass(ref cls, "q-layout");
            AppendClass(ref cls, "d-flex");
            if (!Sider)
                AppendClass(ref cls, "flex-column");
            AppendClass(ref cls, "min-vh-100");
            AppendClass(ref cls, "w-100");
        });

        // a11y: reflect busy state when loading overlay shown
        SetOrRemove(attributes, "aria-busy", Loading, "true");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
        }

        await base.OnAfterRenderAsync(firstRender);
    }

    private Dictionary<string, object> BuildLoadingAttributes()
    {
        var attributes = new Dictionary<string, object>();
        
        if (LoadingClass.IsNullOrWhiteSpace())
        {
            BuildClassAttribute(attributes, (ref cls) =>
            {
                AppendClass(ref cls, "position-fixed");
                AppendClass(ref cls, "top-0");
                AppendClass(ref cls, "start-0");
                AppendClass(ref cls, "w-100");
                AppendClass(ref cls, "h-100");
                AppendClass(ref cls, "bg-body");
                AppendClass(ref cls, "bg-opacity-75");
            });
        }
        else
        {
            BuildClassAttribute(attributes, (ref cls) => AppendClass(ref cls, LoadingClass!));
        }

        return attributes;
    }

    private void OnSidebarVisibleChanged(bool visible)
    {
        _sidebarVisible = visible;
        InvalidateRender();
        Refresh();
    }

    protected override void ComputeRenderKeyCore(ref HashCode hc)
    {
        hc.Add(Sider);
        hc.Add(Loading);
        hc.Add(LoadingClass);
        hc.Add(LoadingTemplate);
    }
}